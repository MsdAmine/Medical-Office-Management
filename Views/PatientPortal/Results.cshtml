@model PatientPortalViewModel
@{
    ViewData["Title"] = "Résultats";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50/50">
    <div class="bg-gradient-to-r from-purple-600 via-violet-600 to-indigo-700 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                <div>
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="h-14 w-14 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
                            <i class="fas fa-flask text-2xl"></i>
                        </div>
                        <div>
                            <p class="text-purple-100 text-sm font-medium uppercase tracking-wider">Résultats</p>
                            <h1 class="text-3xl md:text-4xl font-bold mt-1">Analyses et tests</h1>
                        </div>
                    </div>
                    <p class="text-purple-100 max-w-2xl">
                        Bonjour, @Model.PatientDisplayName. Accédez à vos analyses de laboratoire et aux comptes rendus associés.
                    </p>
                </div>

                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-5 border border-white/10">
                    <div class="flex items-center space-x-4">
                        <div>
                            <div class="text-sm text-purple-100 uppercase font-semibold tracking-wide">Résultats disponibles</div>
                            <div class="text-3xl font-bold">@Model.LabResults.Count()</div>
                        </div>
                        <div class="h-12 w-12 rounded-xl bg-white text-purple-700 flex items-center justify-center shadow-inner">
                            <i class="fas fa-vials"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 -mt-6">
        <div class="bg-white rounded-3xl shadow-xl border border-slate-100 overflow-hidden">
            <div class="bg-gradient-to-r from-purple-50 to-violet-50 px-6 py-5 border-b border-slate-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="h-12 w-12 rounded-xl bg-gradient-to-r from-purple-500 to-violet-600 flex items-center justify-center">
                            <i class="fas fa-flask text-white"></i>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold text-slate-900">Résultats</h2>
                            <p class="text-sm text-slate-600">Analyses et tests</p>
                        </div>
                    </div>
                    <span class="text-xs font-semibold bg-purple-100 text-purple-800 px-3 py-1.5 rounded-full">
                        @Model.LabResults.Count()
                    </span>
                </div>
            </div>

            <div class="p-6">
                @if (!Model.LabResults.Any())
                {
                    <div class="text-center py-6">
                        <i class="fas fa-microscope text-slate-300 text-3xl mb-3"></i>
                        <p class="text-slate-500 text-sm">Aucun résultat disponible</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        @foreach (var result in Model.LabResults)
                        {
                            <div class="border border-purple-100 rounded-2xl p-4 bg-purple-50/50 hover:bg-white transition">
                                <div class="flex items-start justify-between mb-3">
                                    <div class="flex-1">
                                        <h3 class="font-bold text-slate-900">@result.Title</h3>
                                        <p class="text-sm text-purple-700 font-medium">
                                            Demandé par @result.OrderedBy
                                        </p>
                                    </div>
                                    <span class="text-xs font-semibold bg-white text-purple-700 px-2.5 py-1 rounded-full border border-purple-200">
                                        @result.Status
                                    </span>
                                </div>
                                <div class="text-sm text-slate-600 mb-3">@result.Notes</div>
                                <div class="flex items-center text-xs text-slate-500">
                                    <i class="far fa-calendar mr-1"></i>
                                    <span>@result.Date.ToString("dd MMM yyyy")</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
