@model PatientPortalViewModel
@{
    ViewData["Title"] = "Traitements";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50/50">
    <div class="bg-gradient-to-r from-emerald-600 to-green-700 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                <div>
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="h-14 w-14 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
                            <i class="fas fa-pills text-2xl"></i>
                        </div>
                        <div>
                            <p class="text-emerald-100 text-sm font-medium uppercase tracking-wider">Traitements</p>
                            <h1 class="text-3xl md:text-4xl font-bold mt-1">Suivi de vos prescriptions</h1>
                        </div>
                    </div>
                    <p class="text-emerald-100 max-w-2xl">
                        Bonjour, @Model.PatientDisplayName. Retrouvez vos traitements actifs, leurs notes et les m√©decins prescripteurs.
                    </p>
                </div>

                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-5 border border-white/10">
                    <div class="flex items-center space-x-4">
                        <div>
                            <div class="text-sm text-emerald-100 uppercase font-semibold tracking-wide">Prescriptions en cours</div>
                            <div class="text-3xl font-bold">@Model.Treatments.Count()</div>
                        </div>
                        <div class="h-12 w-12 rounded-xl bg-white text-emerald-700 flex items-center justify-center shadow-inner">
                            <i class="fas fa-notes-medical"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 -mt-6">
        <div class="bg-white rounded-3xl shadow-xl border border-slate-100 overflow-hidden">
            <div class="bg-gradient-to-r from-emerald-50 to-green-50 px-6 py-5 border-b border-slate-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="h-12 w-12 rounded-xl bg-gradient-to-r from-emerald-500 to-green-600 flex items-center justify-center">
                            <i class="fas fa-prescription-bottle-alt text-white"></i>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold text-slate-900">Traitements</h2>
                            <p class="text-sm text-slate-600">Prescriptions actuelles</p>
                        </div>
                    </div>
                    <span class="text-xs font-semibold bg-emerald-100 text-emerald-800 px-3 py-1.5 rounded-full">
                        @Model.Treatments.Count()
                    </span>
                </div>
            </div>

            <div class="p-6">
                @if (!Model.Treatments.Any())
                {
                    <div class="text-center py-6">
                        <i class="fas fa-pills text-slate-300 text-3xl mb-3"></i>
                        <p class="text-slate-500 text-sm">Aucun traitement en cours</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        @foreach (var treatment in Model.Treatments)
                        {
                            <div class="border border-emerald-100 rounded-2xl p-4 bg-emerald-50/50">
                                <div class="flex items-start justify-between mb-3">
                                    <div class="flex-1">
                                        <h3 class="font-bold text-slate-900">@treatment.Title</h3>
                                        <p class="text-sm text-emerald-700 font-medium">
                                            Prescrit par @treatment.PrescribedBy
                                        </p>
                                    </div>
                                    <span class="text-xs font-semibold bg-white text-emerald-700 px-2.5 py-1 rounded-full border border-emerald-200">
                                        @treatment.Status
                                    </span>
                                </div>
                                <div class="text-sm text-slate-600 mb-3">@treatment.Notes</div>
                                <div class="flex items-center text-xs text-slate-500">
                                    <i class="far fa-calendar mr-1"></i>
                                    <span>@treatment.Date.ToString("dd MMM yyyy")</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
