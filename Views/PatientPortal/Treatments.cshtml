@model PatientPortalViewModel
@{
    ViewData["Title"] = "Treatments";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Treatments</h1>
            <p class="text-slate-600 mt-2">Hello, @Model.PatientDisplayName. View your active treatments and their notes.</p>
        </div>
        <div class="glass-card p-4 rounded-xl">
            <div class="text-sm text-slate-500">Active Prescriptions</div>
            <div class="text-3xl font-bold text-slate-900">@Model.Treatments.Count()</div>
        </div>
    </div>

    <div class="glass-card rounded-xl overflow-hidden">
        <div class="p-6 border-b border-slate-200">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-lg font-semibold text-slate-900">Treatments</h2>
                    <p class="text-sm text-slate-600">Current prescriptions</p>
                </div>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-slate-100 text-slate-700">
                    @Model.Treatments.Count()
                </span>
            </div>
        </div>

        <div class="p-6">
            @if (!Model.Treatments.Any())
            {
                <div class="text-center py-8">
                    <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                        <i class="fas fa-pills text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-slate-900 mb-2">No Active Treatments</h3>
                    <p class="text-slate-600">Your prescriptions will appear here</p>
                </div>
            }
            else
            {
                <div class="space-y-3">
                    @foreach (var treatment in Model.Treatments)
                    {
                        <div class="border border-slate-200 rounded-lg p-4 bg-slate-50 hover:bg-white transition-colors">
                            <div class="flex items-start justify-between mb-2">
                                <div class="flex-1">
                                    <h3 class="font-semibold text-slate-900">@treatment.Title</h3>
                                    <p class="text-sm text-slate-600">
                                        Prescribed by @treatment.PrescribedBy
                                    </p>
                                </div>
                                <span class="text-xs font-medium px-2 py-1 rounded-full bg-slate-100 text-slate-700">
                                    @treatment.Status
                                </span>
                            </div>
                            <div class="text-sm text-slate-600 mb-2">@treatment.Notes</div>
                            <div class="flex items-center text-xs text-slate-500">
                                <i class="far fa-calendar mr-1"></i>
                                <span>@treatment.Date.ToString("dd MMM yyyy")</span>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
