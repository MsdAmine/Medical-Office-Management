@model PatientPortalViewModel
@{
    ViewData["Title"] = "Request an Appointment";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Request an Appointment</h1>
            <p class="text-slate-600 mt-2">Submit an appointment request online</p>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
    {
        <div class="glass-card rounded-xl p-4 border-l-4 border-emerald-500 bg-emerald-50">
            <div class="flex items-center space-x-3">
                <i class="fas fa-check-circle text-emerald-600"></i>
                <span class="font-medium text-emerald-900">@Model.StatusMessage</span>
            </div>
        </div>
    }

    <div class="glass-card rounded-xl overflow-hidden">
        <div class="p-6 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Request an Appointment</h2>
                <p class="text-sm text-slate-600">Submit an appointment request online</p>
            </div>
        </div>

        <div class="p-6">
            <form asp-action="RequestAppointment" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
                <div class="space-y-2">
                    <label asp-for="Request.MedecinId" class="block text-sm font-medium text-slate-700">
                        Doctor
                    </label>
                    <select asp-for="Request.MedecinId" asp-items="Model.MedecinOptions"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select a doctor</option>
                    </select>
                    <span asp-validation-for="Request.MedecinId" class="text-red-600 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="space-y-2">
                        <label asp-for="Request.PreferredStart" class="block text-sm font-medium text-slate-700">
                            Start
                        </label>
                        <input asp-for="Request.PreferredStart" type="datetime-local"
                            class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Request.PreferredStart" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="space-y-2">
                        <label asp-for="Request.PreferredEnd" class="block text-sm font-medium text-slate-700">
                            End
                        </label>
                        <input asp-for="Request.PreferredEnd" type="datetime-local"
                            class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Request.PreferredEnd" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="space-y-2">
                    <label asp-for="Request.Reason" class="block text-sm font-medium text-slate-700">
                        Reason for visit
                    </label>
                    <textarea asp-for="Request.Reason" rows="3"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Describe the reason for your visit"></textarea>
                    <span asp-validation-for="Request.Reason" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit"
                    class="w-full gradient-primary text-white px-4 py-2 rounded-lg font-medium hover:shadow-lg transition-shadow">
                    <i class="fas fa-paper-plane mr-2"></i>
                    Send Request
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
