@model PatientPortalViewModel
@{
    ViewData["Title"] = "Demander un rendez-vous";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50/50">
    <div class="bg-gradient-to-r from-blue-700 via-indigo-700 to-purple-700 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                <div>
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="h-14 w-14 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
                            <i class="fas fa-calendar-plus text-2xl"></i>
                        </div>
                        <div>
                            <p class="text-indigo-100 text-sm font-medium uppercase tracking-wider">Nouvelle demande</p>
                            <h1 class="text-3xl md:text-4xl font-bold mt-1">Proposer un rendez-vous</h1>
                        </div>
                    </div>
                    <p class="text-indigo-100 max-w-2xl">
                        Bonjour, @Model.PatientDisplayName. Soumettez vos disponibilités et le motif de votre visite pour qu'un membre de l'équipe valide votre créneau.
                    </p>
                </div>

                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-5 border border-white/10">
                    <div class="text-sm text-indigo-100 uppercase font-semibold tracking-wide mb-1">Progression</div>
                    <div class="flex items-center space-x-3">
                        <div class="h-12 w-12 rounded-xl bg-white text-indigo-700 flex items-center justify-center shadow-inner">
                            <i class="fas fa-file-signature"></i>
                        </div>
                        <div class="text-lg font-semibold">Remplissez le formulaire ci-dessous</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 -mt-6">
        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="mb-8 bg-gradient-to-r from-emerald-500 to-green-500 text-white rounded-2xl p-5 shadow-lg">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-check-circle text-xl"></i>
                    <span class="font-medium">@Model.StatusMessage</span>
                </div>
            </div>
        }

        <div class="bg-gradient-to-br from-white to-blue-50 rounded-3xl shadow-xl border border-blue-100 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-6 py-5">
                <div class="flex items-center space-x-3">
                    <div class="h-12 w-12 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center">
                        <i class="fas fa-calendar-plus text-white"></i>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-white">Demander un rendez-vous</h2>
                        <p class="text-blue-100 text-sm">Soumettez un créneau en ligne</p>
                    </div>
                </div>
            </div>

            <div class="p-6">
                <form asp-action="RequestAppointment" method="post" class="space-y-5">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
                    <div class="space-y-2">
                        <label asp-for="Request.MedecinId" class="block text-sm font-semibold text-slate-900">
                            <i class="fas fa-user-md text-blue-500 mr-2"></i>
                            Médecin
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-search text-slate-400"></i>
                            </div>
                            <select asp-for="Request.MedecinId" asp-items="Model.MedecinOptions"
                                    class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition appearance-none bg-white">
                                <option value="">Choisissez un médecin</option>
                            </select>
                        </div>
                        <span asp-validation-for="Request.MedecinId" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label asp-for="Request.PreferredStart" class="block text-sm font-semibold text-slate-900">
                                <i class="far fa-calendar text-blue-500 mr-2"></i>
                                Début
                            </label>
                            <input asp-for="Request.PreferredStart" type="datetime-local"
                                   class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
                            <span asp-validation-for="Request.PreferredStart" class="text-red-600 text-sm"></span>
                        </div>
                        <div class="space-y-2">
                            <label asp-for="Request.PreferredEnd" class="block text-sm font-semibold text-slate-900">
                                <i class="far fa-calendar text-blue-500 mr-2"></i>
                                Fin
                            </label>
                            <input asp-for="Request.PreferredEnd" type="datetime-local"
                                   class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
                            <span asp-validation-for="Request.PreferredEnd" class="text-red-600 text-sm"></span>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="Request.Reason" class="block text-sm font-semibold text-slate-900">
                            <i class="fas fa-comment-medical text-blue-500 mr-2"></i>
                            Motif de la visite
                        </label>
                        <textarea asp-for="Request.Reason" rows="3"
                                  class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                  placeholder="Décrivez le motif de votre visite"></textarea>
                        <span asp-validation-for="Request.Reason" class="text-red-600 text-sm"></span>
                    </div>

                    <button type="submit"
                            class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3.5 rounded-xl transition duration-300 shadow-lg hover:shadow-xl flex items-center justify-center">
                        <i class="fas fa-paper-plane mr-3"></i>
                        Envoyer la demande
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
