@model PatientPortalViewModel
@{
    ViewData["Title"] = "My Patient Portal";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">My Patient Portal</h1>
            <p class="text-slate-600 mt-2">Hello, @Model.PatientDisplayName. Manage your appointments, view your treatments and results.</p>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
    {
        <div class="glass-card rounded-xl p-4 border-l-4 border-emerald-500 bg-emerald-50">
            <div class="flex items-center space-x-3">
                <i class="fas fa-check-circle text-emerald-600"></i>
                <span class="font-medium text-emerald-900">@Model.StatusMessage</span>
            </div>
        </div>
    }

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="glass-card p-4 rounded-xl">
            <p class="text-sm text-slate-500">Upcoming Appointments</p>
            <p class="text-3xl font-bold text-slate-900">@Model.UpcomingAppointments.Count()</p>
            <p class="text-xs text-blue-600 mt-1">Scheduled slots</p>
        </div>
        <div class="glass-card p-4 rounded-xl">
            <p class="text-sm text-slate-500">Treatments</p>
            <p class="text-3xl font-bold text-slate-900">@Model.Treatments.Count()</p>
            <p class="text-xs text-slate-600 mt-1">Active prescriptions</p>
        </div>
        <div class="glass-card p-4 rounded-xl">
            <p class="text-sm text-slate-500">Results</p>
            <p class="text-3xl font-bold text-slate-900">@Model.LabResults.Count()</p>
            <p class="text-xs text-slate-600 mt-1">Available tests</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Appointments & History -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Upcoming Appointments -->
            <div class="glass-card rounded-xl overflow-hidden">
                <div class="p-6 border-b border-slate-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-900">Upcoming Appointments</h2>
                            <p class="text-sm text-slate-600">Your scheduled appointments</p>
                        </div>
                        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                            @Model.UpcomingAppointments.Count()
                        </span>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (!Model.UpcomingAppointments.Any())
                    {
                        <div class="text-center py-8">
                            <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                                <i class="fas fa-calendar-plus text-2xl"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-slate-900 mb-2">No Appointments Scheduled</h3>
                            <p class="text-slate-600">Request a new appointment using the dedicated tab</p>
                        </div>
                    }
                    else
                    {
                        <div class="space-y-3">
                            @foreach (var appt in Model.UpcomingAppointments)
                            {
                                <div class="border border-slate-200 rounded-lg p-4 hover:bg-slate-50 transition-colors">
                                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-3 mb-2">
                                                <div class="h-8 w-8 rounded-lg bg-slate-100 flex items-center justify-center">
                                                    <i class="fas fa-user-md text-slate-600 text-sm"></i>
                                                </div>
                                                <div>
                                                    <h3 class="font-semibold text-slate-900">@appt.MedecinName</h3>
                                                    <p class="text-sm text-slate-600">@appt.Reason</p>
                                                </div>
                                            </div>
                                            <div class="flex items-center space-x-6 text-sm text-slate-600 ml-11">
                                                <span class="flex items-center">
                                                    <i class="far fa-calendar-alt text-slate-400 mr-2"></i>
                                                    @appt.ScheduledFor.ToString("dd MMM yyyy")
                                                </span>
                                                <span class="flex items-center">
                                                    <i class="far fa-clock text-slate-400 mr-2"></i>
                                                    @appt.ScheduledFor.ToString("HH:mm") - @appt.EndsAt.ToString("HH:mm")
                                                </span>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-3">
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium @GetStatusBadgeClass(appt.Status)">
                                                @appt.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Appointment History -->
            <div class="glass-card rounded-xl overflow-hidden">
                <div class="p-6 border-b border-slate-200">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Visit History</h2>
                        <p class="text-sm text-slate-600">Your past appointments</p>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (!Model.PastAppointments.Any())
                    {
                        <div class="text-center py-8">
                            <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                                <i class="fas fa-file-medical text-2xl"></i>
                            </div>
                            <h3 class="text-lg font-semibold text-slate-900 mb-2">No History</h3>
                            <p class="text-slate-600">Your past visits will appear here</p>
                        </div>
                    }
                    else
                    {
                        <div class="space-y-3">
                            @foreach (var appt in Model.PastAppointments)
                            {
                                <div class="border border-slate-200 rounded-lg p-4 hover:bg-slate-50 transition-colors">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-3">
                                                <div class="h-8 w-8 rounded-lg bg-slate-100 flex items-center justify-center">
                                                    <i class="fas fa-user-md text-slate-600 text-sm"></i>
                                                </div>
                                                <div>
                                                    <h4 class="font-medium text-slate-900">@appt.MedecinName</h4>
                                                    <p class="text-sm text-slate-600">@appt.Reason</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-4">
                                            <span class="text-sm text-slate-500">@appt.ScheduledFor.ToString("dd MMM yyyy")</span>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700">
                                                @appt.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Request, Treatments, Results -->
        <div class="space-y-6">
            <!-- Request Appointment -->
            <div class="glass-card rounded-xl overflow-hidden">
                <div class="p-6 border-b border-slate-200">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Request an Appointment</h2>
                        <p class="text-sm text-slate-600">Submit an appointment request online</p>
                    </div>
                </div>
                
                <div class="p-6">
                    <form asp-action="RequestAppointment" method="post" class="space-y-4">
                        <div class="space-y-2">
                            <label asp-for="Request.MedecinId" class="block text-sm font-medium text-slate-700">
                                Médecin
                            </label>
                            <select asp-for="Request.MedecinId" asp-items="Model.MedecinOptions"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Choisissez un médecin</option>
                            </select>
                            <span asp-validation-for="Request.MedecinId" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label asp-for="Request.PreferredStart" class="block text-sm font-medium text-slate-700">
                                    Start
                                </label>
                                <input asp-for="Request.PreferredStart" type="datetime-local" 
                                       class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                                <span asp-validation-for="Request.PreferredStart" class="text-red-600 text-sm"></span>
                            </div>
                            <div class="space-y-2">
                                <label asp-for="Request.PreferredEnd" class="block text-sm font-medium text-slate-700">
                                    End
                                </label>
                                <input asp-for="Request.PreferredEnd" type="datetime-local" 
                                       class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                                <span asp-validation-for="Request.PreferredEnd" class="text-red-600 text-sm"></span>
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="Request.Reason" class="block text-sm font-medium text-slate-700">
                                Reason for visit
                            </label>
                            <textarea asp-for="Request.Reason" rows="3" 
                                      class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                      placeholder="Describe the reason for your visit"></textarea>
                            <span asp-validation-for="Request.Reason" class="text-red-600 text-sm"></span>
                        </div>

                        <button type="submit" 
                                class="w-full gradient-primary text-white px-4 py-2 rounded-lg font-medium hover:shadow-lg transition-shadow">
                            <i class="fas fa-paper-plane mr-2"></i>
                            Send Request
                        </button>
                    </form>
                </div>
            </div>

            <!-- Treatments -->
            <div class="glass-card rounded-xl overflow-hidden">
                <div class="p-6 border-b border-slate-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-900">Treatments</h2>
                            <p class="text-sm text-slate-600">Current prescriptions</p>
                        </div>
                        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-slate-100 text-slate-700">
                            @Model.Treatments.Count()
                        </span>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (!Model.Treatments.Any())
                    {
                        <div class="text-center py-6">
                            <div class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-slate-100 text-slate-400 mb-3">
                                <i class="fas fa-pills"></i>
                            </div>
                            <p class="text-slate-500 text-sm">No active treatments</p>
                        </div>
                    }
                    else
                    {
                        <div class="space-y-3">
                            @foreach (var treatment in Model.Treatments)
                            {
                                <div class="border border-slate-200 rounded-lg p-4 bg-slate-50">
                                    <div class="flex items-start justify-between mb-2">
                                        <div class="flex-1">
                                            <h3 class="font-semibold text-slate-900">@treatment.Title</h3>
                                            <p class="text-sm text-slate-600">
                                                Prescribed by @treatment.PrescribedBy
                                            </p>
                                        </div>
                                        <span class="text-xs font-medium px-2 py-1 rounded-full bg-slate-100 text-slate-700">
                                            @treatment.Status
                                        </span>
                                    </div>
                                    <div class="text-sm text-slate-600 mb-2">@treatment.Notes</div>
                                    <div class="flex items-center text-xs text-slate-500">
                                        <i class="far fa-calendar mr-1"></i>
                                        <span>@treatment.Date.ToString("dd MMM yyyy")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Lab Results -->
            <div class="glass-card rounded-xl overflow-hidden">
                <div class="p-6 border-b border-slate-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-900">Results</h2>
                            <p class="text-sm text-slate-600">Lab tests and analyses</p>
                        </div>
                        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-slate-100 text-slate-700">
                            @Model.LabResults.Count()
                        </span>
                    </div>
                </div>
                
                <div class="p-6">
                    @if (!Model.LabResults.Any())
                    {
                        <div class="text-center py-6">
                            <div class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-slate-100 text-slate-400 mb-3">
                                <i class="fas fa-microscope"></i>
                            </div>
                            <p class="text-slate-500 text-sm">No results available</p>
                        </div>
                    }
                    else
                    {
                        <div class="space-y-3">
                            @foreach (var result in Model.LabResults)
                            {
                                <div class="border border-slate-200 rounded-lg p-4 bg-slate-50 hover:bg-white transition-colors">
                                    <div class="flex items-start justify-between mb-2">
                                        <div class="flex-1">
                                            <h3 class="font-semibold text-slate-900">@result.Title</h3>
                                            <p class="text-sm text-slate-600">
                                                Ordered by @result.OrderedBy
                                            </p>
                                        </div>
                                        <span class="text-xs font-medium px-2 py-1 rounded-full bg-slate-100 text-slate-700">
                                            @result.Status
                                        </span>
                                    </div>
                                    <div class="text-sm text-slate-600 mb-2">@result.Notes</div>
                                    <div class="flex items-center text-xs text-slate-500">
                                        <i class="far fa-calendar mr-1"></i>
                                        <span>@result.Date.ToString("dd MMM yyyy")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        if (string.IsNullOrWhiteSpace(status))
            return "bg-slate-100 text-slate-700";

        return status.ToLowerInvariant() switch
        {
            "pending approval" => "bg-amber-100 text-amber-700",
            "completed" => "bg-emerald-100 text-emerald-700",
            "cancelled" => "bg-red-100 text-red-700",
            "confirmed" => "bg-blue-100 text-blue-700",
            "in progress" => "bg-indigo-100 text-indigo-700",
            _ => "bg-slate-100 text-slate-700"
        };
    }
}
