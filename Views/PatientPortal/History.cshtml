@model PatientPortalViewModel
@{
    ViewData["Title"] = "Visit History";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Visit History</h1>
            <p class="text-slate-600 mt-2">Hello, @Model.PatientDisplayName. View the details of your completed appointments.</p>
        </div>
        <div class="glass-card p-4 rounded-xl">
            <div class="text-sm text-slate-500">Past Appointments</div>
            <div class="text-3xl font-bold text-slate-900">@Model.PastAppointments.Count()</div>
        </div>
    </div>

    <div class="glass-card rounded-xl overflow-hidden">
        <div class="p-6 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Visit History</h2>
                <p class="text-sm text-slate-600">Your past appointments</p>
            </div>
        </div>

        <div class="p-6">
            @if (!Model.PastAppointments.Any())
            {
                <div class="text-center py-8">
                    <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                        <i class="fas fa-file-medical text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-slate-900 mb-2">No History</h3>
                    <p class="text-slate-600">Your past visits will appear here</p>
                </div>
            }
            else
            {
                <div class="space-y-3">
                    @foreach (var appt in Model.PastAppointments)
                    {
                        <div class="border border-slate-200 rounded-lg p-4 hover:bg-slate-50 transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3">
                                        <div class="h-8 w-8 rounded-lg bg-slate-100 flex items-center justify-center">
                                            <i class="fas fa-user-md text-slate-600 text-sm"></i>
                                        </div>
                                        <div>
                                            <h4 class="font-medium text-slate-900">@appt.MedecinName</h4>
                                            <p class="text-sm text-slate-600">@appt.Reason</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-4">
                                    <span class="text-sm text-slate-500">@appt.ScheduledFor.ToString("dd MMM yyyy")</span>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700">
                                        @appt.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
