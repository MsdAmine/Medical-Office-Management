@model PatientPortalViewModel
@{
    ViewData["Title"] = "Historique des visites";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50/50">
    @await Html.PartialAsync("_PatientPortalHeader", Model)

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 -mt-6">
        <div class="bg-white rounded-3xl shadow-xl border border-slate-100 overflow-hidden">
            <div class="px-6 py-5 border-b border-slate-200">
                <div class="flex items-center space-x-3">
                    <div class="h-12 w-12 rounded-xl bg-gradient-to-r from-slate-600 to-slate-700 flex items-center justify-center">
                        <i class="fas fa-history text-white"></i>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-slate-900">Historique des visites</h2>
                        <p class="text-sm text-slate-600">Vos rendez-vous passés</p>
                    </div>
                </div>
            </div>

            <div class="p-6">
                @if (!Model.PastAppointments.Any())
                {
                    <div class="text-center py-8">
                        <div class="h-20 w-20 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-file-medical text-slate-400 text-2xl"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-slate-900 mb-2">Aucun historique</h3>
                        <p class="text-slate-600">Vos visites passées apparaîtront ici</p>
                    </div>
                }
                else
                {
                    <div class="space-y-3">
                        @foreach (var appt in Model.PastAppointments)
                        {
                            <div class="border border-slate-200 rounded-xl p-4 hover:bg-slate-50 transition">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3">
                                            <div class="h-8 w-8 rounded-lg bg-slate-100 flex items-center justify-center">
                                                <i class="fas fa-user-md text-slate-600 text-sm"></i>
                                            </div>
                                            <div>
                                                <h4 class="font-medium text-slate-900">@appt.MedecinName</h4>
                                                <p class="text-sm text-slate-600">@appt.Reason</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-4">
                                        <span class="text-sm text-slate-500">@appt.ScheduledFor.ToString("dd MMM yyyy")</span>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700">
                                            @appt.Status
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
