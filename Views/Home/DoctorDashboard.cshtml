@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="space-y-6 p-6">
    @* En-tête de bienvenue personnalisé *@
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Welcome back, Dr. @ViewBag.DoctorName</h1>
            <p class="text-sm text-gray-500 mt-1">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</p>
        </div>
    </div>

    @* Statistiques du Médecin Connecté *@
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm border-l-4 border-blue-500">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wider">My Appointments Today</div>
            <div class="text-3xl font-bold text-gray-900 mt-2">@ViewBag.NbRendezVous</div>
        </div>
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm border-l-4 border-purple-500">
            <div class="text-sm font-medium text-gray-500 uppercase tracking-wider">New Messages</div>
            <div class="text-3xl font-bold text-gray-900 mt-2">7</div>
        </div>
    </div>

    @* Actions Rapides *@
    <h2 class="text-lg font-semibold text-gray-800 mt-8">Quick Management</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="@Url.Action("Index", "Patients")" class="flex items-center p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-all">
            <div class="p-3 bg-green-100 rounded-lg mr-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
            </div>
            <span class="font-medium text-gray-700">My Patients</span>
        </a>

        <a href="@Url.Action("Index", "Appointments")" class="flex items-center p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-all">
            <div class="p-3 bg-blue-100 rounded-lg mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            </div>
            <span class="font-medium text-gray-700">Schedule</span>
        </a>

        <a href="@Url.Action("Index", "MedicalRecords")" class="flex items-center p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-all">
            <div class="p-3 bg-purple-100 rounded-lg mr-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
            </div>
            <span class="font-medium text-gray-700">Medical Records</span>
        </a>
    </div>
</div>