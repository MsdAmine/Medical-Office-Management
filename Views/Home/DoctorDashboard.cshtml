@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Doctor Workspace</div>
            <div>
                <h1 class="page-title">Welcome back, Dr. @ViewBag.DoctorName</h1>
                <p class="page-subtitle">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</p>
            </div>
        </div>
        <div class="flex gap-3">
            <a href="@Url.Action("Index", "Appointments")" class="btn-primary">Today's schedule</a>
            <a href="@Url.Action("Index", "Patients")" class="btn-secondary">Patient list</a>
        </div>
    </div>

    <div class="stat-grid">
        <div class="stat-card">
            <div class="flex items-center justify-between">
                <p class="stat-label">My Appointments Today</p>
                <span class="badge-soft blue">Today</span>
            </div>
            <p class="stat-value">@ViewBag.NbRendezVous</p>
        </div>
        <div class="stat-card">
            <div class="flex items-center justify-between">
                <p class="stat-label">New Messages</p>
                <span class="badge-soft amber">Unread</span>
            </div>
            <p class="stat-value">7</p>
        </div>
    </div>

    <div class="space-y-4">
        <h2 class="section-heading">Quick Management</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="@Url.Action("Index", "Patients")" class="surface p-4 rounded-2xl flex items-center gap-4 hover:shadow-md transition-all">
                <div class="p-3 bg-green-50 text-green-700 rounded-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                </div>
                <div>
                    <div class="font-semibold text-slate-900">My Patients</div>
                    <p class="text-sm text-slate-500">Access active panels</p>
                </div>
            </a>

            <a href="@Url.Action("Index", "Appointments")" class="surface p-4 rounded-2xl flex items-center gap-4 hover:shadow-md transition-all">
                <div class="p-3 bg-blue-50 text-blue-700 rounded-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                </div>
                <div>
                    <div class="font-semibold text-slate-900">Schedule</div>
                    <p class="text-sm text-slate-500">Review upcoming visits</p>
                </div>
            </a>

            <a href="@Url.Action("Index", "MedicalRecords")" class="surface p-4 rounded-2xl flex items-center gap-4 hover:shadow-md transition-all">
                <div class="p-3 bg-amber-50 text-amber-700 rounded-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                </div>
                <div>
                    <div class="font-semibold text-slate-900">New Note</div>
                    <p class="text-sm text-slate-500">Document clinical updates</p>
                </div>
            </a>
        </div>
    </div>
</div>
