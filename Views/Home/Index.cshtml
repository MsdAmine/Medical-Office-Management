    <script>
        // Simple interactivity for the dashboard
        document.addEventListener('DOMContentLoaded', function() {
            // Heatmap cell hover effect
            const heatmapCells = document.querySelectorAll('.heatmap-cell');
            heatmapCells.forEach(cell => {
                cell.addEventListener('mouseenter', function() {
                    const intensity = this.classList.contains('bg-blue-800') ? 'Very High' :
                                    this.classList.contains('bg-blue-600') ? 'High' :
                                    this.classList.contains('bg-blue-300') ? 'Medium' :
                                    this.classList.contains('bg-blue-100') ? 'Low' : 'Empty';
                    this.setAttribute('title', `Utilization: ${intensity}`);
                });
            });
            
            // Quick action card hover effects
            const quickActions = document.querySelectorAll('a.group');
            quickActions.forEach(action => {
                action.addEventListener('mouseenter', function() {
                    const icon = this.querySelector('.fa-chevron-right');
                    if (icon) {
                        icon.classList.add('transform', 'translate-x-1');
                    }
                });
                
                action.addEventListener('mouseleave', function() {
                    const icon = this.querySelector('.fa-chevron-right');
                    if (icon) {
                        icon.classList.remove('transform', 'translate-x-1');
                    }
                });
            });
            
            // Time window adjustment
            const timeInputs = document.querySelectorAll('input[type="number"]');
            timeInputs.forEach(input => {
                input.addEventListener('change', function() {
                    if (parseInt(this.value) < parseInt(this.min)) this.value = this.min;
                    if (parseInt(this.value) > parseInt(this.max)) this.value = this.max;
                });
            });
        });
    </script>
