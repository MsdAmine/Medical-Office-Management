@using MedicalOfficeManagement.ViewModels.Dashboard
@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var access = AccessControl.GetCurrent();
}

<div class="page-shell">
    @* Section de bienvenue *@
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Dashboard</div>
            <div>
                <h1 class="page-title">Welcome back, @Model.UserDisplayName</h1>
                <p class="page-subtitle">@Model.Now.ToString("dddd, dd MMMM yyyy")</p>
            </div>
        </div>
        <div class="flex flex-wrap gap-3">
            <a href="/RendezVous" class="btn-secondary">View schedule</a>
            @if (access.CanCreatePatients)
            {
                <a href="/Patients/Create" class="btn-primary">Add patient</a>
            }
            else
            {
                <span class="btn-primary opacity-50 cursor-not-allowed" title="Patient creation available to clinical staff and admins">Add patient</span>
            }
        </div>
    </div>

    @* Grille des Statistiques *@
    <div class="stat-grid">
        @if (Model.Stats != null)
        {
            @foreach (var stat in Model.Stats)
            {
                <div class="stat-card">
                    <p class="stat-label">@stat.Label</p>
                    <p class="stat-value @stat.ColorClass">@stat.Value</p>
                </div>
            }
        }
        @* Carte fixe pour les messages *@
        <div class="stat-card">
            <p class="stat-label">MESSAGES</p>
            <p class="stat-value text-warning">7</p>
        </div>
    </div>

    <div class="surface mt-8 p-6 space-y-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
                <h2 class="section-heading text-lg font-bold text-slate-800">Clinic Workload Today</h2>
                <p class="text-sm text-slate-500">Heatmap of appointment density for @Model.Now.ToString("dddd")</p>
            </div>
            <form method="get" class="flex flex-wrap items-center gap-2 text-sm text-slate-600">
                <label class="font-semibold text-slate-700">Bucket</label>
                <select name="bucketMinutes" class="form-input w-28" onchange="this.form.submit()">
                    <option value="15" @(Model.SelectedBucketMinutes == 15 ? "selected" : "")>15 minutes</option>
                    <option value="30" @(Model.SelectedBucketMinutes == 30 ? "selected" : "")>30 minutes</option>
                    <option value="60" @(Model.SelectedBucketMinutes == 60 ? "selected" : "")>60 minutes</option>
                </select>
                <label class="font-semibold text-slate-700 ml-2">Hours</label>
                <input type="number" name="startHour" value="@Model.StartHour" class="form-input w-20" min="0" max="23" />
                <span class="px-1 text-slate-400">to</span>
                <input type="number" name="endHour" value="@Model.EndHour" class="form-input w-20" min="1" max="23" />
                <button type="submit" class="btn-secondary ml-2">Apply</button>
            </form>
        </div>
        @if (Model.ClinicHeatmap != null)
        {
            var clinicRow = Model.ClinicHeatmap.Rows.FirstOrDefault();
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                <div class="p-3 rounded-xl bg-slate-50 border border-slate-100">
                    <div class="text-slate-500">Total appointments</div>
                    <div class="text-lg font-semibold text-slate-900">@clinicRow?.TotalAppointments ?? 0</div>
                </div>
                <div class="p-3 rounded-xl bg-slate-50 border border-slate-100">
                    <div class="text-slate-500">Utilization</div>
                    <div class="text-lg font-semibold text-slate-900">@((clinicRow?.UtilizationPercent ?? 0).ToString("0"))%</div>
                </div>
                <div class="p-3 rounded-xl bg-slate-50 border border-slate-100">
                    <div class="text-slate-500">Peak</div>
                    <div class="text-lg font-semibold text-slate-900">@clinicRow?.SummaryText</div>
                </div>
            </div>
            @await Html.PartialAsync("_Heatmap", Model.ClinicHeatmap)
        }
    </div>

    @* Section Quick Actions *@
    <div class="space-y-4 mt-8">
        <h2 class="section-heading text-lg font-bold text-slate-800">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            @if (Model.QuickActions != null)
            {
                @foreach (var action in Model.QuickActions)
                {
                    <a href="@action.Url" class="surface p-6 rounded-2xl border border-slate-100 hover:shadow-md transition-all flex items-center justify-between bg-white">
                        <div class="flex items-center gap-4">
                            <div class="h-12 w-12 rounded-xl @action.ColorClass flex items-center justify-center">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                            </div>
                            <div>
                                <div class="font-semibold text-slate-900">@action.Label</div>
                                <p class="text-sm text-slate-500">@action.Description</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(action.Status))
                        {
                            <span class="px-2 py-1 text-xs font-medium rounded-md bg-slate-50 text-slate-600">@action.Status</span>
                        }
                    </a>
                }
            }
        </div>
    </div>
</div>
