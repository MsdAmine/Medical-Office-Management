@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Dashboard";
    // Récupération de l'utilisateur actuel pour accéder à son nom complet
    var user = await UserManager.GetUserAsync(User);
    var fullName = user != null ? $"{user.FirstName} {user.LastName}" : User.Identity?.Name;
}

<div class="p-8 bg-gray-50 min-h-screen">
    <div class="mb-10">
        <h1 class="text-3xl font-black text-gray-900">Welcome back, @fullName</h1>
        <p class="text-gray-500 font-medium">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
        <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-blue-500">
            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Appointments</p>
            <p class="text-3xl font-black text-blue-600 mt-1">@ViewBag.NbRendezVous</p>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-green-500">
            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Total Patients</p>
            <p class="text-3xl font-black text-green-600 mt-1">@ViewBag.NbPatients</p>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-purple-500">
            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Active Doctors</p>
            <p class="text-3xl font-black text-purple-600 mt-1">@ViewBag.NbMedecins</p>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-yellow-500">
            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Messages</p>
            <p class="text-3xl font-black text-yellow-600 mt-1">7</p>
        </div>
    </div>

    <div>
        <h2 class="text-xl font-black text-gray-800 mb-6">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <a asp-controller="Medecin" asp-action="Create" class="group bg-blue-600 p-8 rounded-3xl text-white shadow-xl shadow-blue-100 hover:bg-blue-700 transition-all flex flex-col items-center">
                <div class="bg-white/20 p-4 rounded-2xl mb-4 group-hover:scale-110 transition-transform">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                </div>
                <span class="text-lg font-bold">Add Doctor</span>
            </a>

            <div class="bg-emerald-500 p-8 rounded-3xl text-white shadow-xl shadow-emerald-100 flex flex-col items-center">
                <div class="bg-white/20 p-4 rounded-2xl mb-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                </div>
                <span class="text-lg font-bold">Schedule Appointment</span>
            </div>

            <div class="bg-violet-500 p-8 rounded-3xl text-white shadow-xl shadow-violet-100 flex flex-col items-center">
                <div class="bg-white/20 p-4 rounded-2xl mb-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                </div>
                <span class="text-lg font-bold">Medical Records</span>
            </div>
        </div>
    </div>
</div>