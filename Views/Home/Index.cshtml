@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-8">
    <!-- Welcome Header -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-8">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-2">
                    Welcome, @User.Identity?.Name
                </h1>
                <p class="text-slate-600 text-lg">
                    @DateTime.Now.ToString("dddd, MMMM d, yyyy")
                </p>
                <p class="text-slate-500 mt-2">
                    @if (User.IsInRole(SystemRoles.Admin))
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                            <i class="fas fa-user-shield mr-2"></i>
                            Administrator
                        </span>
                    }
                    else if (User.IsInRole(SystemRoles.Secretaire))
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-emerald-100 text-emerald-800">
                            <i class="fas fa-user-tie mr-2"></i>
                            Secretary
                        </span>
                    }
                    else if (User.IsInRole(SystemRoles.Medecin))
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-cyan-100 text-cyan-800">
                            <i class="fas fa-stethoscope mr-2"></i>
                            Médecin
                        </span>
                    }
                    else if (User.IsInRole(SystemRoles.Patient))
                    {
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                            <i class="fas fa-user-injured mr-2"></i>
                            Patient
                        </span>
                    }
                </p>
            </div>
            <div class="bg-white rounded-xl p-4 shadow-sm">
                <div class="text-sm text-slate-500 mb-1">Quick Actions</div>
                <div class="flex flex-wrap gap-3">
                    @if (User.IsInRole(SystemRoles.Admin) || User.IsInRole(SystemRoles.Secretaire))
                    {
                        <a asp-controller="Patients" asp-action="Create" 
                           class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition">
                            <i class="fas fa-user-plus mr-2"></i>
                            New Patient
                        </a>
                        <a asp-controller="Patients" asp-action="Index" 
                           class="inline-flex items-center px-4 py-2 bg-white border border-slate-300 text-slate-700 rounded-lg font-medium hover:bg-slate-50 transition">
                            <i class="fas fa-users mr-2"></i>
                            View Patients
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Role-Specific Dashboard -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content Area (2/3 width) -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Quick Access Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- System Status -->
                <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold text-slate-900">System Status</h2>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <i class="fas fa-circle text-xs mr-1"></i>
                            Operational
                        </span>
                    </div>
                    <div class="space-y-3">
                        <div class="flex items-center justify-between py-2">
                            <span class="text-slate-700">Database Connection</span>
                            <span class="text-green-600">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-t border-slate-100">
                            <span class="text-slate-700">Security Services</span>
                            <span class="text-green-600">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-t border-slate-100">
                            <span class="text-slate-700">File Storage</span>
                            <span class="text-green-600">
                                <i class="fas fa-check-circle"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold text-slate-900">Recent Activity</h2>
                        <i class="fas fa-history text-slate-400"></i>
                    </div>
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center mr-3">
                                <i class="fas fa-sign-in-alt text-blue-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-slate-700">You logged in successfully</p>
                                <p class="text-xs text-slate-500">@DateTime.Now.ToString("h:mm tt")</p>
                            </div>
                        </div>
                        @if (User.IsInRole("admin"))
                        {
                            <div class="flex items-start">
                                <div class="flex-shrink-0 h-10 w-10 rounded-lg bg-emerald-100 flex items-center justify-center mr-3">
                                    <i class="fas fa-cog text-emerald-600"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-slate-700">System settings updated</p>
                                    <p class="text-xs text-slate-500">Yesterday</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Role-Specific Information -->
                @if (User.IsInRole("admin"))
                {
                    <div class="md:col-span-2 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl border border-blue-200 p-6">
                        <div class="flex items-center mb-4">
                            <div class="h-12 w-12 rounded-lg bg-blue-100 flex items-center justify-center mr-4">
                                <i class="fas fa-user-shield text-blue-600 text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-slate-900">Administrator Console</h2>
                                <p class="text-slate-600">Manage users, settings, and system configuration</p>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                            <a href="#" class="bg-white rounded-lg p-4 border border-slate-200 hover:border-blue-300 hover:shadow-sm transition">
                                <div class="text-blue-600 mb-2">
                                    <i class="fas fa-users-cog text-lg"></i>
                                </div>
                                <div class="font-medium text-slate-900">User Management</div>
                                <p class="text-sm text-slate-600 mt-1">Manage user accounts and permissions</p>
                            </a>
                            <a href="#" class="bg-white rounded-lg p-4 border border-slate-200 hover:border-blue-300 hover:shadow-sm transition">
                                <div class="text-blue-600 mb-2">
                                    <i class="fas fa-chart-bar text-lg"></i>
                                </div>
                                <div class="font-medium text-slate-900">System Reports</div>
                                <p class="text-sm text-slate-600 mt-1">View system usage and activity reports</p>
                            </a>
                            <a href="#" class="bg-white rounded-lg p-4 border border-slate-200 hover:border-blue-300 hover:shadow-sm transition">
                                <div class="text-blue-600 mb-2">
                                    <i class="fas fa-sliders-h text-lg"></i>
                                </div>
                                <div class="font-medium text-slate-900">Settings</div>
                                <p class="text-sm text-slate-600 mt-1">Configure system preferences</p>
                            </a>
                        </div>
                    </div>
                }
                else if (User.IsInRole(SystemRoles.Secretaire))
                {
                    <div class="md:col-span-2 bg-gradient-to-r from-emerald-50 to-green-50 rounded-xl border border-emerald-200 p-6">
                        <div class="flex items-center mb-4">
                            <div class="h-12 w-12 rounded-lg bg-emerald-100 flex items-center justify-center mr-4">
                                <i class="fas fa-user-tie text-emerald-600 text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-slate-900">Secretary Dashboard</h2>
                                <p class="text-slate-600">Manage patient records and appointments</p>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                            <a asp-controller="Patients" asp-action="Create" 
                               class="bg-white rounded-lg p-4 border border-slate-200 hover:border-emerald-300 hover:shadow-sm transition">
                                <div class="text-emerald-600 mb-2">
                                    <i class="fas fa-user-plus text-lg"></i>
                                </div>
                                <div class="font-medium text-slate-900">Register Patient</div>
                                <p class="text-sm text-slate-600 mt-1">Create new patient record</p>
                            </a>
                            <a asp-controller="Patients" asp-action="Index"
                               class="bg-white rounded-lg p-4 border border-slate-200 hover:border-emerald-300 hover:shadow-sm transition">
                                <div class="text-emerald-600 mb-2">
                                    <i class="fas fa-search text-lg"></i>
                                </div>
                                <div class="font-medium text-slate-900">Find Patient</div>
                                <p class="text-sm text-slate-600 mt-1">Search and view patient records</p>
                            </a>
                            <a asp-controller="Appointments" asp-action="Index"
                               class="bg-white rounded-lg p-4 border border-slate-200 hover:border-emerald-300 hover:shadow-sm transition">
                                <div class="text-emerald-600 mb-2">
                                    <i class="fas fa-calendar-alt text-lg"></i>
                                </div>
                                <div class="font-medium text-slate-900">Schedule</div>
                                <p class="text-sm text-slate-600 mt-1">View and manage appointments</p>
                            </a>
                        </div>
                    </div>
                }
                else if (User.IsInRole("patient"))
                {
                    <div class="md:col-span-2 bg-gradient-to-r from-purple-50 to-pink-50 rounded-xl border border-purple-200 p-6">
                        <div class="flex items-center mb-4">
                            <div class="h-12 w-12 rounded-lg bg-purple-100 flex items-center justify-center mr-4">
                                <i class="fas fa-user-injured text-purple-600 text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-slate-900">Patient Portal</h2>
                                <p class="text-slate-600">Access your medical information and records</p>
                            </div>
                        </div>
                        <div class="bg-white rounded-lg p-4 border border-slate-200">
                            <div class="text-purple-600 mb-2">
                                <i class="fas fa-info-circle text-lg"></i>
                            </div>
                            <div class="font-medium text-slate-900">Contact support</div>
                            <p class="text-sm text-slate-600 mt-1">
                                Please contact your secrétaire or médecin to review or update your records.
                            </p>
                        </div>
                    </div>
                }
            </div>

            <!-- Help Section -->
            <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                <h2 class="text-xl font-bold text-slate-900 mb-4">Getting Started</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="font-semibold text-slate-900 mb-3 flex items-center">
                            <i class="fas fa-question-circle text-blue-600 mr-2"></i>
                            Need Help?
                        </h3>
                        <ul class="space-y-2 text-slate-600">
                            <li class="flex items-start">
                                <i class="fas fa-circle text-xs text-blue-500 mt-2 mr-2"></i>
                                <span>Check the user manual for detailed instructions</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-circle text-xs text-blue-500 mt-2 mr-2"></i>
                                <span>Contact support for technical issues</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-circle text-xs text-blue-500 mt-2 mr-2"></i>
                                <span>Attend training sessions for new features</span>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-semibold text-slate-900 mb-3 flex items-center">
                            <i class="fas fa-lightbulb text-amber-600 mr-2"></i>
                            Tips & Tricks
                        </h3>
                        <ul class="space-y-2 text-slate-600">
                            <li class="flex items-start">
                                <i class="fas fa-star text-xs text-amber-500 mt-2 mr-2"></i>
                                <span>Use keyboard shortcuts for faster navigation</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-star text-xs text-amber-500 mt-2 mr-2"></i>
                                <span>Bookmark frequently used pages</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-star text-xs text-amber-500 mt-2 mr-2"></i>
                                <span>Enable notifications for important updates</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar (1/3 width) -->
        <div class="space-y-8">
            <!-- Quick Links -->
            <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                <h2 class="text-xl font-bold text-slate-900 mb-4">Quick Links</h2>
                <div class="space-y-3">
                    <a asp-controller="Home" asp-action="Index" 
                       class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition group">
                        <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center mr-3">
                            <i class="fas fa-home text-blue-600"></i>
                        </div>
                        <div class="flex-1">
                            <div class="font-medium text-slate-900">Dashboard</div>
                            <p class="text-sm text-slate-600">Return to this overview</p>
                        </div>
                    </a>
                    
                    <a asp-controller="Patients" asp-action="Index"
                       class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition group">
                        <div class="h-10 w-10 rounded-lg bg-emerald-100 flex items-center justify-center mr-3">
                            <i class="fas fa-users text-emerald-600"></i>
                        </div>
                        <div class="flex-1">
                            <div class="font-medium text-slate-900">Patients</div>
                            <p class="text-sm text-slate-600">Manage patient records</p>
                        </div>
                    </a>
                    
                    @if (User.IsInRole("admin"))
                    {
                        <a href="#"
                           class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition group">
                            <div class="h-10 w-10 rounded-lg bg-amber-100 flex items-center justify-center mr-3">
                                <i class="fas fa-cog text-amber-600"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-medium text-slate-900">System Settings</div>
                                <p class="text-sm text-slate-600">Configure application settings</p>
                            </div>
                        </a>
                    }
                    
                    <a href="#"
                       class="flex items-center p-3 rounded-lg hover:bg-slate-50 transition group">
                        <div class="h-10 w-10 rounded-lg bg-purple-100 flex items-center justify-center mr-3">
                            <i class="fas fa-question-circle text-purple-600"></i>
                        </div>
                        <div class="flex-1">
                            <div class="font-medium text-slate-900">Help & Support</div>
                            <p class="text-sm text-slate-600">Get assistance and documentation</p>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-xl border border-slate-200 p-6">
                <h2 class="text-xl font-bold text-slate-900 mb-4">Today</h2>
                <div class="space-y-4">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center">
                                <i class="fas fa-calendar-day text-blue-600"></i>
                            </div>
                        </div>
                        <div class="ml-4">
                            <p class="font-medium text-slate-900">@DateTime.Now.ToString("dddd")</p>
                            <p class="text-sm text-slate-600">@DateTime.Now.ToString("MMMM d, yyyy")</p>
                        </div>
                    </div>
                    <div class="pt-4 border-t border-slate-200">
                        <p class="text-sm text-slate-600 mb-2">No scheduled events for today.</p>
                        @if (User.IsInRole(SystemRoles.Secretaire) || User.IsInRole(SystemRoles.Patient))
                        {
                            <a href="#" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
                                <i class="fas fa-plus mr-1"></i>
                                Schedule an appointment
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- System Information -->
            <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                <h2 class="text-xl font-bold text-slate-900 mb-4">System Information</h2>
                <div class="space-y-3">
                    <div class="flex justify-between items-center py-2 border-b border-slate-100">
                        <span class="text-slate-700">Version</span>
                        <span class="font-medium text-slate-900">2.1.0</span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b border-slate-100">
                        <span class="text-slate-700">Last Updated</span>
                        <span class="font-medium text-slate-900">@DateTime.Now.AddDays(-7).ToString("MMM d")</span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-slate-700">Support Contact</span>
                        <span class="font-medium text-slate-900">support@medoffice.com</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
