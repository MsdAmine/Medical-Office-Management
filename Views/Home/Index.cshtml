@{
    ViewData["Title"] = "Dashboard";
}

<div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-800">Welcome back, @User.Identity?.Name</h1>
    <p class="text-gray-500">@DateTime.Now.ToString("dddd, MMMM dd, yyyy | h:mm tt")</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-blue-500 flex justify-between items-center">
        <div>
            <p class="text-sm font-medium text-gray-500">Appointments Today</p>
            <p class="text-2xl font-bold text-blue-600">@ViewBag.NbRendezVous</p>
        </div>
        <div class="bg-blue-50 p-3 rounded-lg text-blue-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-green-500 flex justify-between items-center">
        <div>
            <p class="text-sm font-medium text-gray-500">Total Patients</p>
            <p class="text-2xl font-bold text-green-600">@ViewBag.NbPatients</p>
        </div>
        <div class="bg-green-50 p-3 rounded-lg text-green-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-purple-500 flex justify-between items-center">
        <div>
            <p class="text-sm font-medium text-gray-500">Active Doctors</p>
            <p class="text-2xl font-bold text-purple-600">@ViewBag.NbMedecins</p>
        </div>
        <div class="bg-purple-50 p-3 rounded-lg text-purple-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
        </div>
    </div>
    
    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-yellow-500 flex justify-between items-center">
        <div>
            <p class="text-sm font-medium text-gray-500">Messages</p>
            <p class="text-2xl font-bold text-yellow-600">7</p>
        </div>
        <div class="bg-yellow-50 p-3 rounded-lg text-yellow-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
        </div>
    </div>
</div>

<h3 class="text-lg font-semibold text-gray-700 mb-4">Quick Actions</h3>
<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <a href="/Medecin/Create" class="flex flex-col items-center justify-center bg-blue-600 text-white p-8 rounded-2xl hover:bg-blue-700 transition shadow-lg">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span class="font-bold">Add Doctor</span>
    </a>
    
    <button class="flex flex-col items-center justify-center bg-green-600 text-white p-8 rounded-2xl hover:bg-green-700 transition shadow-lg">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
        <span class="font-bold">Schedule Appointment</span>
    </button>

    <button class="flex flex-col items-center justify-center bg-purple-600 text-white p-8 rounded-2xl hover:bg-purple-700 transition shadow-lg">
        <svg class="w-10 h-10 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
        <span class="font-bold">Medical Records</span>
    </button>
</div>