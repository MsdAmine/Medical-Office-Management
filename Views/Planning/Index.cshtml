@model IEnumerable<MedicalOfficeManagement.Models.Planning>

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Directory</div>
            <div>
                <h1 class="page-title">Doctor Schedules</h1>
                <p class="page-subtitle">Manage availability and time slots for medical staff.</p>
            </div>
        </div>
        <a asp-action="Create" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Add New Schedule
        </a>
    </div>

    <div class="table-shell">
        <table class="w-full text-left">
            <thead class="table-head">
                <tr>
                    <th class="px-6 py-4">Doctor</th>
                    <th class="px-6 py-4">Start Time</th>
                    <th class="px-6 py-4">End Time</th>
                    <th class="px-6 py-4 text-center">Status</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4">
                            <div class="text-sm font-semibold text-slate-900">Dr. @item.Medecin.NomPrenom</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-600">
                            @item.DateDebut.ToString("f")
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-600">
                            @item.DateFin.ToString("f")
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="badge-soft @(item.StatutDisponibilite == "Disponible" ? "green" : "blue") uppercase">
                                @item.StatutDisponibilite
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end items-center gap-2">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Supprimer ce crÃ©neau ?');">
                                    <button type="submit" class="btn-ghost text-red-600">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>