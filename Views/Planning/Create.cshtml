@model MedicalOfficeManagement.Models.Planning

@{
    ViewData["Title"] = "Ajouter un Horaire";
}

<div class="page-shell">
    <div class="page-header">
        <div>
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                Planning
            </div>
            <h1 class="page-title mt-2">Définir une Disponibilité</h1>
            <p class="page-subtitle">Assignez des plages horaires spécifiques aux médecins.</p>
        </div>
        <a asp-action="Index" class="btn-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            Retour à la liste
        </a>
    </div>

    <div class="surface p-8 max-w-4xl mx-auto shadow-soft rounded-3xl border border-slate-100">
        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-red-50 text-red-700 text-sm border border-red-100 font-medium"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-field md:col-span-2">
                    <label class="block text-sm font-bold text-slate-700 mb-2">Médecin Référent</label>
                    <select asp-for="MedecinId" class="w-full px-4 py-3 rounded-xl border border-slate-200 bg-slate-50 focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all outline-none" asp-items="ViewBag.MedecinId">
                        <option value="">-- Sélectionner un médecin --</option>
                    </select>
                    <span asp-validation-for="MedecinId" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="form-field">
                    <label class="block text-sm font-bold text-slate-700 mb-2">Début de Vacation</label>
                    <input asp-for="DateDebut" type="datetime-local" class="w-full px-4 py-3 rounded-xl border border-slate-200 bg-slate-50 focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all outline-none" />
                    <span asp-validation-for="DateDebut" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="form-field">
                    <label class="block text-sm font-bold text-slate-700 mb-2">Fin de Vacation</label>
                    <input asp-for="DateFin" type="datetime-local" class="w-full px-4 py-3 rounded-xl border border-slate-200 bg-slate-50 focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all outline-none" />
                    <span asp-validation-for="DateFin" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="form-field md:col-span-2">
                    <label class="block text-sm font-bold text-slate-700 mb-2">Statut de Disponibilité</label>
                    <select asp-for="StatutDisponibilite" class="w-full px-4 py-3 rounded-xl border border-slate-200 bg-slate-50 focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all outline-none">
                        <option value="Disponible">Disponible (Consultations normales)</option>
                        <option value="Congé">En Congé / Absence</option>
                        <option value="Urgence">Urgences uniquement</option>
                        <option value="Formation">Formation / Séminaire</option>
                    </select>
                    <span asp-validation-for="StatutDisponibilite" class="text-red-500 text-xs mt-1"></span>
                </div>
            </div>

            <div class="flex items-center justify-end gap-4 pt-8 border-t border-slate-100 mt-8">
                <button type="reset" class="px-6 py-3 rounded-xl text-sm font-bold text-slate-600 hover:bg-slate-50 transition-all">
                    Réinitialiser
                </button>
                <button type="submit" class="bg-brand-600 hover:bg-brand-700 text-white px-10 py-3 rounded-xl font-bold shadow-soft transition-all transform hover:-translate-y-0.5 active:scale-95">
                    Enregistrer le Planning
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}