@model MedicalOfficeManagement.ViewModels.ReportsIndexViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="space-y-6">
    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <p class="text-sm text-sky-600 font-semibold mb-1 uppercase tracking-wide">Analytics</p>
                <h1 class="text-2xl font-bold text-slate-900">Reports &amp; Analytics</h1>
                <p class="text-slate-600 mt-1">Review operational, clinical, and financial insights.</p>
            </div>
            <div class="flex items-center gap-3">
                <button class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition">
                    <i class="fas fa-clock mr-2 text-sky-500"></i>
                    Schedule
                </button>
                <button class="inline-flex items-center px-4 py-2 rounded-lg bg-sky-600 text-white font-medium hover:bg-sky-700 transition">
                    <i class="fas fa-file-alt mr-2"></i>
                    New report
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Active reports</p>
                <span class="text-sky-500"><i class="fas fa-chart-pie"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.ActiveReports</div>
            <p class="text-sm text-slate-500 mt-1">Available to download</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Scheduled</p>
                <span class="text-indigo-500"><i class="fas fa-calendar-check"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.ScheduledReports</div>
            <p class="text-sm text-slate-500 mt-1">Automated deliveries</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Exports this month</p>
                <span class="text-emerald-500"><i class="fas fa-file-export"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.ExportsThisMonth</div>
            <p class="text-sm text-slate-500 mt-1">Shared with teams</p>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 p-6 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Recent reports</h2>
                <p class="text-sm text-slate-600">Keep track of generated exports and scheduling.</p>
            </div>
            <div class="flex items-center gap-2">
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-filter mr-2 text-slate-500"></i>
                    Filters
                </button>
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-download mr-2 text-slate-500"></i>
                    Bulk export
                </button>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Title</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Period</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Owner</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Generated</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Status</th>
                        <th class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var report in Model.Reports)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <p class="font-semibold text-slate-900">@report.Title</p>
                                <p class="text-sm text-slate-500">Analytics workspace</p>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@report.Period</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@report.Owner</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@report.GeneratedOn.ToString("MMM d")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetStatusClasses(report.Status)">
                                    <i class="fas fa-circle text-xs mr-2"></i>
                                    @report.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                                    View
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private string GetStatusClasses(string status)
    {
        return status switch
        {
            "Ready" => "bg-emerald-100 text-emerald-800",
            "Scheduled" => "bg-indigo-100 text-indigo-800",
            "In Progress" => "bg-blue-100 text-blue-800",
            "Draft" => "bg-slate-100 text-slate-800",
            _ => "bg-slate-100 text-slate-800"
        };
    }
}
