@* File: Views/Reports/Index.cshtml *@
@model MedicalOfficeManagement.ViewModels.Reports.ReportsIndexViewModel

@{
    ViewBag.Title = "Reports";
    var access = AccessControl.GetCurrent();
    var canUseReports = access.ShowReports;
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Analytics</div>
            <div>
                <h1 class="page-title">Reports</h1>
                <p class="page-subtitle">Analytics and performance summaries</p>
            </div>
        </div>
        <button class="btn-primary @(canUseReports ? "" : "opacity-60 cursor-not-allowed")"
                @(canUseReports ? "" : "disabled title=\"Reports are available to billing and admin roles\"")>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
            Export Report
        </button>
    </div>

    @if (!canUseReports)
    {
        <div class="surface border border-amber-200 bg-amber-50 text-amber-700 p-4 rounded-xl mb-6">
            Limited access: report exports are visible to administrators and billing roles. Metrics remain read-only.
        </div>
    }

    <div class="surface p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
            <div>
                <label class="form-label">Start Date</label>
                <input type="date" value="@(DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd"))" class="form-input" @(canUseReports ? "" : "disabled")>
            </div>
            <div>
                <label class="form-label">End Date</label>
                <input type="date" value="@(DateTime.Now.ToString("yyyy-MM-dd"))" class="form-input" @(canUseReports ? "" : "disabled")>
            </div>
            <div>
                <button class="btn-primary w-full justify-center @(canUseReports ? "" : "opacity-60 cursor-not-allowed")" @(canUseReports ? "" : "disabled title=\"Report generation is limited to authorized roles\"")>Generate Report</button>
            </div>
        </div>
    </div>

    <div class="surface p-6 space-y-6">
        <div class="flex items-center justify-between">
            <h2 class="section-heading">Appointments</h2>
            <span class="pill">Utilization snapshot</span>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="stat-card">
                <div class="stat-label">Today</div>
                <div class="stat-value text-brand-700">@Model.AppointmentsToday</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">This Week</div>
                <div class="stat-value text-brand-700">@Model.AppointmentsThisWeek</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">This Month</div>
                <div class="stat-value text-brand-700">@Model.AppointmentsThisMonth</div>
            </div>
        </div>
        <div class="surface-muted p-8 rounded-2xl border border-dashed border-slate-200">
            <div class="flex items-center justify-center h-60 text-center space-y-2 flex-col">
                <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                <p class="text-sm text-slate-600">Appointments Trend Chart</p>
                <p class="text-xs text-slate-500">Visual representation of appointment data over time</p>
            </div>
        </div>
    </div>

    <div class="surface p-6 space-y-6">
        <div class="flex items-center justify-between">
            <h2 class="section-heading">Revenue</h2>
            <span class="pill">Financial health</span>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="stat-card">
                <div class="stat-label">Today</div>
                <div class="stat-value text-success">$@Model.RevenueToday.ToString("N2")</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">This Week</div>
                <div class="stat-value text-success">$@Model.RevenueThisWeek.ToString("N2")</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">This Month</div>
                <div class="stat-value text-success">$@Model.RevenueThisMonth.ToString("N2")</div>
            </div>
        </div>
        <div class="surface-muted p-8 rounded-2xl border border-dashed border-slate-200">
            <div class="flex items-center justify-center h-60 text-center space-y-2 flex-col">
                <svg class="w-12 h-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
                </svg>
                <p class="text-sm text-slate-600">Revenue Trend Chart</p>
                <p class="text-xs text-slate-500">Visual representation of revenue data over time</p>
            </div>
        </div>
    </div>

    <div class="surface p-6 space-y-6">
        <div class="flex items-center justify-between">
            <h2 class="section-heading">New Patients</h2>
            <span class="pill">Growth</span>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="stat-card">
                <div class="stat-label">Today</div>
                <div class="stat-value text-indigo-700">@Model.NewPatientsToday</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">This Week</div>
                <div class="stat-value text-indigo-700">@Model.NewPatientsThisWeek</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">This Month</div>
                <div class="stat-value text-indigo-700">@Model.NewPatientsThisMonth</div>
            </div>
        </div>
    </div>

    <div class="surface p-6 space-y-4">
        <h2 class="section-heading">Performance Metrics</h2>
        <div class="space-y-3">
            <div class="flex items-center justify-between p-4 surface-muted border border-slate-100">
                <div>
                    <div class="text-sm font-semibold text-slate-800">Average Wait Time</div>
                    <div class="text-xs text-slate-500 mt-1">Time between check-in and appointment</div>
                </div>
                <div class="text-2xl font-semibold text-slate-900">@Model.AverageWaitTime</div>
            </div>
            <div class="flex items-center justify-between p-4 surface-muted border border-slate-100">
                <div>
                    <div class="text-sm font-semibold text-slate-800">Appointment Completion Rate</div>
                    <div class="text-xs text-slate-500 mt-1">Percentage of scheduled appointments completed</div>
                </div>
                <div class="text-2xl font-semibold text-success">94%</div>
            </div>
            <div class="flex items-center justify-between p-4 surface-muted border border-slate-100">
                <div>
                    <div class="text-sm font-semibold text-slate-800">Patient Satisfaction</div>
                    <div class="text-xs text-slate-500 mt-1">Based on post-visit surveys</div>
                </div>
                <div class="text-2xl font-semibold text-brand-700">4.7/5.0</div>
            </div>
        </div>
    </div>
</div>
