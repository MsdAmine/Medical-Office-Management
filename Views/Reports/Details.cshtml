@model MedicalOfficeManagement.Models.ReportArtifact
@{
    ViewData["Title"] = "Report Details";
}

<div class="max-w-3xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-sm text-sky-600 font-semibold uppercase tracking-wide">Reports</p>
            <h1 class="text-2xl font-bold text-slate-900">Report Details</h1>
            <p class="text-slate-600 mt-1">Review metadata and latest generation date.</p>
        </div>
        <div class="flex items-center gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 rounded-lg bg-sky-600 text-white hover:bg-sky-700">
                <i class="fas fa-edit mr-2"></i>
                Edit
            </a>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-50">
                Back to list
            </a>
        </div>
    </div>

    <div class="bg-white border border-slate-200 rounded-xl shadow-sm p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p class="text-sm text-slate-500">Title</p>
                <p class="text-lg font-semibold text-slate-900">@Model.Title</p>
            </div>
            <div>
                <p class="text-sm text-slate-500">Owner</p>
                <p class="text-lg font-semibold text-slate-900">@Model.Owner</p>
            </div>
            <div>
                <p class="text-sm text-slate-500">Period</p>
                <p class="text-lg font-semibold text-slate-900">@Model.Period</p>
            </div>
            <div>
                <p class="text-sm text-slate-500">Status</p>
                <p class="text-lg font-semibold text-slate-900">@Model.Status</p>
            </div>
            <div>
                <p class="text-sm text-slate-500">Generated On</p>
                <p class="text-lg font-semibold text-slate-900">@Model.GeneratedOn.ToString("MMM dd, yyyy")</p>
            </div>
        </div>
    </div>
</div>
