@model IEnumerable<MedicalOfficeManagement.Models.Schedule>

<div class="page-shell">
    <div class="page-header flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Tableau des Affectations</h1>
            <p class="text-slate-500">Organisation hebdomadaire des salles et du personnel.</p>
        </div>
        <a asp-action="Create" class="bg-brand-600 text-white px-5 py-2.5 rounded-xl font-bold shadow-soft flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Nouvelle Affectation
        </a>
    </div>

    <div class="surface shadow-soft rounded-3xl border border-slate-100 overflow-hidden bg-white">
        <table class="w-full text-left">
            <thead class="bg-slate-50">
                <tr>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500">Salle</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500">Médecin Affecté</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500">Jour</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500">Horaire</th>
                    <th class="px-6 py-4 text-xs font-bold uppercase text-slate-500 text-right">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4">
                            <span class="font-bold text-brand-700">@item.Salle.Nom</span>
                        </td>
                        <td class="px-6 py-4 text-slate-700">@item.Medecin.NomPrenom</td>
                        <td class="px-6 py-4">@item.JourSemaine</td>
                        <td class="px-6 py-4 text-slate-600">
                            @item.HeureArrivee.ToString(@"hh\:mm") - @item.HeureDepart.ToString(@"hh\:mm")
                        </td>
                        <td class="px-6 py-4 text-right">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="text-red-400 hover:text-red-600" onclick="return confirm('Retirer cette affectation ?')">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>