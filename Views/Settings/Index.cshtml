@model MedicalOfficeManagement.Models.ApplicationUser

@{
    ViewData["Title"] = "Settings";
}

<div class="max-w-5xl mx-auto">
    <div class="mb-10">
        <h1 class="text-4xl font-black text-gray-900 tracking-tight">Settings</h1>
        <p class="text-gray-500 mt-2 text-lg">Manage your personal information and office preferences.</p>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="mb-8 p-4 bg-blue-50 border border-blue-100 text-blue-700 rounded-2xl flex items-center animate-fade-in">
            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path></svg>
            <span class="font-bold">Success:</span> @TempData["StatusMessage"]
        </div>
    }

    <form asp-action="UpdateProfile" method="post">
        <div class="space-y-8">
            <div class="bg-white rounded-[2.5rem] shadow-xl shadow-gray-200/50 border border-gray-100 p-8 md:p-12">
                <div class="flex items-center mb-10">
                    <div class="w-12 h-12 bg-indigo-50 text-indigo-600 rounded-2xl flex items-center justify-center mr-5">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                    </div>
                    <h2 class="text-2xl font-extrabold text-gray-800">Administrator Profile</h2>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <label class="block text-[11px] font-black text-gray-400 uppercase tracking-widest mb-3 ml-1">First Name</label>
                        <input type="text" name="firstName" value="@Model.FirstName" placeholder="Enter first name" 
                               class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-gray-700 font-medium" />
                    </div>
                    <div>
                        <label class="block text-[11px] font-black text-gray-400 uppercase tracking-widest mb-3 ml-1">Last Name</label>
                        <input type="text" name="lastName" value="@Model.LastName" placeholder="Enter last name" 
                               class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-gray-700 font-medium" />
                    </div>
                    <div>
                        <label class="block text-[11px] font-black text-gray-400 uppercase tracking-widest mb-3 ml-1">Email address</label>
                        <input type="email" name="email" value="@Model.Email" 
                               class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-gray-700 font-medium" />
                    </div>
                    <div>
                        <label class="block text-[11px] font-black text-gray-400 uppercase tracking-widest mb-3 ml-1">Phone Number</label>
                        <input type="text" name="phoneNumber" value="@Model.PhoneNumber" placeholder="+1 (555) 000-0000" 
                               class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all text-gray-700 font-medium" />
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-[2.5rem] shadow-xl shadow-gray-200/50 border border-gray-100 p-8 md:p-12">
                <div class="flex items-center mb-10">
                    <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center mr-5">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                    </div>
                    <h2 class="text-2xl font-extrabold text-gray-800">Office Preferences</h2>
                </div>

                <div class="max-w-lg">
                    <label class="block text-[11px] font-black text-gray-400 uppercase tracking-widest mb-3 ml-1">Medical Office Name</label>
                    <input type="text" name="officeName" value="@Model.OfficeName" placeholder="e.g. HealthCare Center" 
                           class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-500 focus:bg-white transition-all text-gray-700 font-medium" />
                </div>
            </div>

            <div class="flex justify-end pt-4">
                <button type="submit" class="bg-blue-600 text-white px-12 py-5 rounded-2xl font-black text-sm uppercase tracking-widest hover:bg-blue-700 hover:shadow-2xl hover:shadow-blue-200 transition-all active:scale-95">
                    Update Profile
                </button>
            </div>
        </div>
    </form>
</div>