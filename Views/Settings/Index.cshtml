@model MedicalOfficeManagement.Models.ApplicationUser

@{
    ViewData["Title"] = "Settings";
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Account</div>
            <div>
                <h1 class="page-title">Settings</h1>
                <p class="page-subtitle">Manage your personal information and office preferences.</p>
            </div>
        </div>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="surface p-4 border border-brand-100 text-brand-700 rounded-2xl flex items-center gap-3 shadow-sm">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path></svg>
            <span class="font-semibold">@TempData["StatusMessage"]</span>
        </div>
    }

    <form asp-action="UpdateProfile" method="post" class="space-y-8">
        <div class="surface p-8 md:p-10 space-y-8">
            <div class="flex items-center gap-4">
                <div class="h-12 w-12 bg-brand-50 text-brand-700 rounded-2xl flex items-center justify-center">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                </div>
                <div>
                    <h2 class="section-heading">Administrator Profile</h2>
                    <p class="section-caption">Update your personal contact information</p>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-field">
                    <label class="form-label">First Name</label>
                    <input type="text" name="firstName" value="@Model.FirstName" placeholder="Enter first name"
                           class="form-input" />
                </div>
                <div class="form-field">
                    <label class="form-label">Last Name</label>
                    <input type="text" name="lastName" value="@Model.LastName" placeholder="Enter last name"
                           class="form-input" />
                </div>
                <div class="form-field">
                    <label class="form-label">Email address</label>
                    <input type="email" name="email" value="@Model.Email"
                           class="form-input" />
                </div>
                <div class="form-field">
                    <label class="form-label">Phone Number</label>
                    <input type="text" name="phoneNumber" value="@Model.PhoneNumber" placeholder="+1 (555) 000-0000"
                           class="form-input" />
                </div>
            </div>
        </div>

        <div class="surface p-8 md:p-10 space-y-6">
            <div class="flex items-center gap-4">
                <div class="h-12 w-12 bg-slate-100 text-brand-700 rounded-2xl flex items-center justify-center">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                </div>
                <div>
                    <h2 class="section-heading">Office Preferences</h2>
                    <p class="section-caption">Label your clinic in communications</p>
                </div>
            </div>

            <div class="max-w-lg form-field">
                <label class="form-label">Address</label>
                <input type="text" name="address" value="@Model.Address" placeholder="123 Main St, City"
                       class="form-input" />
            </div>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="btn-primary px-6 py-3">Update Profile</button>
        </div>
    </form>
</div>
