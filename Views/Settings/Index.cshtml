@model MedicalOfficeManagement.ViewModels.SettingsIndexViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Settings";
    var antiForgeryToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

<div class="space-y-6">
    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <p class="text-sm text-slate-600 font-semibold mb-1 uppercase tracking-wide">Administration</p>
                <h1 class="text-2xl font-bold text-slate-900">System Settings</h1>
                <p class="text-slate-600 mt-1">Configure system-wide notification and security settings.</p>
            </div>
            <div class="flex items-center gap-3">
                <button type="button" id="resetSettingsBtn" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition">
                    <i class="fas fa-undo mr-2 text-slate-500"></i>
                    Reset to Defaults
                </button>
                <button type="button" id="saveSettingsBtn" class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
                    <i class="fas fa-save mr-2"></i>
                    Save Changes
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6 border-b border-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Notifications</h2>
                    <p class="text-sm text-slate-600">Configure system-wide email and notification preferences.</p>
                </div>
                <div class="divide-y divide-slate-100">
                    @foreach (var setting in Model.NotificationSettings)
                    {
                        <div class="p-6 flex items-start justify-between gap-4">
                            <div class="flex-1">
                                <p class="font-semibold text-slate-900">@setting.Title</p>
                                <p class="text-sm text-slate-600 mt-1">@setting.Description</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer setting-toggle" data-setting-key="@setting.Key" @(setting.Enabled ? "checked" : "")>
                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6 border-b border-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Security</h2>
                    <p class="text-sm text-slate-600">Manage security policies and access controls.</p>
                </div>
                <div class="divide-y divide-slate-100">
                    @foreach (var setting in Model.SecuritySettings)
                    {
                        <div class="p-6 flex items-start justify-between gap-4">
                            <div class="flex-1">
                                <p class="font-semibold text-slate-900">@setting.Title</p>
                                <p class="text-sm text-slate-600 mt-1">@setting.Description</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer setting-toggle" data-setting-key="@setting.Key" @(setting.Enabled ? "checked" : "")>
                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <p class="text-sm text-slate-500 uppercase tracking-wide">System</p>
                            <p class="text-lg font-semibold text-slate-900">Information</p>
                        </div>
                        <div class="h-12 w-12 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
                            <i class="fas fa-info-circle"></i>
                        </div>
                    </div>
                    <div class="mt-4 space-y-3 text-sm text-slate-600">
                        <div class="flex items-center justify-between">
                            <span>Settings stored in</span>
                            <span class="font-semibold text-slate-900">Database</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span>Last updated</span>
                            <span class="font-semibold text-slate-900">Just now</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input name="__RequestVerificationToken" type="hidden" value="@antiForgeryToken" />

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const saveBtn = document.getElementById('saveSettingsBtn');
            const resetBtn = document.getElementById('resetSettingsBtn');
            const toggles = document.querySelectorAll('.setting-toggle');

            // Get anti-forgery token
            function getAntiForgeryToken() {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                return token || '';
            }

            // Show notification message
            function showMessage(message, type = 'success') {
                const bgColor = type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500';
                const icon = type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
                
                const messageEl = document.createElement('div');
                messageEl.className = `fixed top-4 right-4 ${bgColor} text-white px-6 py-3 rounded-lg shadow-lg z-50 flex items-center space-x-2 transition-opacity`;
                messageEl.innerHTML = `<i class="fas ${icon}"></i><span>${message}</span>`;
                document.body.appendChild(messageEl);
                
                setTimeout(() => {
                    messageEl.style.opacity = '0';
                    setTimeout(() => messageEl.remove(), 300);
                }, 3000);
            }

            // Save settings to server
            async function saveSettings() {
                const settings = {};
                toggles.forEach(toggle => {
                    const key = toggle.dataset.settingKey;
                    settings[key] = toggle.checked;
                });

                try {
                    saveBtn.disabled = true;
                    saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving...';

                    const token = getAntiForgeryToken();
                    const response = await fetch('@Url.Action("Save", "Settings")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token,
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify(settings)
                    });

                    const result = await response.json();
                    
                    if (result.success) {
                        showMessage(result.message || 'Settings saved successfully', 'success');
                    } else {
                        showMessage(result.message || 'Error saving settings', 'error');
                    }
                } catch (error) {
                    console.error('Error saving settings:', error);
                    showMessage('Error saving settings. Please try again.', 'error');
                } finally {
                    saveBtn.disabled = false;
                    saveBtn.innerHTML = '<i class="fas fa-save mr-2"></i>Save Changes';
                }
            }

            // Reset settings to defaults
            async function resetSettings() {
                if (!confirm('Are you sure you want to reset all settings to their default values? This action cannot be undone.')) {
                    return;
                }

                try {
                    resetBtn.disabled = true;
                    resetBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Resetting...';

                    const token = getAntiForgeryToken();
                    const response = await fetch('@Url.Action("Reset", "Settings")', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token,
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const result = await response.json();
                    
                    if (result.success) {
                        showMessage(result.message || 'Settings reset to defaults', 'info');
                        // Reload page to show default values
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        showMessage(result.message || 'Error resetting settings', 'error');
                    }
                } catch (error) {
                    console.error('Error resetting settings:', error);
                    showMessage('Error resetting settings. Please try again.', 'error');
                } finally {
                    resetBtn.disabled = false;
                    resetBtn.innerHTML = '<i class="fas fa-undo mr-2"></i>Reset to Defaults';
                }
            }

            // Event listeners
            saveBtn?.addEventListener('click', saveSettings);
            resetBtn?.addEventListener('click', resetSettings);
        });
    </script>
}
