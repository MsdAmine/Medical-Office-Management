@model MedicalOfficeManagement.ViewModels.SettingsIndexViewModel
@{
    ViewData["Title"] = "Settings";
}

<div class="space-y-6">
    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <p class="text-sm text-slate-600 font-semibold mb-1 uppercase tracking-wide">Workspace</p>
                <h1 class="text-2xl font-bold text-slate-900">Settings</h1>
                <p class="text-slate-600 mt-1">Control notification preferences, security, and accessibility.</p>
            </div>
            <div class="flex items-center gap-3">
                <button class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition">
                    <i class="fas fa-undo mr-2 text-slate-500"></i>
                    Reset
                </button>
                <button class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
                    <i class="fas fa-save mr-2"></i>
                    Save changes
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6 border-b border-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Notifications</h2>
                    <p class="text-sm text-slate-600">Stay informed about schedule, billing, and clinical updates.</p>
                </div>
                <div class="divide-y divide-slate-100">
                    @foreach (var setting in Model.NotificationSettings)
                    {
                        <div class="p-6 flex items-start justify-between gap-4">
                            <div>
                                <p class="font-semibold text-slate-900">@setting.Title</p>
                                <p class="text-sm text-slate-600">@setting.Description</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer" @(setting.Enabled ? "checked" : "")>
                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6 border-b border-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Security</h2>
                    <p class="text-sm text-slate-600">Protect account access and sensitive health information.</p>
                </div>
                <div class="divide-y divide-slate-100">
                    @foreach (var setting in Model.SecuritySettings)
                    {
                        <div class="p-6 flex items-start justify-between gap-4">
                            <div>
                                <p class="font-semibold text-slate-900">@setting.Title</p>
                                <p class="text-sm text-slate-600">@setting.Description</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer" @(setting.Enabled ? "checked" : "")>
                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6 border-b border-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Preferences</h2>
                    <p class="text-sm text-slate-600">Adjust visual density and assistive options.</p>
                </div>
                <div class="divide-y divide-slate-100">
                    @foreach (var setting in Model.PreferenceSettings)
                    {
                        <div class="p-6 flex items-start justify-between gap-4">
                            <div>
                                <p class="font-semibold text-slate-900">@setting.Title</p>
                                <p class="text-sm text-slate-600">@setting.Description</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer" @(setting.Enabled ? "checked" : "")>
                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-slate-500 uppercase tracking-wide">Profile</p>
                            <p class="text-lg font-semibold text-slate-900">Workspace defaults</p>
                        </div>
                        <div class="h-12 w-12 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
                            <i class="fas fa-user-cog"></i>
                        </div>
                    </div>
                    <div class="mt-4 space-y-3 text-sm text-slate-600">
                        <div class="flex items-center justify-between">
                            <span>Language</span>
                            <span class="font-semibold text-slate-900">English (US)</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span>Time zone</span>
                            <span class="font-semibold text-slate-900">UTC+1 (Paris)</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span>Data region</span>
                            <span class="font-semibold text-slate-900">EU-West</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-slate-500 uppercase tracking-wide">Compliance</p>
                            <p class="text-lg font-semibold text-slate-900">Access controls</p>
                        </div>
                        <div class="h-12 w-12 rounded-full bg-emerald-50 flex items-center justify-center text-emerald-600">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                    </div>
                    <ul class="mt-4 space-y-3 text-sm text-slate-600">
                        <li class="flex items-center justify-between">
                            <span>Audit logging</span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">Enabled</span>
                        </li>
                        <li class="flex items-center justify-between">
                            <span>PHI access</span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800">Restricted</span>
                        </li>
                        <li class="flex items-center justify-between">
                            <span>Export approvals</span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Required</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
