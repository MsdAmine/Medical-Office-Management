    @model PendingApprovalViewModel

    @{
        ViewData["Title"] = "Pending Approvals";
        ViewData["Breadcrumb"] = "Schedule";
        var hasPending = Model.PendingAppointments.Any();
    }

    <div class="space-y-6">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Appointments waiting for approval</h1>
                <p class="text-slate-600 mt-1">Review patient requests and approve or cancel them.</p>
            </div>
            <a asp-action="Index" class="text-blue-600 hover:text-blue-700">Back to schedule</a>
        </div>

        @if (TempData["StatusMessage"] is string statusMessage)
        {
            <div class="p-4 rounded-lg border border-emerald-200 bg-emerald-50 text-emerald-800 flex items-start gap-2">
                <i class="fas fa-check-circle mt-0.5"></i>
                <span>@statusMessage</span>
            </div>
        }

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="glass-card p-4 rounded-xl">
                <p class="text-sm text-slate-500">Total pending</p>
                <p class="text-3xl font-bold text-slate-900">@Model.TotalPending</p>
                <p class="text-xs text-slate-600 mt-1">Awaiting review</p>
            </div>
            <div class="glass-card p-4 rounded-xl border-2 border-amber-200">
                <p class="text-sm text-slate-500">Urgent</p>
                <p class="text-3xl font-bold text-amber-600">@Model.UrgentCount</p>
                <p class="text-xs text-amber-600 mt-1">Today or tomorrow</p>
            </div>
            <div class="glass-card p-4 rounded-xl">
                <p class="text-sm text-slate-500">Actions</p>
                <p class="text-lg font-semibold text-slate-900 mt-2">Bulk operations available</p>
                <p class="text-xs text-slate-600 mt-1">Select multiple to approve/decline</p>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="glass-card rounded-xl p-6">
            <form method="get" action="@Url.Action("PendingApproval")" class="space-y-4">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-slate-900">Filters</h3>
                    @if (Model.MedecinFilter.HasValue || Model.DateFromFilter.HasValue || Model.DateToFilter.HasValue || !string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <a asp-action="PendingApproval" class="text-sm text-slate-600 hover:text-slate-900">Clear all</a>
                    }
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Provider</label>
                        <select name="medecinFilter" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            @foreach (var option in Model.MedecinOptions)
                            {
                                <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">From Date</label>
                        <input type="date" name="dateFromFilter" value="@(Model.DateFromFilter?.ToString("yyyy-MM-dd"))" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">To Date</label>
                        <input type="date" name="dateToFilter" value="@(Model.DateToFilter?.ToString("yyyy-MM-dd"))" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Search</label>
                        <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Patient, provider, reason..." class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">
                        <i class="fas fa-filter mr-2"></i>Apply Filters
                    </button>
                    <a asp-action="PendingApproval" class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 font-medium">
                        Reset
                    </a>
                </div>
            </form>
        </div>

        <div class="glass-card rounded-xl overflow-hidden">
            <div class="p-6 border-b border-slate-200 flex flex-col md:flex-row md:items-center md:justify-between gap-3">
                <div>
                    <h2 class="text-lg font-semibold text-slate-900">Awaiting approval</h2>
                    <p class="text-sm text-slate-600">Showing @Model.PendingAppointments.Count() request(s)</p>
                </div>
                <div class="flex items-center gap-3">
                    @if (hasPending)
                    {
                        <button type="button" id="bulkApproveBtn" class="px-3 py-2 rounded-lg bg-emerald-600 text-white text-sm font-semibold hover:bg-emerald-700 transition opacity-50 pointer-events-none" disabled>
                            <i class="fas fa-check-double mr-1"></i> Approve Selected
                        </button>
                        <form id="bulkDeclineForm" asp-action="BulkDecline" method="post" class="inline">
                            <input type="hidden" name="appointmentIds" id="bulkDeclineIds" />
                            <button type="submit" id="bulkDeclineBtn" class="px-3 py-2 rounded-lg bg-rose-50 text-rose-700 text-sm font-semibold border border-rose-200 hover:bg-rose-100 transition opacity-50 pointer-events-none" disabled>
                                <i class="fas fa-times-circle mr-1"></i> Decline Selected
                            </button>
                        </form>
                    }
                    <div class="flex items-center gap-2 text-sm text-slate-600">
                        <span class="flex items-center gap-1"><span class="badge-dot bg-amber-500"></span> Pending approval</span>
                        <span class="flex items-center gap-1"><span class="badge-dot bg-blue-500"></span> Scheduled</span>
                        <span class="flex items-center gap-1"><span class="badge-dot bg-rose-500"></span> Cancelled</span>
                    </div>
                </div>
            </div>

            @if (!hasPending)
            {
                <div class="p-10 text-center">
                    <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                        <i class="far fa-clock text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-slate-900 mb-2">No approvals waiting</h3>
                    <p class="text-slate-600 mb-4">New patient appointment requests will appear here for review.</p>
                    <a asp-action="Index" class="gradient-primary text-white px-6 py-3 rounded-lg font-medium hover:shadow-lg transition-shadow inline-flex items-center">
                        <i class="fas fa-calendar-alt mr-2"></i>
                        Go to schedule
                    </a>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="bg-slate-50 border-b border-slate-200">
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                                    <input type="checkbox" id="selectAll" class="rounded border-slate-300 text-blue-600 focus:ring-blue-500" />
                                </th>
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Patient</th>
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Requested Provider</th>
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Requested Time</th>
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Reason</th>
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Status</th>
                                <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                            @foreach (var appointment in Model.PendingAppointments)
                            {
                                var badgeColor = appointment.Status switch
                                {
                                    "Pending Approval" => "bg-amber-100 text-amber-800",
                                    "Cancelled" => "bg-rose-100 text-rose-700",
                                    "Scheduled" => "bg-blue-100 text-blue-700",
                                    _ => "bg-slate-100 text-slate-700"
                                };
                                var isUrgent = appointment.StartTime.Date <= DateTime.Today.AddDays(1);
                                var urgentClass = isUrgent ? "border-l-4 border-amber-500" : "";

                                <tr class="hover:bg-slate-50 transition-colors @urgentClass">
                                    <td class="py-4 px-6">
                                        <input type="checkbox" class="appointment-checkbox rounded border-slate-300 text-blue-600 focus:ring-blue-500" value="@appointment.Id" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <div class="font-semibold text-slate-900">@appointment.PatientName</div>
                                        <div class="text-xs text-slate-500">Room: @appointment.Location</div>
                                        @if (isUrgent)
                                        {
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800 mt-1">
                                                <i class="fas fa-exclamation-triangle mr-1"></i> Urgent
                                            </span>
                                        }
                                    </td>
                                    <td class="py-4 px-6 text-slate-700">@appointment.MedecinName</td>
                                    <td class="py-4 px-6">
                                        <div class="text-slate-900 font-medium">@appointment.StartTime.ToString("MMM dd, yyyy Â· h:mm tt")</div>
                                        <div class="text-xs text-slate-500">Ends @appointment.EndTime.ToString("h:mm tt")</div>
                                    </td>
                                    <td class="py-4 px-6 text-slate-700">@appointment.Reason</td>
                                    <td class="py-4 px-6">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @badgeColor">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td class="py-4 px-6">
                                        <div class="flex items-center gap-2">
                                            <button type="button" 
                                                    class="approve-btn px-3 py-2 rounded-lg bg-emerald-600 text-white text-sm font-semibold hover:bg-emerald-700 transition"
                                                    data-appointment-id="@appointment.Id"
                                                    data-patient-name="@appointment.PatientName">
                                                <i class="fas fa-check mr-1"></i> Approve
                                            </button>
                                            <form asp-action="DeclinePending" asp-route-id="@appointment.Id" method="post" class="inline">
                                                <button type="submit" class="px-3 py-2 rounded-lg bg-rose-50 text-rose-700 text-sm font-semibold border border-rose-200 hover:bg-rose-100 transition">
                                                    <i class="fas fa-times mr-1"></i> Cancel
                                                </button>
                                            </form>
                                            <a asp-action="Edit" asp-route-id="@appointment.Id" class="px-3 py-2 rounded-lg bg-white border border-slate-200 text-sm font-semibold text-slate-700 hover:border-slate-300 transition">
                                                <i class="fas fa-pen mr-1"></i> Edit
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Room Number Assignment Modal -->
    <div id="roomNumberModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
            <div class="p-6 border-b border-slate-200">
                <h3 class="text-lg font-semibold text-slate-900">Assign Room Number</h3>
                <p class="text-sm text-slate-600 mt-1" id="modalPatientName">Please assign a room number to approve this appointment.</p>
            </div>
            <form id="approveWithRoomForm" method="post" class="p-6">
                <input type="hidden" name="id" id="modalAppointmentId" />
                <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                <div class="mb-4">
                    <label for="roomNumber" class="block text-sm font-medium text-slate-700 mb-2">
                        Room Number <span class="text-rose-600">*</span>
                    </label>
                    <input type="number" 
                           id="roomNumber" 
                           name="roomNumber" 
                           required
                           min="1"
                           class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Enter room number" />
                    <p class="text-xs text-slate-500 mt-1">Room number is required to approve the appointment.</p>
                </div>
                <div class="flex items-center justify-end gap-3">
                    <button type="button" 
                            id="cancelRoomModal" 
                            class="px-4 py-2 rounded-lg bg-slate-100 text-slate-700 hover:bg-slate-200 font-medium transition">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="px-4 py-2 rounded-lg bg-emerald-600 text-white hover:bg-emerald-700 font-medium transition">
                        <i class="fas fa-check mr-2"></i>Approve Appointment
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bulk Approval Modal -->
    <div id="bulkRoomNumberModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
            <div class="p-6 border-b border-slate-200">
                <h3 class="text-lg font-semibold text-slate-900">Assign Room Numbers</h3>
                <p class="text-sm text-slate-600 mt-1">Please assign room numbers to all selected appointments.</p>
            </div>
            <form id="bulkApproveWithRoomForm" method="post" class="p-6">
                <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                <div id="bulkRoomInputs" class="space-y-4 mb-4">
                    <!-- Room number inputs will be dynamically inserted here -->
                </div>
                <div class="flex items-center justify-end gap-3 border-t border-slate-200 pt-4">
                    <button type="button" 
                            id="cancelBulkRoomModal" 
                            class="px-4 py-2 rounded-lg bg-slate-100 text-slate-700 hover:bg-slate-200 font-medium transition">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="px-4 py-2 rounded-lg bg-emerald-600 text-white hover:bg-emerald-700 font-medium transition">
                        <i class="fas fa-check-double mr-2"></i>Approve All
                    </button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const selectAllCheckbox = document.getElementById('selectAll');
                const appointmentCheckboxes = document.querySelectorAll('.appointment-checkbox');
                const bulkApproveBtn = document.getElementById('bulkApproveBtn');
                const bulkDeclineBtn = document.getElementById('bulkDeclineBtn');
                const bulkApproveForm = document.getElementById('bulkApproveForm');
                const bulkDeclineForm = document.getElementById('bulkDeclineForm');

                function updateBulkButtons() {
                    const checked = Array.from(appointmentCheckboxes).filter(cb => cb.checked);
                    const hasSelection = checked.length > 0;
                    
                    bulkApproveBtn.disabled = !hasSelection;
                    bulkDeclineBtn.disabled = !hasSelection;
                    
                    if (hasSelection) {
                        bulkApproveBtn.classList.remove('opacity-50', 'pointer-events-none');
                        bulkDeclineBtn.classList.remove('opacity-50', 'pointer-events-none');
                    } else {
                        bulkApproveBtn.classList.add('opacity-50', 'pointer-events-none');
                        bulkDeclineBtn.classList.add('opacity-50', 'pointer-events-none');
                    }
                }

                selectAllCheckbox?.addEventListener('change', function() {
                    appointmentCheckboxes.forEach(cb => {
                        cb.checked = this.checked;
                    });
                    updateBulkButtons();
                });

                appointmentCheckboxes.forEach(cb => {
                    cb.addEventListener('change', function() {
                        const allChecked = Array.from(appointmentCheckboxes).every(c => c.checked);
                        const someChecked = Array.from(appointmentCheckboxes).some(c => c.checked);
                        selectAllCheckbox.checked = allChecked;
                        selectAllCheckbox.indeterminate = someChecked && !allChecked;
                        updateBulkButtons();
                    });
                });

                // Room number modal elements
                const roomNumberModal = document.getElementById('roomNumberModal');
                const modalAppointmentId = document.getElementById('modalAppointmentId');
                const modalPatientName = document.getElementById('modalPatientName');
                const approveWithRoomForm = document.getElementById('approveWithRoomForm');
                const cancelRoomModal = document.getElementById('cancelRoomModal');
                const roomNumberInput = document.getElementById('roomNumber');

                // Bulk room number modal elements
                const bulkRoomNumberModal = document.getElementById('bulkRoomNumberModal');
                const bulkApproveWithRoomForm = document.getElementById('bulkApproveWithRoomForm');
                const bulkRoomInputs = document.getElementById('bulkRoomInputs');
                const cancelBulkRoomModal = document.getElementById('cancelBulkRoomModal');

                // Handle individual approve button clicks
                document.querySelectorAll('.approve-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const appointmentId = this.dataset.appointmentId;
                        const patientName = this.dataset.patientName;
                        
                        modalAppointmentId.value = appointmentId;
                        modalPatientName.textContent = `Please assign a room number to approve the appointment for ${patientName}.`;
                        roomNumberInput.value = '';
                        roomNumberModal.classList.remove('hidden');
                        roomNumberInput.focus();
                    });
                });

                // Handle approve form submission
                approveWithRoomForm?.addEventListener('submit', function(e) {
                    const roomNumber = roomNumberInput.value.trim();
                    if (!roomNumber || parseInt(roomNumber) < 1) {
                        e.preventDefault();
                        alert('Please enter a valid room number (minimum 1).');
                        roomNumberInput.focus();
                        return;
                    }
                    // Update form action to include room number
                    this.action = '@Url.Action("ApprovePending", "Appointments")/' + modalAppointmentId.value;
                });

                // Close individual room modal
                cancelRoomModal?.addEventListener('click', function() {
                    roomNumberModal.classList.add('hidden');
                    roomNumberInput.value = '';
                });

                // Handle bulk approve button click
                bulkApproveBtn?.addEventListener('click', function() {
                    if (this.disabled) return;
                    
                    const checked = Array.from(appointmentCheckboxes).filter(cb => cb.checked);
                    if (checked.length === 0) {
                        alert('Please select at least one appointment.');
                        return;
                    }

                    // Get appointment details
                    const appointments = checked.map(cb => {
                        const row = cb.closest('tr');
                        const patientName = row.querySelector('td:nth-child(2) .font-semibold')?.textContent.trim() || 'Unknown';
                        return {
                            id: cb.value,
                            patientName: patientName
                        };
                    });

                    // Clear previous inputs
                    bulkRoomInputs.innerHTML = '';

                    // Create room input for each appointment
                    appointments.forEach(app => {
                        const div = document.createElement('div');
                        div.className = 'border border-slate-200 rounded-lg p-4';
                        div.innerHTML = `
                            <label class="block text-sm font-medium text-slate-700 mb-2">
                                ${app.patientName} <span class="text-rose-600">*</span>
                            </label>
                            <input type="hidden" name="appointmentIds" value="${app.id}" />
                            <input type="number" 
                                   name="roomNumbers" 
                                   required
                                   min="1"
                                   class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="Enter room number for ${app.patientName}" />
                        `;
                        bulkRoomInputs.appendChild(div);
                    });

                    bulkRoomNumberModal.classList.remove('hidden');
                    // Focus on first input
                    const firstInput = bulkRoomInputs.querySelector('input[type="number"]');
                    if (firstInput) firstInput.focus();
                });

                // Handle bulk approve form submission
                bulkApproveWithRoomForm?.addEventListener('submit', function(e) {
                    const roomInputs = bulkRoomInputs.querySelectorAll('input[name="roomNumbers"]');
                    let allValid = true;
                    
                    roomInputs.forEach(input => {
                        if (!input.value.trim() || parseInt(input.value) < 1) {
                            allValid = false;
                            input.classList.add('border-rose-500');
                        } else {
                            input.classList.remove('border-rose-500');
                        }
                    });

                    if (!allValid) {
                        e.preventDefault();
                        alert('Please enter a valid room number for all appointments (minimum 1).');
                        return;
                    }

                    // Update form action
                    this.action = '@Url.Action("BulkApprove", "Appointments")';
                });

                // Close bulk room modal
                cancelBulkRoomModal?.addEventListener('click', function() {
                    bulkRoomNumberModal.classList.add('hidden');
                    bulkRoomInputs.innerHTML = '';
                });

                // Close modals when clicking outside
                roomNumberModal?.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.classList.add('hidden');
                    }
                });

                bulkRoomNumberModal?.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.classList.add('hidden');
                    }
                });

                bulkDeclineForm?.addEventListener('submit', function(e) {
                    const checked = Array.from(appointmentCheckboxes).filter(cb => cb.checked).map(cb => cb.value);
                    document.getElementById('bulkDeclineIds').value = checked.join(',');
                    if (checked.length === 0) {
                        e.preventDefault();
                        alert('Please select at least one appointment.');
                    } else if (!confirm(`Are you sure you want to decline ${checked.length} appointment(s)?`)) {
                        e.preventDefault();
                    }
                });

                updateBulkButtons();
            });
        </script>
    }
