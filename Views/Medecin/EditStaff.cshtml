@model MedicalOfficeManagement.Models.Medecin

<div class="max-w-2xl mx-auto p-10 mt-10 bg-white rounded-3xl shadow-sm border">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Edit Administrative Staff</h2>
    
    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 text-sm font-medium"></div>

    @* On précise asp-route-id pour correspondre à la signature de l'action *@
    <form asp-action="EditStaff" asp-route-id="@Model.ApplicationUserId" method="post" class="space-y-6">
        
        @* On utilise SEULEMENT le GUID ici *@
        <input type="hidden" asp-for="ApplicationUserId" />

        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
            <input asp-for="NomPrenom" class="w-full px-4 py-3 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" required />
            <span asp-validation-for="NomPrenom" class="text-red-500 text-xs"></span>
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
            <input asp-for="Email" type="email" class="w-full px-4 py-3 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" required />
            <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number</label>
            <input asp-for="Telephone" class="w-full px-4 py-3 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" />
            <span asp-validation-for="Telephone" class="text-red-500 text-xs"></span>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-6">
            <a asp-action="Index" class="text-gray-500 font-semibold hover:underline">Cancel</a>
            <button type="submit" class="px-8 py-3 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700 shadow-lg transition-all">
                Update Profile
            </button>
        </div>
    </form>
</div>