@model IEnumerable<MedicalOfficeManagement.Controllers.StaffVM>

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Directory</div>
            <div>
                <h1 class="page-title">Cabinet Staff Directory</h1>
                <p class="page-subtitle">Manage all registered doctors and administrative staff.</p>
            </div>
        </div>
        <a asp-action="Create" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Add New Staff
        </a>
    </div>

    <div class="table-shell">
        <table class="w-full text-left">
            <thead class="table-head">
                <tr>
                    <th class="px-6 py-4">Member Information</th>
                    <th class="px-6 py-4 text-center">Role</th>
                    <th class="px-6 py-4">Specialty</th>
                    <th class="px-6 py-4">Address</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="h-10 w-10 rounded-full @(item.Role == "Medecin" ? "bg-brand-50 text-brand-700" : "bg-green-50 text-green-700") flex items-center justify-center font-bold">
                                    @item.NomPrenom.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <div class="text-sm font-semibold text-slate-900">@(item.Role == "Medecin" ? "Dr. " : "")@item.NomPrenom</div>
                                    <div class="text-xs text-slate-500">@item.Email</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="badge-soft @(item.Role == "Medecin" ? "blue" : "green") uppercase">@item.Role</span>
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-600">@item.Specialite</td>
                        <td class="px-6 py-4 text-sm text-slate-600">
                            <div class="flex items-center gap-1">
                                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                @item.Address
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end items-center gap-2">
                                @if (item.Role == "Medecin")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.MedecinId" class="btn-ghost text-amber-600">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="EditStaff" asp-route-id="@item.UserId" class="btn-ghost text-amber-600">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                                    </a>
                                }
                                <a asp-action="Delete" asp-route-id="@(item.Role == "Medecin" ? item.MedecinId : null)" asp-route-userId="@(item.Role != "Medecin" ? item.UserId : null)" class="btn-ghost text-red-600">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>