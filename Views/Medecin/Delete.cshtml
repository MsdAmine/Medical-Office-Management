@model MedicalOfficeManagement.Models.Medecin

@{
    ViewData["Title"] = "Supprimer le Médecin";
}

<h1>Supprimer</h1>
<h3>Êtes-vous sûr de vouloir supprimer ce médecin ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NomPrenom)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NomPrenom)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Specialite)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Specialite)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
    </dl>

    <form asp-action="Delete">
        @* 🛑 CHAMP CACHÉ OBLIGATOIRE *@
        <input type="hidden" asp-for="Id" />
        
        <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>