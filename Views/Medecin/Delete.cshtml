@model MedicalOfficeManagement.Models.Medecin

<div class="min-h-[80vh] flex items-center justify-center p-6 bg-gray-50/30">
    <div class="max-w-md w-full bg-white rounded-[2.5rem] shadow-2xl border border-gray-100 p-12 text-center">
        
        <div class="mb-8 flex justify-center">
            <div class="bg-red-50 p-6 rounded-3xl border border-red-100">
                <svg class="w-12 h-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
        </div>

        <h2 class="text-3xl font-black text-gray-900 mb-3">Confirm Deletion</h2>
        <p class="text-gray-500 mb-10 text-lg">
            Are you sure you want to permanently remove <span class="font-bold text-gray-800">@Model.NomPrenom</span>?
        </p>

        <div class="bg-gray-50 rounded-3xl p-8 mb-10 border border-gray-100 text-left space-y-4">
            <div class="flex justify-between items-center border-b border-gray-100 pb-3">
                <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Specialty / Dept</span>
                <span class="text-sm font-bold text-gray-700">@Model.Specialite</span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Email</span>
                <span class="text-sm font-bold text-gray-700">@Model.Email</span>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            @* On inclut les deux IDs pour que le contrôleur puisse traiter n'importe quel type de profil *@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />
            
            <button type="submit" class="w-full py-5 bg-red-600 hover:bg-red-700 text-white rounded-2xl font-bold text-xl shadow-xl shadow-red-100 transition-all transform active:scale-95 mb-6">
                Delete Member
            </button>
            
            <a asp-action="Index" class="block py-2 text-gray-400 font-bold hover:text-gray-600 transition-colors uppercase text-xs tracking-[0.2em]">
                Cancel and Go Back
            </a>
        </form>
    </div>
</div>