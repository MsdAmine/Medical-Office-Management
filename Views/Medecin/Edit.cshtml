@model MedicalOfficeManagement.Models.Medecin

@{
    ViewData["Title"] = "Update Doctor Profile";
}

<div class="max-w-4xl mx-auto py-8 px-4">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Update Profile</h1>
            <p class="mt-2 text-gray-500">Refine professional details for Dr. @Model.NomPrenom</p>
        </div>
        <a asp-action="Index" class="text-sm font-semibold text-blue-600 hover:text-blue-800 flex items-center transition">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            Back to List
        </a>
    </div>

    <div class="bg-white rounded-3xl shadow-xl shadow-blue-900/5 border border-gray-100 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 h-2"></div>
        
        <form asp-action="Edit" method="post" class="p-8 md:p-12">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 text-red-600 rounded-xl text-sm italic"></div>
            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="space-y-6">
                    <div>
                        <label asp-for="NomPrenom" class="block text-xs font-bold text-gray-400 uppercase mb-2 ml-1">Full Name</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                            </span>
                            <input asp-for="NomPrenom" class="block w-full pl-10 pr-4 py-3 bg-gray-50 border-transparent rounded-2xl focus:bg-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" />
                        </div>
                        <span asp-validation-for="NomPrenom" class="text-red-500 text-xs mt-1 italic"></span>
                    </div>

                    <div>
                        <label asp-for="Specialite" class="block text-xs font-bold text-gray-400 uppercase mb-2 ml-1">Specialty</label>
                        <select asp-for="Specialite" class="block w-full px-4 py-3 bg-gray-50 border-transparent rounded-2xl focus:bg-white focus:ring-2 focus:ring-blue-500 transition" asp-items="@ViewBag.Specialites"></select>
                    </div>
                </div>

                <div class="space-y-6">
                    <div>
                        <label asp-for="Email" class="block text-xs font-bold text-gray-400 uppercase mb-2 ml-1">Email</label>
                        <input asp-for="Email" class="block w-full px-4 py-3 bg-gray-50 border-transparent rounded-2xl focus:bg-white focus:ring-2 focus:ring-blue-500 transition" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 italic"></span>
                    </div>

                    <div>
                        <label asp-for="Telephone" class="block text-xs font-bold text-gray-400 uppercase mb-2 ml-1">Phone Number</label>
                        <input asp-for="Telephone" class="block w-full px-4 py-3 bg-gray-50 border-transparent rounded-2xl focus:bg-white focus:ring-2 focus:ring-blue-500 transition" />
                    </div>
                </div>

                <div class="md:col-span-2">
                    <label asp-for="Adresse" class="block text-xs font-bold text-gray-400 uppercase mb-2 ml-1">Office Address</label>
                    <textarea asp-for="Adresse" rows="3" class="block w-full px-4 py-3 bg-gray-50 border-transparent rounded-2xl focus:bg-white focus:ring-2 focus:ring-blue-500 transition"></textarea>
                </div>
            </div>

            <div class="mt-12 flex items-center justify-end">
                <button type="submit" class="bg-blue-600 text-white px-10 py-4 rounded-2xl hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-200 transition-all font-bold tracking-wide">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>