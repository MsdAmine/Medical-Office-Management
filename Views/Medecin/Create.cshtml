@model MedicalOfficeManagement.Models.Medecin

<div class="max-w-3xl mx-auto mt-10">
    <div class="bg-white p-10 rounded-3xl shadow-sm border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-800 mb-8">Create Doctor Profile</h2>

        <form asp-action="Create" method="post" class="space-y-6">
            @* Full Name Input *@
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                <input asp-for="NomPrenom" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all" placeholder="Enter full name" />
            </div>

            @* Specialty Dropdown (Correction) *@
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Specialty</label>
                <select asp-for="Specialite" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition-all bg-white">
                    <option value="">-- Select Specialty --</option>
                    <option value="Generalist">Generalist</option>
                    <option value="Cardiologist">Cardiologist</option>
                    <option value="Dermatologist">Dermatologist</option>
                    <option value="Pediatrician">Pediatrician</option>
                    <option value="Neurologist">Neurologist</option>
                </select>
            </div>

            @* Email and Phone Row *@
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Professional Email</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Phone</label>
                    <input asp-for="Telephone" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>
            </div>

            @* Office Address Textarea *@
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Office Address</label>
                <textarea asp-for="Adresse" rows="4" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"></textarea>
            </div>

            @* Buttons *@
            <div class="flex items-center justify-end space-x-6 pt-6">
                <a href="@Url.Action("Index")" class="text-gray-400 font-semibold hover:text-gray-600">Cancel</a>
                <button type="submit" class="px-10 py-3 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700 shadow-lg shadow-blue-100 transition-all">
                    Create Account
                </button>
            </div>
        </form>
    </div>
</div>