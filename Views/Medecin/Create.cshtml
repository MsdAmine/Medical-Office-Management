@model MedicalOfficeManagement.Models.Medecin

<div class="page-shell">
    <div class="page-header">
        <div>
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Staff</div>
            <h1 class="page-title mt-2">Add New Staff Member</h1>
            <p class="page-subtitle">Create an account for a doctor or administrative member.</p>
        </div>
        <a asp-action="Index" class="btn-secondary">Cancel</a>
    </div>

    <div class="surface p-8 md:p-10 space-y-6">
        <form asp-action="Create" method="post" class="space-y-6">
            <div class="form-field">
                <label class="form-label">Account Type</label>
                <select name="SelectedRole" id="roleSelector" class="form-input">
                    <option value="Medecin">Doctor</option>
                    <option value="Personnel">Administrative (Secretary)</option>
                </select>
            </div>

            <div class="form-grid">
                <div class="form-field">
                    <label class="form-label">Full Name</label>
                    <input asp-for="NomPrenom" class="form-input" required />
                </div>
                <div class="form-field">
                    <label class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-input" required />
                </div>
            </div>

            <div id="doctorSection" class="form-grid">
                <div class="form-field">
                    <label class="form-label">Medical Specialty</label>
                    <select asp-for="Specialite" asp-items="ViewBag.Specialites" class="form-input"></select>
                </div>
                <div class="form-field">
                    <label class="form-label">Office Phone</label>
                    <input asp-for="Telephone" class="form-input" />
                </div>
            </div>

            <div id="secretarySection" style="display:none;" class="space-y-4">
                <div class="form-grid">
                    <div class="form-field">
                        <label class="form-label">Direct Phone Line</label>
                        <input name="TelephonePersonnel" class="form-input" placeholder="06..." />
                    </div>
                    <div class="form-field">
                        <label class="form-label">Department</label>
                        <input name="ServicePersonnel" class="form-input" placeholder="Billing, Reception..." />
                    </div>
                </div>
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <a asp-action="Index" class="btn-secondary">Back</a>
                <button type="submit" class="btn-primary">Create Account</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('roleSelector').addEventListener('change', function () {
            const docSec = document.getElementById('doctorSection');
            const secSec = document.getElementById('secretarySection');

            if (this.value === 'Personnel') {
                docSec.style.display = 'none';
                secSec.style.display = 'block';
            } else {
                docSec.style.display = 'grid';
                secSec.style.display = 'none';
            }
        });
    </script>
}
