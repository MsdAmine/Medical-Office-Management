@model MedicalOfficeManagement.Models.Medecin

<div class="max-w-3xl mx-auto mt-10">
    <div class="bg-white p-10 rounded-3xl shadow-sm border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-800 mb-8">Create Staff Profile</h2>

        <form asp-action="Create" method="post" class="space-y-6">
            @* Affichage des erreurs pour déboguer *@
            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Account Type</label>
                <select name="SelectedRole" id="roleSelect" class="w-full px-4 py-3 border border-blue-200 bg-blue-50 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none font-bold text-blue-700">
                    <option value="Medecin">Doctor (Medecin)</option>
                    <option value="Personnel">Secretary (Personnel)</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                <input asp-for="NomPrenom" required class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" />
            </div>

            <div id="doctorSpecificFields">
                <div class="mb-6">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Specialty</label>
                    <select asp-for="Specialite" asp-items="ViewBag.Specialites" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none bg-white">
                        <option value="">-- Select Specialty --</option>
                    </select>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Office Address</label>
                    <textarea asp-for="Adresse" rows="3" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"></textarea>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Professional Email</label>
                    <input asp-for="Email" type="email" required class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Phone</label>
                    <input asp-for="Telephone" class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>
            </div>

            <div class="flex items-center justify-end space-x-6 pt-6 border-t border-gray-50">
                <a href="@Url.Action("Index")" class="text-gray-400 font-semibold hover:text-gray-600">Cancel</a>
                <button type="submit" class="px-10 py-3 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700 shadow-lg transition-all">
                    Create Account
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const roleSelect = document.getElementById('roleSelect');
        const doctorFields = document.getElementById('doctorSpecificFields');

        roleSelect.addEventListener('change', function() {
            if (this.value === 'Personnel') {
                doctorFields.style.display = 'none';
                // Optionnel : mettre des valeurs par défaut pour éviter les erreurs de validation
                document.querySelector('[name="Specialite"]').value = "N/A";
            } else {
                doctorFields.style.display = 'block';
                document.querySelector('[name="Specialite"]').value = "";
            }
        });
    </script>
}