@model MedicalOfficeManagement.Models.Medecin

@{
    ViewData["Title"] = "Add Doctor";
}

<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-sm border border-gray-200 p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Create Doctor Profile</h2>

    <form asp-action="Create" class="space-y-5">
        <div asp-validation-summary="All" class="text-red-500 text-sm italic"></div>

        <div>
            <label asp-for="NomPrenom" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input asp-for="NomPrenom" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="NomPrenom" class="text-red-500 text-xs"></span>
        </div>

        <div>
            <label asp-for="Specialite" class="block text-sm font-medium text-gray-700 mb-1">Specialty</label>
            <select asp-for="Specialite" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" asp-items="@ViewBag.Specialites">
                <option value="">-- Select Specialty --</option>
            </select>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Professional Email</label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
            <div>
                <label asp-for="Telephone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                <input asp-for="Telephone" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
        </div>

        <div>
            <label asp-for="Adresse" class="block text-sm font-medium text-gray-700 mb-1">Office Address</label>
            <textarea asp-for="Adresse" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"></textarea>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-4">
            <a asp-action="Index" class="text-gray-500 hover:underline">Cancel</a>
            <button type="submit" class="bg-blue-600 text-white px-8 py-2 rounded-lg hover:bg-blue-700 transition font-bold shadow-lg">
                Create Account
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}