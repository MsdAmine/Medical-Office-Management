@model MedicalOfficeManagement.Models.Medecin

<div class="page-shell">
    <div class="page-header">
        <div>
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Staff Management</div>
            <h1 class="page-title mt-2">Add New Staff Member</h1>
        </div>
        <a asp-action="Index" class="btn-secondary">Cancel</a>
    </div>

    <div class="surface p-8 md:p-10 space-y-6">
        <div asp-validation-summary="All" class="rounded-xl bg-red-50 p-4 text-sm text-red-600 font-bold mb-4"></div>

        <form asp-action="Create" method="post" class="space-y-6">
            <div class="form-field">
                <label class="form-label">Account Type</label>
                <select name="SelectedRole" id="roleSelector" class="form-input bg-brand-50 border-brand-100 font-bold text-brand-700">
                    <option value="Medecin">Doctor</option>
                    <option value="Personnel">Secretary (Personnel)</option>
                </select>
            </div>

            <div class="form-grid">
                <div class="form-field">
                    <label class="form-label">Full Name</label>
                    <input asp-for="NomPrenom" class="form-input" required placeholder="John Doe" />
                    <span asp-validation-for="NomPrenom" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-field">
                    <label class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-input" required placeholder="john@example.com" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>
            </div>

            @* Common field for both: Address *@
            <div class="form-field">
                <label class="form-label" id="addressLabel">Office/Clinic Address</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path></svg>
                    </span>
                    <input asp-for="Adresse" class="form-input pl-10" placeholder="Street, Building, Floor..." />
                </div>
                <span asp-validation-for="Adresse" class="text-red-500 text-xs"></span>
            </div>

            <div id="doctorSection" class="space-y-6">
                <div class="form-grid">
                    <div class="form-field">
                        <label class="form-label">Medical Specialty</label>
                        <select asp-for="Specialite" asp-items="ViewBag.Specialites" class="form-input"></select>
                    </div>
                    <div class="form-field">
                        <label class="form-label">Office Phone</label>
                        <input asp-for="Telephone" class="form-input" placeholder="+1..." />
                    </div>
                </div>
            </div>

            <div id="secretarySection" style="display:none;" class="form-grid">
                <div class="form-field">
                    <label class="form-label">Direct Phone Line</label>
                    <input name="TelephonePersonnel" class="form-input" placeholder="Ext. 404" />
                </div>
                <div class="form-field">
                    <label class="form-label">Department</label>
                    <input name="ServicePersonnel" class="form-input" placeholder="Reception / Billing" />
                </div>
            </div>

            <div class="flex justify-end gap-3 pt-6 border-t border-slate-100">
                <a asp-action="Index" class="btn-secondary px-8">Back</a>
                <button type="submit" class="btn-primary px-10 shadow-lg shadow-brand-200">Create Account</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('roleSelector').addEventListener('change', function () {
            const isDoctor = this.value === 'Medecin';
            const doctorSection = document.getElementById('doctorSection');
            const secretarySection = document.getElementById('secretarySection');
            const addressLabel = document.getElementById('addressLabel');

            doctorSection.style.display = isDoctor ? 'block' : 'none';
            secretarySection.style.display = isDoctor ? 'none' : 'grid';
            
            // UI Hint Change
            addressLabel.innerText = isDoctor ? 'Office/Clinic Address' : 'Personnel Home/Office Address';
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}