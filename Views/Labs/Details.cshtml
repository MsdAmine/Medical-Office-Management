@model MedicalOfficeManagement.Models.LabResult
@{
    ViewData["Title"] = "Lab Result Details";
}

<div class="max-w-4xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-sm text-emerald-600 font-semibold uppercase tracking-wide">Lab</p>
            <h1 class="text-2xl font-bold text-slate-900">Result Details</h1>
            <p class="text-slate-600 mt-1">Review collection details, urgency, and notes.</p>
        </div>
        <div class="flex gap-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 rounded-lg border border-amber-200 text-amber-700 hover:bg-amber-50">
                <i class="fas fa-pen mr-2"></i>
                Edit
            </a>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-50">Back to queue</a>
        </div>
    </div>

    <div class="bg-white border border-slate-200 rounded-xl shadow-sm p-6 space-y-4">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <dt class="text-sm font-medium text-slate-500">Patient</dt>
                <dd class="text-lg font-semibold text-slate-900">@Model.Patient?.Prenom @Model.Patient?.Nom</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-slate-500">Ordering Provider</dt>
                <dd class="text-lg font-semibold text-slate-900">@Model.Medecin?.NomPrenom ?? "Unassigned"</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-slate-500">Test</dt>
                <dd class="text-lg font-semibold text-slate-900">@Model.TestName</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-slate-500">Priority</dt>
                <dd class="text-lg font-semibold text-slate-900">@Model.Priority</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-slate-500">Status</dt>
                <dd class="text-lg font-semibold text-slate-900">@Model.Status</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-slate-500">Collected On</dt>
                <dd class="text-lg font-semibold text-slate-900">@Model.CollectedOn.ToString("f")</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-slate-500">Result</dt>
                <dd class="text-lg text-slate-900">@Model.ResultValue</dd>
            </div>
        </dl>
        <div>
            <h2 class="text-sm font-medium text-slate-500 uppercase tracking-wide mb-2">Notes</h2>
            <p class="text-slate-700 whitespace-pre-line">@Model.Notes</p>
        </div>
    </div>
</div>
