@model MedicalOfficeManagement.ViewModels.LabIndexViewModel
@{
    ViewData["Title"] = "Lab Results";
}

<div class="space-y-6">
    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <p class="text-sm text-emerald-600 font-semibold mb-1 uppercase tracking-wide">Diagnostic</p>
                <h1 class="text-2xl font-bold text-slate-900">Laboratory Results</h1>
                <p class="text-slate-600 mt-1">Stay ahead of pending results and urgent findings.</p>
            </div>
            <div class="flex items-center gap-3">
                <a asp-action="Export" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition">
                    <i class="fas fa-cloud-download-alt mr-2 text-emerald-500"></i>
                    Export
                </a>
                <a asp-action="Create" class="inline-flex items-center px-4 py-2 rounded-lg bg-emerald-600 text-white font-medium hover:bg-emerald-700 transition">
                    <i class="fas fa-plus mr-2"></i>
                    New order
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Pending results</p>
                <span class="text-amber-500"><i class="fas fa-hourglass-half"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.PendingResults</div>
            <p class="text-sm text-slate-500 mt-1">Samples in processing</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Critical findings</p>
                <span class="text-red-500"><i class="fas fa-heartbeat"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.CriticalFindings</div>
            <p class="text-sm text-slate-500 mt-1">Require rapid escalation</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Completed today</p>
                <span class="text-emerald-500"><i class="fas fa-check-circle"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.CompletedToday</div>
            <p class="text-sm text-slate-500 mt-1">Results released to EHR</p>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 p-6 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Result queue</h2>
                <p class="text-sm text-slate-600">Prioritize reviews by urgency and status.</p>
            </div>
            <div class="flex items-center gap-2">
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-filter mr-2 text-slate-500"></i>
                    Filters
                </button>
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-list-ul mr-2 text-slate-500"></i>
                    Worklist
                </button>
            </div>
        </div>

        <div class="divide-y divide-slate-100">
            @foreach (var result in Model.Results)
            {
                <div class="p-6 flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div class="flex items-start gap-4">
                        <div class="h-10 w-10 rounded-lg bg-emerald-50 flex items-center justify-center text-emerald-600">
                            <i class="fas fa-flask"></i>
                        </div>
                        <div>
                            <p class="text-lg font-semibold text-slate-900">@result.TestName</p>
                            <p class="text-sm text-slate-500">@result.PatientName â€¢ Collected @result.CollectedOn.ToString("HH:mm")</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetPriorityClasses(result.Priority)">
                            <i class="fas fa-exclamation-circle mr-2 text-xs"></i>
                            @result.Priority
                        </span>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetStatusClasses(result.Status)">
                            <i class="fas fa-circle text-xs mr-2"></i>
                            @result.Status
                        </span>
                        <a asp-action="Details" asp-route-id="@result.Id" class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                            Open
                        </a>
                        <a asp-action="Edit" asp-route-id="@result.Id" class="inline-flex items-center px-3 py-2 rounded-lg border border-amber-200 text-sm font-medium text-amber-800 hover:bg-amber-50">
                            Edit
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetPriorityClasses(string priority)
    {
        return priority switch
        {
            "STAT" => "bg-red-100 text-red-800",
            "Routine" => "bg-emerald-100 text-emerald-800",
            _ => "bg-slate-100 text-slate-800"
        };
    }

    private string GetStatusClasses(string status)
    {
        return status switch
        {
            "Completed" => "bg-emerald-100 text-emerald-800",
            "In Progress" => "bg-blue-100 text-blue-800",
            "Pending Review" => "bg-amber-100 text-amber-800",
            _ => "bg-slate-100 text-slate-800"
        };
    }
}
