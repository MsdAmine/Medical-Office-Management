@model X.PagedList.IPagedList<MedicalOfficeManagement.Models.Consultation>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = ViewData["Title"] ?? "Consultations";
    ViewData["Breadcrumb"] = "Consultations";
}

<div class="space-y-6">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Consultations</h1>
            <p class="text-slate-600 mt-2">Manage patient consultations and medical records</p>
        </div>
        <a asp-action="Create" class="gradient-primary text-white px-4 py-2 rounded-lg font-medium hover:shadow-lg transition-shadow flex items-center">
            <i class="fas fa-plus mr-2"></i>
            New Consultation
        </a>
    </div>

    <div class="glass-card rounded-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-slate-50 border-b border-slate-200">
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Date</th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Patient</th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Doctor</th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Diagnostics</th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                    @foreach (var consultation in Model)
                    {
                        var patientName = consultation.Patient != null 
                            ? $"{consultation.Patient.Prenom} {consultation.Patient.Nom}".Trim() 
                            : "Unknown Patient";
                        var doctorName = consultation.Medecin?.NomPrenom ?? "Unassigned";
                        var diagnostics = !string.IsNullOrWhiteSpace(consultation.Diagnostics) 
                            ? (consultation.Diagnostics.Length > 50 ? consultation.Diagnostics.Substring(0, 50) + "..." : consultation.Diagnostics)
                            : "N/A";

                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="py-4 px-6">
                                <div class="font-semibold text-slate-900">@consultation.DateConsult.ToString("MMM dd, yyyy")</div>
                                <div class="text-xs text-slate-500">@consultation.DateConsult.ToString("HH:mm")</div>
                            </td>
                            <td class="py-4 px-6 text-slate-700">@patientName</td>
                            <td class="py-4 px-6 text-slate-700">@doctorName</td>
                            <td class="py-4 px-6 text-slate-700">@diagnostics</td>
                            <td class="py-4 px-6">
                                <div class="flex items-center space-x-2">
                                    <a asp-action="Details" asp-route-id="@consultation.Id" class="p-2 text-slate-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@consultation.Id" class="p-2 text-slate-600 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="p-10 text-center">
                <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                    <i class="fas fa-stethoscope text-2xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-slate-900 mb-2">No consultations found</h3>
                <p class="text-slate-600 mb-4">Create your first consultation to get started.</p>
                <a asp-action="Create" class="gradient-primary text-white px-6 py-3 rounded-lg font-medium hover:shadow-lg transition-shadow inline-flex items-center">
                    <i class="fas fa-plus mr-2"></i>
                    Create Consultation
                </a>
            </div>
        }
        else
        {
            <div class="p-4 border-t border-slate-200 flex items-center justify-between">
                <p class="text-sm text-slate-600">
                    Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItemCount)) of @Model.TotalItemCount consultation(s)
                </p>
                <div>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                        new PagedListRenderOptions {
                            DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
                            DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            UlElementClasses = new[] { "flex", "items-center", "space-x-2" },
                            LiElementClasses = new[] { "px-3", "py-2", "border", "border-slate-300", "rounded-lg" },
                            ActiveLiElementClass = "bg-blue-600 text-white border-blue-600",
                            PageClasses = new[] { "text-sm", "font-medium" }
                        })
                </div>
            </div>
        }
    </div>
</div>
