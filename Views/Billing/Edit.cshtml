@model MedicalOfficeManagement.Models.BillingInvoice
@{
    ViewData["Title"] = "Edit Invoice";
    ViewData["Breadcrumb"] = "Billing";
}

<div class="max-w-4xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-sm text-indigo-600 font-semibold uppercase tracking-wide">Billing</p>
            <h1 class="text-2xl font-bold text-slate-900">Edit Invoice</h1>
            <p class="text-slate-600 mt-1">Update billing details for this invoice.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-50">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to list
        </a>
    </div>

    <div class="bg-white border border-slate-200 rounded-xl shadow-sm p-6">
        <form asp-action="Edit" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="InvoiceNumber" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="InvoiceNumber" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="InvoiceNumber" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="PatientName" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="PatientName" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="PatientName" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Service" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Service" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="Service" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Amount" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Amount" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="Amount" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <select asp-for="Status" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="Draft">Draft</option>
                        <option value="Pending">Pending</option>
                        <option value="Overdue">Overdue</option>
                        <option value="Paid">Paid</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="IssuedOn" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="IssuedOn" type="date" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="IssuedOn" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="DueDate" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="DueDate" type="date" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="DueDate" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="PaymentMethod" class="block text-sm font-medium text-slate-900 mb-2"></label>
                <input asp-for="PaymentMethod" class="w-full border border-slate-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="PaymentMethod" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center justify-end gap-3">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-50">Cancel</a>
                <button type="submit" class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 text-white font-medium hover:bg-indigo-700">
                    <i class="fas fa-save mr-2"></i>
                    Update invoice
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
