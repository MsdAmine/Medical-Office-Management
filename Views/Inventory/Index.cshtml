@model MedicalOfficeManagement.ViewModels.InventoryIndexViewModel
@{
    ViewData["Title"] = "Inventory";
}

<div class="space-y-6">
    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <p class="text-sm text-indigo-600 font-semibold mb-1 uppercase tracking-wide">Administration</p>
                <h1 class="text-2xl font-bold text-slate-900">Inventory</h1>
                <p class="text-slate-600 mt-1">Monitor supply levels and reorder risks in real time.</p>
            </div>
            <div class="flex items-center gap-3">
                <button class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition">
                    <i class="fas fa-file-export mr-2 text-indigo-500"></i>
                    Export list
                </button>
                <button class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 text-white font-medium hover:bg-indigo-700 transition">
                    <i class="fas fa-plus mr-2"></i>
                    Add item
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Total SKUs</p>
                <span class="text-indigo-500"><i class="fas fa-boxes"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.TotalSkus</div>
            <p class="text-sm text-slate-500 mt-1">Active inventory lines</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Low stock items</p>
                <span class="text-amber-500"><i class="fas fa-exclamation-circle"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.LowStockCount</div>
            <p class="text-sm text-slate-500 mt-1">Below target threshold</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Reorder alerts</p>
                <span class="text-red-500"><i class="fas fa-truck-loading"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.ReorderAlerts</div>
            <p class="text-sm text-slate-500 mt-1">Require purchase order</p>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 p-6 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Supply ledger</h2>
                <p class="text-sm text-slate-600">Track quantities and reorder thresholds.</p>
            </div>
            <div class="flex items-center gap-2">
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-filter mr-2 text-slate-500"></i>
                    Filters
                </button>
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-cog mr-2 text-slate-500"></i>
                    Manage catalogs
                </button>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Item</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Category</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Quantity</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Reorder level</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Status</th>
                        <th class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div class="h-10 w-10 rounded-lg bg-indigo-50 flex items-center justify-center text-indigo-600">
                                        <i class="fas fa-box-open"></i>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-slate-900">@item.ItemName</p>
                                        <p class="text-sm text-slate-500">SKU @item.ItemName.Substring(0, Math.Min(3, item.ItemName.Length)).ToUpper()</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@item.Category</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@item.Quantity</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">@item.ReorderLevel</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetStatusClasses(item.Status)">
                                    <i class="fas fa-circle text-xs mr-2"></i>
                                    @item.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                                    Adjust
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private string GetStatusClasses(string status)
    {
        return status switch
        {
            "In Stock" => "bg-emerald-100 text-emerald-800",
            "Low Stock" => "bg-amber-100 text-amber-800",
            "Reorder" => "bg-red-100 text-red-800",
            _ => "bg-slate-100 text-slate-800"
        };
    }
}
