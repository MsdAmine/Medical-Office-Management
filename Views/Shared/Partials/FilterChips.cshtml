@model MedicalOfficeManagement.ViewModels.UI.FilterChipsModel

<div class="flex flex-wrap items-center gap-2">
    <span class="text-xs font-semibold tracking-wide uppercase text-slate-500">@Model.Title</span>
    @foreach (var chip in Model.Chips)
    {
        var toneClass = chip.Tone switch
        {
            "danger" => "chip high",
            "warning" => "chip medium",
            "success" => "chip low",
            "active" => "chip active",
            _ => "chip"
        };
        <span class="@toneClass">
            <span class="h-2 w-2 rounded-full bg-current/60"></span>
            @chip.Label
        </span>
    }
</div>
