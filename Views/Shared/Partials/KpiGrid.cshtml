@model MedicalOfficeManagement.ViewModels.UI.KpiGridModel

<div class="kpi-grid">
    @foreach (var item in Model.Items)
    {
        var toneClass = item.DeltaTone switch
        {
            "success" => "text-emerald-700",
            "warning" => "text-amber-700",
            "danger" => "text-rose-700",
            _ => "text-slate-700"
        };
        var hasIcon = !string.IsNullOrEmpty(item.Icon);
        <div class="kpi-card space-y-3 shadow-sm">
            <div class="flex items-center justify-between gap-3">
                <div class="text-xs font-semibold uppercase tracking-wide text-slate-700">@item.Label</div>
                @if (!string.IsNullOrEmpty(item.Pill))
                {
                    <span class="badge neutral">@item.Pill</span>
                }
            </div>
            <div class="flex items-center gap-3">
                <span class="inline-flex h-11 w-11 items-center justify-center rounded-lg bg-slate-50 ring-1 ring-slate-200 text-brand-700">
                    @if (hasIcon)
                    {
                        <span class="iconify w-6 h-6" data-icon="@item.Icon"></span>
                    }
                    else
                    {
                        <span aria-hidden="true">üè•</span>
                    }
                </span>
                <div class="flex items-baseline gap-3">
                    <div class="kpi-value leading-none">@item.Value</div>
                    @if (!string.IsNullOrEmpty(item.Delta))
                    {
                        <span class="text-sm font-semibold @toneClass">@item.Delta</span>
                    }
                </div>
            </div>
            @if (!string.IsNullOrEmpty(item.Helper))
            {
                <div class="flex items-center gap-2 text-sm text-slate-700">
                    <span class="iconify w-4 h-4 text-slate-500" data-icon="solar:info-circle-bold-duotone"></span>
                    <span class="kpi-helper text-slate-700">@item.Helper</span>
                </div>
            }
        </div>
    }
</div>
