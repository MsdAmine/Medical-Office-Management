@model MedicalOfficeManagement.ViewModels.UI.KpiGridModel

<div class="kpi-grid">
    @foreach (var item in Model.Items)
    {
        var toneClass = item.DeltaTone switch
        {
            "success" => "text-emerald-600",
            "warning" => "text-amber-600",
            "danger" => "text-rose-600",
            _ => "text-slate-600"
        };
        <div class="kpi-card">
            <div class="flex items-center justify-between gap-3">
                <div class="text-xs font-semibold uppercase tracking-wide text-slate-500">@item.Label</div>
                @if (!string.IsNullOrEmpty(item.Pill))
                {
                    <span class="badge neutral">@item.Pill</span>
                }
            </div>
            <div class="mt-2 flex items-center gap-3">
                @if (!string.IsNullOrEmpty(item.Icon))
                {
                    <span class="text-brand-600">
                        <span class="iconify w-5 h-5" data-icon="@item.Icon"></span>
                    </span>
                }
                <div class="kpi-value">@item.Value</div>
            </div>
            <div class="mt-1 flex items-center gap-2">
                @if (!string.IsNullOrEmpty(item.Delta))
                {
                    <span class="text-sm font-semibold @toneClass">@item.Delta</span>
                }
                @if (!string.IsNullOrEmpty(item.Helper))
                {
                    <span class="kpi-helper">@item.Helper</span>
                }
            </div>
        </div>
    }
</div>
