@model MedicalOfficeManagement.ViewModels.UI.EmptyStateModel

<div class="empty-state">
    <div class="mx-auto mb-3 flex h-12 w-12 items-center justify-center rounded-full
                @(Model.Tone == "warning" ? "bg-amber-50 text-amber-700" :
                    Model.Tone == "danger" ? "bg-rose-50 text-rose-700" : "bg-brand-50 text-brand-700")">
        @if (!string.IsNullOrEmpty(Model.Icon))
        {
            <span class="iconify w-6 h-6" data-icon="@Model.Icon"></span>
        }
        else
        {
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        }
    </div>
    <h3 class="text-lg font-semibold text-slate-900">@Model.Title</h3>
    @if (!string.IsNullOrEmpty(Model.Body))
    {
        <p class="mt-1 text-sm text-slate-600 max-w-2xl mx-auto">@Model.Body</p>
    }
    <div class="mt-4 flex items-center justify-center gap-2 flex-wrap">
        @if (Model.PrimaryAction != null)
        {
            var styleClass = Model.PrimaryAction.Style switch
            {
                "secondary" => "btn btn-secondary",
                "ghost" => "btn btn-ghost",
                "quiet" => "btn btn-quiet",
                _ => "btn btn-primary"
            };
            if (!string.IsNullOrEmpty(Model.PrimaryAction.Href) && !Model.PrimaryAction.IsButton)
            {
                <a href="@(string.IsNullOrEmpty(Model.PrimaryAction.Href) ? "#" : Model.PrimaryAction.Href)" class="@styleClass">@Model.PrimaryAction.Label</a>
            }
            else
            {
                <button type="button" class="@styleClass" @(Model.PrimaryAction.Disabled ? "disabled aria-disabled=\"true\"" : "") @(string.IsNullOrEmpty(Model.PrimaryAction.DataTarget) ? "" : $"data-target=\"{Model.PrimaryAction.DataTarget}\"")>
                    @Model.PrimaryAction.Label
                </button>
            }
        }
        @if (Model.SecondaryAction != null)
        {
            var styleClass = Model.SecondaryAction.Style switch
            {
                "secondary" => "btn btn-secondary",
                "ghost" => "btn btn-ghost",
                "quiet" => "btn btn-quiet",
                _ => "btn btn-secondary"
            };
            if (!string.IsNullOrEmpty(Model.SecondaryAction.Href) && !Model.SecondaryAction.IsButton)
            {
                <a href="@(string.IsNullOrEmpty(Model.SecondaryAction.Href) ? "#" : Model.SecondaryAction.Href)" class="@styleClass">@Model.SecondaryAction.Label</a>
            }
            else
            {
                <button type="button" class="@styleClass" @(Model.SecondaryAction.Disabled ? "disabled aria-disabled=\"true\"" : "") @(string.IsNullOrEmpty(Model.SecondaryAction.DataTarget) ? "" : $"data-target=\"{Model.SecondaryAction.DataTarget}\"")>
                    @Model.SecondaryAction.Label
                </button>
            }
        }
    </div>
</div>
