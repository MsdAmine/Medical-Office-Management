@model MedicalOfficeManagement.ViewModels.UI.TableShellModel

<div class="table-shell">
    <div class="px-5 py-4 border-b border-slate-200 flex items-start justify-between gap-3 bg-slate-50">
        <div>
            <div class="text-sm font-semibold text-slate-900">@Model.Title</div>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-xs text-slate-600 mt-1">@Model.Description</p>
            }
        </div>
        <div class="flex items-center gap-2 flex-wrap justify-end">
            @foreach (var action in Model.Actions)
            {
                var styleClass = action.Style switch
                {
                    "secondary" => "btn btn-secondary",
                    "ghost" => "btn btn-ghost",
                    "quiet" => "btn btn-quiet",
                    _ => "btn btn-primary"
                };
                if (!string.IsNullOrEmpty(action.Href) && !action.IsButton)
                {
                    <a href="@action.Href" class="@styleClass">@action.Label</a>
                }
                else
                {
                    <button type="button" class="@styleClass" @(action.Disabled ? "disabled aria-disabled=\"true\"" : "") @(string.IsNullOrEmpty(action.DataTarget) ? "" : $"data-target=\"{action.DataTarget}\"")>
                        @action.Label
                    </button>
                }
            }
        </div>
    </div>
    <div class="relative overflow-x-auto max-h-[70vh]">
        @Model.TableContent?.Invoke(null)
    </div>
</div>
