@model MedicalOfficeManagement.ViewModels.Filters.PresetSelectorViewModel
@{
    var ctx = Model.Context;
    var hasPresets = ctx.Presets.Any();
}

<div class="surface border border-slate-200 bg-white p-4 rounded-xl shadow-sm">
    <div class="flex flex-col gap-3 lg:flex-row lg:items-start lg:justify-between">
        <div class="space-y-2">
            <div class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">Saved presets</div>
            @if (!hasPresets)
            {
                <p class="text-sm text-slate-500">No presets saved yet. Apply filters and save them for quick reuse.</p>
            }
            else
            {
                <div class="flex flex-wrap gap-2">
                    @foreach (var preset in ctx.Presets)
                    {
                        var isActive = ctx.IsPresetActive(preset.Id);
                        <form method="get" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" class="inline">
                            <input type="hidden" name="presetId" value="@preset.Id" />
                            <button type="submit" class="inline-flex items-center gap-2 rounded-lg border px-3 py-1.5 text-sm font-semibold @((isActive ? "bg-brand-50 text-brand-800 border-brand-200" : "bg-white text-slate-700 hover:bg-slate-50 border-slate-200"))">
                                <span class="inline-flex items-center gap-1">
                                    @if (isActive)
                                    {
                                        <span class="h-2 w-2 rounded-full bg-brand-500"></span>
                                    }
                                    <span>@preset.Name</span>
                                </span>
                                @if (preset.IsDefault)
                                {
                                    <span class="rounded-full bg-slate-100 px-2 py-0.5 text-[11px] font-semibold text-slate-600">Default</span>
                                }
                            </button>
                        </form>
                    }
                </div>
            }
        </div>
        <div class="flex flex-wrap items-center gap-2">
            <a asp-controller="@Model.ControllerName"
               asp-action="@Model.ActionName"
               asp-route-clearPreset="true"
               class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                Clear preset
            </a>
            <span class="inline-flex items-center gap-1 rounded-lg bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-600">
                <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6" /></svg>
                Manage presets (soon)
            </span>
        </div>
    </div>
</div>
