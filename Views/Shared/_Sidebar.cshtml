<aside id="sidebar" class="fixed left-0 top-16 w-64 h-[calc(100vh-4rem)] bg-white/95 backdrop-blur border-r border-slate-200 shadow-sm overflow-y-auto z-40">
    <nav class="p-4 flex flex-col h-full">
        @{
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();

            string dashboardAction = "Index";
            if (User.IsInRole("Medecin"))
            {
                dashboardAction = "DoctorDashboard";
            }

            var menuItems = new List<(string Controller, string Action, string Label, string Icon, string Description)>
            {
                ("Home", dashboardAction, "Dashboard", "home", "Overview & workload"),
                ("Patients", "Index", "Patients", "users", "Records"),
                ("Appointments", "Index", "Appointments", "calendar", "Scheduling")
            };

            // Pour l'Admin et la Secrétaire : Distinction entre Horaires Fixes et Vacations (Congés)
            if (User.IsInRole("Admin") || User.IsInRole("Secretaire"))
            {
                // 1. Les Horaires hebdomadaires et Affectations de salles
                menuItems.Add(("Schedule", "Index", "Working Hours", "briefcase", "Weekly shifts & rooms"));
                
                // 2. Les Vacations, Congés et Absences (Votre Planning actuel)
                menuItems.Add(("Planning", "Index", "Vacations", "clock", "Absences & leave"));
            }

            if (User.IsInRole("Admin"))
            {
                menuItems.Add(("Medecin", "Index", "Doctors", "user-md", "Staff management"));
                menuItems.Add(("Settings", "Index", "Settings", "cog", "System preferences"));
            }
        }

        <div class="mb-3 px-2 text-xs font-semibold uppercase tracking-wide text-slate-500">Navigation</div>
        <div class="space-y-2">
            @foreach (var item in menuItems)
            {
                var isActive = string.Equals(currentController, item.Controller, StringComparison.OrdinalIgnoreCase);
                <a href="@Url.Action(item.Action, item.Controller)"
                   class="group flex items-center gap-3 px-3 py-3 rounded-xl border transition-all @(isActive ? "border-brand-200 bg-brand-50 text-brand-800 shadow-sm" : "border-transparent text-slate-700 hover:border-slate-200 hover:bg-slate-50")">
                    <span class="h-9 w-9 rounded-lg flex items-center justify-center @(isActive ? "bg-white text-brand-700" : "bg-slate-100 text-slate-600 group-hover:text-brand-700")">
                        @if (item.Icon == "home") { 
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg> 
                        }
                        else if (item.Icon == "users") { 
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg> 
                        }
                        else if (item.Icon == "calendar") { 
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg> 
                        }
                        else if (item.Icon == "briefcase") {
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        }
                        else if (item.Icon == "clock") { 
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg> 
                        }
                        else if (item.Icon == "user-md") { 
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg> 
                        }
                        else if (item.Icon == "cog") { 
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path></svg> 
                        }
                    </span>
                    <div class="flex-1">
                        <div class="flex items-center justify-between">
                            <span class="text-sm font-semibold">@item.Label</span>
                            @if (isActive)
                            {
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-brand-100 text-brand-800">Active</span>
                            }
                        </div>
                        <p class="text-xs text-slate-500 mt-1">@item.Description</p>
                    </div>
                </a>
            }
        </div>

        <div class="mt-auto pt-6 border-t border-slate-100">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="w-full btn-secondary justify-center text-red-600 border-red-100 hover:border-red-200 hover:bg-red-50 py-3 rounded-xl flex items-center gap-2 transition-all">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                    <span class="text-sm font-bold">Sign Out</span>
                </button>
            </form>
        </div>
    </nav>
</aside>