<aside id="sidebar" class="fixed left-0 top-16 w-64 h-[calc(100vh-4rem)] bg-white border-r border-gray-200 overflow-y-auto z-40">
    <nav class="p-4 flex flex-col h-full space-y-1">
        @{
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            var menuItems = new[]
            {
                new { Controller = "Home", Action = "Index", Label = "Dashboard", Icon = "home" },
                new { Controller = "Patients", Action = "Index", Label = "Patients", Icon = "users" },
                new { Controller = "Appointments", Action = "Index", Label = "Appointments", Icon = "calendar" },
                new { Controller = "Medecins", Action = "Index", Label = "Doctors", Icon = "user-md" }
            };
        }
        
        @foreach (var item in menuItems)
        {
            var isActive = currentController == item.Controller;
            <a href="@Url.Action(item.Action, item.Controller)" 
               class="flex items-center space-x-3 px-4 py-3 rounded-lg text-sm font-medium @(isActive ? "bg-blue-50 text-blue-700" : "text-gray-700 hover:bg-gray-50")">
                <span>@item.Label</span>
            </a>
        }

        <div class="mt-auto border-t pt-4">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="w-full flex items-center space-x-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg text-sm font-medium">
                    <span>Sign Out</span>
                </button>
            </form>
        </div>
    </nav>
</aside>