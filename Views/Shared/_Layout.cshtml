<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medical Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-900">

    <header class="fixed top-0 left-0 right-0 h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6 z-50">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center text-white font-bold">M</div>
            <span class="text-xl font-bold tracking-tight">MedicalOffice</span>
        </div>
        <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-500">@User.Identity?.Name</span>
        </div>
    </header>

    <div class="flex pt-16">
        <aside id="sidebar" class="fixed left-0 top-16 w-64 h-[calc(100vh-4rem)] bg-white border-r border-gray-200 overflow-y-auto z-40">
            <nav class="p-4 flex flex-col h-full space-y-1">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    var menuItems = new List<(string Controller, string Action, string Label, string Icon)>
                    {
                        ("Home", "Index", "Dashboard", "home"),
                        ("Patients", "Index", "Patients", "users"),
                        ("Appointments", "Index", "Appointments", "calendar")
                    };

                    if (User.IsInRole("Admin"))
                    {
                        menuItems.Add(("Medecin", "Index", "Doctors", "user-md"));
                        menuItems.Add(("Settings", "Index", "Settings", "cog"));
                    }
                }
                
                @foreach (var item in menuItems)
                {
                    var isActive = string.Equals(currentController, item.Controller, StringComparison.OrdinalIgnoreCase);
                    
                    <a href="@Url.Action(item.Action, item.Controller)" 
                       class="flex items-center space-x-3 px-4 py-3 rounded-lg text-sm font-medium transition-colors @(isActive ? "bg-blue-50 text-blue-700 shadow-sm" : "text-gray-700 hover:bg-gray-50 hover:text-blue-600")">
                        
                        <span class="w-5 h-5 flex items-center justify-center">
                            @if (item.Icon == "home") { <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg> }
                            else if (item.Icon == "users") { <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg> }
                            else if (item.Icon == "calendar") { <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg> }
                            else if (item.Icon == "user-md") { <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg> }
                            else if (item.Icon == "cog") { <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg> }
                        </span>

                        <span>@item.Label</span>
                    </a>
                }

                <div class="mt-auto border-t border-gray-100 pt-4">
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="w-full flex items-center space-x-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg text-sm font-medium transition-colors">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5"><path d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                            <span>Sign Out</span>
                        </button>
                    </form>
                </div>
            </nav>
        </aside>

        <main class="flex-1 ml-64 p-8 min-h-screen">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>