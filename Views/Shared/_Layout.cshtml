<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medical Office</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'ui-sans-serif', 'Segoe UI', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            50: '#eef2ff',
                            100: '#e0e7ff',
                            500: '#4f46e5',
                            600: '#4338ca',
                            700: '#3730a3'
                        },
                        success: '#16a34a',
                        warning: '#eab308',
                        danger: '#dc2626',
                        info: '#0284c7'
                    },
                    boxShadow: {
                        soft: '0 10px 50px -25px rgba(15, 23, 42, 0.35)',
                    }
                }
            }
        }
    </script>
</head>
<body class="app-shell">
    <div class="fixed inset-0 pointer-events-none bg-[radial-gradient(circle_at_10%_20%,rgba(79,70,229,0.06),transparent_25%),radial-gradient(circle_at_90%_10%,rgba(14,165,233,0.08),transparent_20%)]"></div>
    <div class="relative z-10">
        <partial name="_Header" />

        <div class="flex pt-16">
            <partial name="_Sidebar" />

            <main class="flex-1 ml-64">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
