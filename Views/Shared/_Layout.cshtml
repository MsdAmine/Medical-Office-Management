<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medical Office</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'ui-sans-serif', 'Segoe UI', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            50: '#eef2ff',
                            100: '#e0e7ff',
                            500: '#4f46e5',
                            600: '#4338ca',
                            700: '#3730a3'
                        },
                        success: '#16a34a',
                        warning: '#eab308',
                        danger: '#dc2626',
                        info: '#0284c7'
                    },
                    boxShadow: {
                        soft: '0 10px 50px -25px rgba(15, 23, 42, 0.35)',
                    }
                }
            }
        }
    </script>
    <style type="text/tailwindcss">
        @layer base {
            :root { color-scheme: light; }
            body { @apply bg-slate-50 text-slate-900 antialiased font-sans; }
            h1, h2, h3, h4 { @apply tracking-tight text-slate-900; }
        }

        @layer components {
            .app-shell { @apply min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100; }
            .page-shell { @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 space-y-8; }
            .page-header { @apply flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between; }
            .page-title { @apply text-3xl font-semibold leading-tight; }
            .page-subtitle { @apply text-sm text-slate-500; }
            .page-meta { @apply inline-flex items-center gap-2 text-xs font-semibold text-slate-500 uppercase tracking-wide; }

            .surface { @apply bg-white border border-slate-200/80 shadow-sm rounded-2xl; }
            .surface-muted { @apply bg-slate-50 border border-slate-200 rounded-2xl; }
            .section-heading { @apply text-lg font-semibold text-slate-900; }
            .section-caption { @apply text-sm text-slate-500; }

            .btn-primary { @apply inline-flex items-center justify-center gap-2 rounded-lg bg-brand-600 text-white px-4 py-2 text-sm font-semibold shadow-sm hover:bg-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 transition-colors; }
            .btn-secondary { @apply inline-flex items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 hover:text-slate-900 hover:border-slate-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-100; }
            .btn-ghost { @apply inline-flex items-center gap-2 text-sm font-semibold text-slate-600 hover:text-slate-900; }

            .badge-soft { @apply inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold; }
            .badge-soft.blue { @apply bg-brand-50 text-brand-700; }
            .badge-soft.green { @apply bg-green-50 text-green-700; }
            .badge-soft.amber { @apply bg-amber-50 text-amber-700; }
            .badge-soft.red { @apply bg-red-50 text-red-700; }

            .stat-grid { @apply grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4; }
            .stat-card { @apply surface p-5 flex flex-col gap-1; }
            .stat-label { @apply text-xs font-semibold uppercase tracking-wide text-slate-500; }
            .stat-value { @apply text-3xl font-semibold text-slate-900; }
            .stat-trend { @apply text-sm font-medium; }

            .card { @apply surface; }
            .card-body { @apply p-6; }
            .card-heading { @apply flex items-center justify-between gap-3 mb-4; }

            .table-shell { @apply surface overflow-hidden; }
            .table-head { @apply bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500; }
            .table-head th { @apply px-4 py-3 text-left; }
            .table-body tr { @apply border-t border-slate-100 hover:bg-blue-50/40 transition-colors; }
            .table-body td { @apply px-4 py-3 align-middle text-sm text-slate-700; }

            .form-grid { @apply grid grid-cols-1 md:grid-cols-2 gap-6; }
            .form-field { @apply space-y-2; }
            .form-label { @apply text-xs font-semibold uppercase tracking-wide text-slate-500; }
            .form-input { @apply w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-inner shadow-slate-100/50 focus:border-brand-500 focus:ring-2 focus:ring-brand-100; }
            .form-textarea { @apply form-input min-h-[140px]; }
            .form-help { @apply text-xs text-slate-500; }

            .pill { @apply inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-700; }
        }
    </style>
</head>
<body class="app-shell">
    <div class="fixed inset-0 pointer-events-none bg-[radial-gradient(circle_at_10%_20%,rgba(79,70,229,0.06),transparent_25%),radial-gradient(circle_at_90%_10%,rgba(14,165,233,0.08),transparent_20%)]"></div>
    <div class="relative z-10">
        <partial name="_Header" />

        <div class="flex pt-16">
            <partial name="_Sidebar" />

            <main class="flex-1 ml-64">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
