@using Microsoft.AspNetCore.Identity
@using MedicalOfficeManagement.Models
@using MedicalOfficeManagement.ViewModels.Security
@using System.Security.Claims
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var displayName = (user != null && !string.IsNullOrEmpty(user.FirstName))
        ? $"{user.FirstName} {user.LastName}"
        : User.Identity?.Name;
    var roleLabel = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value
                    ?? AccessControl.GetCurrent().CurrentRole.ToString();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
    var moduleLabel = ViewData["Title"] as string ?? controller;
    var trail = new List<(string Label, string? Url, bool Current)>
    {
        ("Home", Url.Action("Index", "Home"), false),
        (moduleLabel, null, true)
    };
}

<header class="fixed top-0 left-0 right-0 h-20 bg-white/90 backdrop-blur border-b border-slate-200 flex items-center justify-between px-6 lg:px-10 z-50 shadow-sm">
    <div class="flex items-center gap-4">
        <div class="h-11 w-11 rounded-2xl bg-gradient-to-br from-brand-500 to-brand-700 text-white font-black flex items-center justify-center shadow-soft">M</div>
        <div>
            <div class="flex items-center gap-2 text-xs text-slate-500">
                @for (var i = 0; i < trail.Count; i++)
                {
                    var crumb = trail[i];
                    if (!string.IsNullOrEmpty(crumb.Url) && !crumb.Current)
                    {
                        <a href="@crumb.Url" class="font-semibold text-slate-700 hover:text-brand-700">@crumb.Label</a>
                    }
                    else
                    {
                        <span class="font-semibold text-slate-900">@crumb.Label</span>
                    }
                    if (i < trail.Count - 1)
                    {
                        <span aria-hidden="true">/</span>
                    }
                }
            </div>
            <div class="flex items-center gap-3">
                <div>
                    <span class="text-sm font-semibold text-slate-900">@moduleLabel</span>
                    <p class="text-xs text-slate-500">Clinical operations console</p>
                </div>
                @if (!string.IsNullOrWhiteSpace(roleLabel))
                {
                    var isAdmin = string.Equals(roleLabel, nameof(AppRole.Admin), StringComparison.OrdinalIgnoreCase);
                    <span class="badge @(isAdmin ? "success" : "info")">@roleLabel</span>
                }
            </div>
        </div>
    </div>

    <div class="flex items-center gap-3">
        <div class="hidden md:flex items-center gap-2 px-3 py-2 rounded-xl border border-slate-200 bg-white shadow-sm">
            <span class="iconify w-4 h-4 text-slate-400" data-icon="solar:clock-circle-bold"></span>
            <span class="text-xs font-semibold text-slate-600">Status</span>
            <span class="badge success">Live</span>
        </div>
        <button class="btn btn-secondary hidden sm:inline-flex">
            <span class="iconify w-4 h-4" data-icon="solar:bolt-bold"></span>
            Command
        </button>
        <div class="flex items-center gap-3 pl-3 border-l border-slate-200">
            <div class="hidden sm:flex flex-col items-end">
                <span class="page-meta">Logged in</span>
                <span class="text-sm font-semibold text-slate-900">@displayName</span>
            </div>
            <div class="h-11 w-11 rounded-xl bg-slate-100 border border-slate-200 flex items-center justify-center text-sm font-bold text-brand-700 shadow-sm">
                @(user?.FirstName?.Substring(0, 1).ToUpper() ?? "A")
            </div>
        </div>
    </div>
</header>
