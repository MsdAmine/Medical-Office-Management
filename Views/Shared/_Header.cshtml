@using Microsoft.AspNetCore.Identity
@using MedicalOfficeManagement.Models
@using MedicalOfficeManagement.ViewModels.Security
@using System.Security.Claims
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var displayName = (user != null && !string.IsNullOrEmpty(user.FirstName))
        ? $"{user.FirstName} {user.LastName}"
        : User.Identity?.Name;
    var roleLabel = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value
                    ?? AccessControl.GetCurrent().CurrentRole.ToString();
}

<header class="fixed top-0 left-0 right-0 h-16 bg-white/95 backdrop-blur border-b border-slate-200 flex items-center justify-between px-6 z-50 shadow-sm">
    <div class="flex items-center gap-3">
        <div class="h-10 w-10 rounded-2xl bg-gradient-to-br from-brand-500 to-brand-700 text-white font-black flex items-center justify-center shadow-soft">M</div>
        <div class="flex flex-col leading-tight">
            <span class="text-sm font-semibold text-slate-900">Medical Office</span>
            <span class="text-xs text-slate-500">Clinical Operations Console</span>
        </div>
    </div>

    <div class="flex items-center gap-4">
        <div class="hidden sm:flex flex-col items-end">
            <span class="page-meta">Logged in</span>
            <span class="text-sm font-semibold text-slate-900">@displayName</span>
        </div>
        @if (!string.IsNullOrWhiteSpace(roleLabel))
        {
            var isAdmin = string.Equals(roleLabel, nameof(AppRole.Admin), StringComparison.OrdinalIgnoreCase);
            <span class="hidden sm:inline-flex items-center gap-1 rounded-full bg-slate-100 text-slate-700 px-3 py-1 text-xs font-semibold border border-slate-200" aria-label="Current role">
                <span class="h-2 w-2 rounded-full @(isAdmin ? "bg-emerald-500" : "bg-indigo-500")"></span>
                @roleLabel
            </span>
        }
        <div class="h-11 w-11 rounded-xl bg-slate-100 border border-slate-200 flex items-center justify-center text-sm font-bold text-brand-700 shadow-sm">
            @(user?.FirstName?.Substring(0, 1).ToUpper() ?? "A")
        </div>
    </div>
</header>
