@model MedicalOfficeManagement.ViewModels.ChartIndexViewModel
@using System.Linq
@{
    ViewData["Title"] = "Medical Charts";
}

<div class="space-y-6">
    <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div>
                <p class="text-sm text-blue-600 font-semibold mb-1 uppercase tracking-wide">Clinical Workspace</p>
                <h1 class="text-2xl font-bold text-slate-900">Medical Charts</h1>
                <p class="text-slate-600 mt-1">Track documentation progress and outstanding sign-offs.</p>
            </div>
            <div class="flex items-center gap-3">
                <a asp-action="Export" class="inline-flex items-center px-4 py-2 rounded-lg border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition">
                    <i class="fas fa-cloud-download-alt mr-2 text-slate-500"></i>
                    Export charts
                </a>
                <a asp-action="Create" class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">
                    <i class="fas fa-plus mr-2"></i>
                    New chart
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Active charts</p>
                <span class="text-blue-500"><i class="fas fa-notes-medical"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.ActiveCharts</div>
            <p class="text-sm text-slate-500 mt-1">In progress across providers</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Pending sign-offs</p>
                <span class="text-amber-500"><i class="fas fa-file-signature"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.PendingSignoffs</div>
            <p class="text-sm text-slate-500 mt-1">Require provider review</p>
        </div>
        <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm">
            <div class="flex items-center justify-between">
                <p class="text-sm text-slate-500">Critical alerts</p>
                <span class="text-red-500"><i class="fas fa-exclamation-triangle"></i></span>
            </div>
            <div class="text-3xl font-bold text-slate-900 mt-2">@Model.CriticalAlerts</div>
            <p class="text-sm text-slate-500 mt-1">Need immediate action</p>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-3 p-6 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">Open charts</h2>
                <p class="text-sm text-slate-600">Monitor documentation status and ownership.</p>
            </div>
            <div class="flex items-center gap-2">
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-filter mr-2 text-slate-500"></i>
                    Filters
                </button>
                <button class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                    <i class="fas fa-sort-amount-down mr-2 text-slate-500"></i>
                    Sort
                </button>
            </div>
        </div>

        <div class="divide-y divide-slate-100">
            @if (Model.Charts?.Any() == true)
            {
                @foreach (var chart in Model.Charts)
                {
                    <div class="p-6 flex flex-col md:flex-row md:items-center justify-between gap-4">
                        <div>
                            <div class="flex items-center gap-3">
                                <div class="h-10 w-10 rounded-lg bg-blue-50 flex items-center justify-center text-blue-600">
                                    <i class="fas fa-user-injured"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-slate-500 uppercase tracking-wide">@(chart.VisitReason)</p>
                                    <p class="text-lg font-semibold text-slate-900">@chart.PatientName</p>
                                    <p class="text-sm text-slate-500">Updated @chart.LastUpdated.ToString("MMM d, HH:mm")</p>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-slate-100 text-slate-800">
                                <i class="fas fa-user-md mr-2 text-slate-500"></i>
                                @chart.Provider
                            </span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetStatusClasses(chart.Status)">
                                <i class="fas fa-circle text-xs mr-2"></i>
                                @chart.Status
                            </span>
                            <a asp-action="Details" asp-route-id="@chart.Id" class="inline-flex items-center px-3 py-2 rounded-lg border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-50">
                                Review
                            </a>
                            <a asp-action="Edit" asp-route-id="@chart.Id" class="inline-flex items-center px-3 py-2 rounded-lg border border-amber-200 text-sm font-medium text-amber-800 hover:bg-amber-50">
                                Edit
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="p-6 text-center text-slate-500">
                    <p class="text-sm font-medium">@Model.StatusMessage ?? "No charts available."</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusClasses(string status)
    {
        return status switch
        {
            "Signed" => "bg-green-100 text-green-800",
            "Awaiting Signature" => "bg-amber-100 text-amber-800",
            "In Review" => "bg-blue-100 text-blue-800",
            _ => "bg-slate-100 text-slate-800"
        };
    }
}
