@* File: Views/Doctors/Index.cshtml *@
@model MedicalOfficeManagement.ViewModels.Doctors.DoctorsIndexViewModel

@{
    ViewBag.Title = "Doctors";
    var primaryCta = "inline-flex items-center gap-2 rounded-xl bg-brand-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-500";
    var secondaryCta = "inline-flex items-center gap-2 rounded-xl border border-brand-200 bg-white px-4 py-2 text-sm font-semibold text-brand-700 hover:border-brand-300 hover:bg-brand-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-500";
    var tertiaryCta = "inline-flex items-center gap-1 rounded-lg px-2 py-1 text-sm font-semibold text-brand-700 hover:bg-brand-50 hover:text-brand-800";
    var access = AccessControl.GetCurrent();
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Staff</div>
            <div>
                <h1 class="page-title">Doctors</h1>
                <p class="page-subtitle">Medical staff directory and schedules</p>
            </div>
        </div>
        @if (access.CanManageStaff)
        {
            <a href="@Url.Action("Create", "Doctors")" class="@primaryCta">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Doctor
            </a>
        }
        else
        {
            <span class="@primaryCta opacity-60 cursor-not-allowed" title="Staff management is limited to administrators">Add Doctor</span>
        }
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="stat-card">
            <div class="stat-label">Total Doctors</div>
            <div class="stat-value">@Model.TotalDoctors</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">On Duty Today</div>
            <div class="stat-value text-success">@Model.OnDutyToday</div>
        </div>
    </div>

    <div class="surface p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="md:col-span-2">
                <label class="form-label">Search</label>
                <div class="relative">
                    <input type="text"
                           placeholder="Search by name or specialty..."
                           class="form-input pl-10">
                    <svg class="absolute left-3 top-2.5 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div>
                <label class="form-label">Specialty</label>
                <select class="form-input">
                    <option>All Specialties</option>
                    <option>Cardiology</option>
                    <option>General Practice</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Dermatology</option>
                    <option>Neurology</option>
                </select>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="form-label">Duty Status</label>
                <select class="form-input">
                    <option>On Duty</option>
                    <option>Off Duty</option>
                    <option>All</option>
                </select>
            </div>
            <div>
                <label class="form-label">Location</label>
                <select class="form-input">
                    <option>All Locations</option>
                    <option>Primary Clinic</option>
                    <option>Telehealth</option>
                    <option>Satellite</option>
                </select>
            </div>
            <div>
                <label class="form-label">Language</label>
                <select class="form-input">
                    <option>Any Language</option>
                    <option>English</option>
                    <option>French</option>
                    <option>Spanish</option>
                </select>
            </div>
        </div>
    </div>

    @if (!Model.Doctors.Any())
    {
        <div class="surface p-10 flex flex-col items-center justify-center text-center gap-4">
            <div class="h-12 w-12 rounded-full bg-brand-50 text-brand-700 flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
            </div>
            <div class="space-y-1">
                <h2 class="text-lg font-semibold text-slate-900">No doctors listed</h2>
                <p class="text-sm text-slate-500">Add your first provider to keep schedules and contact info organized.</p>
            </div>
            <div class="flex flex-wrap items-center justify-center gap-3">
                @if (access.CanManageStaff)
                {
                    <a href="@Url.Action("Create", "Doctors")" class="@primaryCta">Add Doctor</a>
                }
                else
                {
                    <span class="@primaryCta opacity-60 cursor-not-allowed" title="Staff management is limited to administrators">Add Doctor</span>
                }
                <a href="@Url.Action("Index", "Schedule")" class="@tertiaryCta">Open planning</a>
            </div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var doctor in Model.Doctors)
            {
                <div class="surface p-6 border-l-4 @doctor.ColorClass rounded-2xl hover:shadow-md transition-all">
                    <div class="flex items-start justify-between mb-4">
                        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-brand-500 to-brand-700 text-white flex items-center justify-center font-semibold">Dr</div>
                        @if (doctor.IsAvailable)
                        {
                            <span class="badge-soft green">On Duty</span>
                        }
                        else
                        {
                            <span class="badge-soft blue">Off Duty</span>
                        }
                    </div>

                    <h3 class="text-lg font-semibold text-slate-900 mb-1">@doctor.FullName</h3>
                    <div class="flex flex-wrap gap-2 mb-3">
                        <span class="inline-flex items-center gap-1 rounded-full bg-slate-50 px-2 py-1 text-xs font-semibold text-slate-700 ring-1 ring-slate-200">@doctor.Role</span>
                        <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-700 ring-1 ring-indigo-200">@doctor.Specialty</span>
                    </div>

                    <div class="space-y-2 mb-4 text-sm text-slate-600">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            @doctor.Phone
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            @doctor.Email
                        </div>
                        <div class="flex items-center gap-2 text-xs text-slate-500">
                            <span class="font-medium text-slate-700">Location:</span> @doctor.Location
                        </div>
                        <div class="flex items-center gap-2 text-xs text-slate-500">
                            <span class="font-medium text-slate-700">Language:</span> @doctor.Language
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-3 mb-4 text-xs text-slate-600">
                        <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                            <div class="text-slate-500">Next available</div>
                            <div class="font-semibold text-slate-900">@doctor.NextAvailableSlot</div>
                        </div>
                        <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                            <div class="text-slate-500">Patients today</div>
                            <div class="font-semibold text-slate-900">@doctor.PatientsToday</div>
                        </div>
                        <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                            <div class="text-slate-500">First appt</div>
                            <div class="font-semibold text-slate-900">@doctor.FirstAppointment</div>
                        </div>
                        <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                            <div class="text-slate-500">Last appt</div>
                            <div class="font-semibold text-slate-900">@doctor.LastAppointment</div>
                        </div>
                    </div>

                    <div class="relative group mb-4">
                        <div class="flex items-center justify-between text-xs text-slate-600">
                            <div class="font-medium text-slate-800">Next patient</div>
                            <div class="text-slate-500">Arrives in 12m</div>
                        </div>
                        <div class="mt-1 inline-flex items-center gap-2 text-sm font-semibold text-brand-700 cursor-default">
                            <span class="h-2 w-2 rounded-full bg-amber-500"></span> Hover for preview
                        </div>
                        <div class="pointer-events-none absolute left-0 top-full z-10 mt-2 hidden w-64 rounded-lg border border-slate-200 bg-white p-3 shadow-lg transition group-hover:block">
                            <div class="text-xs uppercase tracking-wide text-slate-500 mb-2">Patient preview</div>
                            <div class="flex items-center justify-between text-[11px]">
                                <span class="text-slate-500">Last visit</span>
                                <span class="font-medium text-slate-800">3 weeks ago</span>
                            </div>
                            <div class="flex items-center justify-between text-[11px]">
                                <span class="text-slate-500">Upcoming</span>
                                <span class="font-medium text-slate-800">@doctor.NextAvailableSlot</span>
                            </div>
                            <div class="mt-2 flex flex-wrap gap-2">
                                <span class="inline-flex items-center gap-1 rounded-full bg-rose-50 px-2 py-1 text-[11px] font-semibold text-rose-700 ring-1 ring-rose-200">
                                    <span class="h-2 w-2 rounded-full bg-rose-500"></span>
                                    High Risk
                                </span>
                                <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2 py-1 text-[11px] font-semibold text-indigo-700 ring-1 ring-indigo-200">
                                    <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
                                    Follow-up Due
                                </span>
                            </div>
                        </div>
                    </div>

                    <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="@secondaryCta w-full justify-center">View Profile</a>
                </div>
            }
        </div>
    }
</div>
