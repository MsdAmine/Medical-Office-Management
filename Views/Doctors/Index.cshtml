@* File: Views/Doctors/Index.cshtml *@
@model MedicalOfficeManagement.ViewModels.Doctors.DoctorsIndexViewModel

@{
    ViewBag.Title = "Doctors";
    var primaryCta = "inline-flex items-center gap-2 rounded-xl bg-brand-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-500";
    var canManageStaff = User.IsInRole(nameof(AppRole.Admin));
}

<div class="space-y-6">
    @await Html.PartialAsync("Partials/PageHeader", new PageHeaderModel
    {
        Title = "Doctor directory",
        Subtitle = "Staff availability, specialties, and contact details.",
        ContextTag = "Staff",
        RoleBadge = canManageStaff ? "Admin controls" : "View only",
        RoleTone = canManageStaff ? "success" : "warning",
        Actions = new []
        {
            new ToolbarAction { Label = "Add doctor", Href = Url.Action("Create", "Doctors"), Style = "primary", Disabled = !canManageStaff },
            new ToolbarAction { Label = "Planning", Href = Url.Action("Index", "Schedule"), Style = "secondary" }
        }
    })

    <div class="card p-5 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="md:col-span-2">
                <label class="form-label">Search</label>
                <div class="relative">
                    <input type="text"
                           placeholder="Search by name, specialty, or language..."
                           class="form-input pl-10">
                    <span class="iconify w-5 h-5 text-slate-400 absolute left-3 top-2.5" data-icon="solar:magnifer-bold"></span>
                </div>
            </div>
            <div>
                <label class="form-label">Specialty</label>
                <select class="form-input">
                    <option>All Specialties</option>
                    <option>Cardiology</option>
                    <option>General Practice</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Dermatology</option>
                    <option>Neurology</option>
                </select>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="form-label">Duty Status</label>
                <select class="form-input">
                    <option>On Duty</option>
                    <option>Off Duty</option>
                    <option>All</option>
                </select>
            </div>
            <div>
                <label class="form-label">Location</label>
                <select class="form-input">
                    <option>All Locations</option>
                    <option>Primary Clinic</option>
                    <option>Telehealth</option>
                    <option>Satellite</option>
                </select>
            </div>
            <div>
                <label class="form-label">Language</label>
                <select class="form-input">
                    <option>Any Language</option>
                    <option>English</option>
                    <option>French</option>
                    <option>Spanish</option>
                </select>
            </div>
        </div>
    </div>

    <div id="doctors-live-section"
         data-partial-url="@($"{Url.Action("LivePanel", "Doctors")}{Context.Request.QueryString}")">
        @await Html.PartialAsync("_DoctorsLiveSection", Model)
    </div>
</div>
