@* File: Views/Doctors/Index.cshtml *@
@model MedicalOfficeManagement.ViewModels.Doctors.DoctorsIndexViewModel

@{
    ViewBag.Title = "Doctors";
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Staff</div>
            <div>
                <h1 class="page-title">Doctors</h1>
                <p class="page-subtitle">Medical staff directory and schedules</p>
            </div>
        </div>
        <a href="@Url.Action("Create", "Doctors")" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Doctor
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="stat-card">
            <div class="stat-label">Total Doctors</div>
            <div class="stat-value">@Model.TotalDoctors</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">On Duty Today</div>
            <div class="stat-value text-success">@Model.OnDutyToday</div>
        </div>
    </div>

    <div class="surface p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="md:col-span-2">
                <label class="form-label">Search</label>
                <div class="relative">
                    <input type="text"
                           placeholder="Search by name or specialty..."
                           class="form-input pl-10">
                    <svg class="absolute left-3 top-2.5 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div>
                <label class="form-label">Specialty</label>
                <select class="form-input">
                    <option>All Specialties</option>
                    <option>Cardiology</option>
                    <option>General Practice</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Dermatology</option>
                    <option>Neurology</option>
                </select>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="surface p-6 border-l-4 @doctor.ColorClass rounded-2xl hover:shadow-md transition-all">
                <div class="flex items-start justify-between mb-4">
                    <div class="h-12 w-12 rounded-full bg-gradient-to-br from-brand-500 to-brand-700 text-white flex items-center justify-center font-semibold">Dr</div>
                    @if (doctor.IsAvailable)
                    {
                        <span class="badge-soft green">On Duty</span>
                    }
                    else
                    {
                        <span class="badge-soft blue">Off Duty</span>
                    }
                </div>

                <h3 class="text-lg font-semibold text-slate-900 mb-1">@doctor.FullName</h3>
                <p class="text-sm text-slate-500 mb-4">@doctor.Specialty</p>

                <div class="space-y-2 mb-4 text-sm text-slate-600">
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        @doctor.Phone
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        @doctor.Email
                    </div>
                </div>

                @if (doctor.IsAvailable)
                {
                    <div class="text-sm text-slate-600 mb-4">
                        <span class="font-semibold text-slate-900">@doctor.PatientsToday</span> patients scheduled today
                    </div>
                }

                <a href="@Url.Action("Details", "Doctors", new { id = doctor.Id })" class="btn-secondary w-full justify-center">View Profile</a>
            </div>
        }
    </div>
</div>
