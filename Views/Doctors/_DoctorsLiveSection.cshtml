@* File: Views/Doctors/_DoctorsLiveSection.cshtml *@
@model MedicalOfficeManagement.ViewModels.Doctors.DoctorsIndexViewModel

@await Html.PartialAsync("Partials/KpiGrid", new KpiGridModel
{
    Items = new []
    {
        new KpiCardModel { Label = "Total Doctors", Value = Model.TotalDoctors.ToString(), Helper = "Directory count" },
        new KpiCardModel { Label = "On Duty Today", Value = Model.OnDutyToday.ToString(), Helper = "Scheduled on shift", DeltaTone = "success" }
    }
})

@if (Model.WorkloadHeatmap != null)
{
    <div class="surface mt-6 p-6 space-y-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
                <h2 class="section-heading text-lg font-bold text-slate-800">Todayâ€™s Workload</h2>
                <p class="text-sm text-slate-500">Appointment density per doctor for @Model.WorkloadHeatmap.Date.ToString("dddd")</p>
            </div>
            <form method="get" class="flex flex-wrap items-center gap-2 text-sm text-slate-600">
                <label class="font-semibold text-slate-700">Bucket</label>
                <select name="bucketMinutes" class="form-input w-28" onchange="this.form.submit()">
                    <option value="15" selected="@(Model.SelectedBucketMinutes == 15 ? "selected" : null)">15 minutes</option>
                    <option value="30" selected="@(Model.SelectedBucketMinutes == 30 ? "selected" : null)">30 minutes</option>
                    <option value="60" selected="@(Model.SelectedBucketMinutes == 60 ? "selected" : null)">60 minutes</option>
                </select>
                <label class="font-semibold text-slate-700 ml-2">Hours</label>
                <input type="number" name="startHour" value="@Model.StartHour" class="form-input w-20" min="0" max="23" />
                <span class="px-1 text-slate-400">to</span>
                <input type="number" name="endHour" value="@Model.EndHour" class="form-input w-20" min="1" max="23" />
                <button type="submit" class="btn-secondary ml-2">Apply</button>
            </form>
        </div>
        @await Html.PartialAsync("_Heatmap", Model.WorkloadHeatmap)
    </div>
}

@if (!Model.Doctors.Any())
{
    <div class="surface p-10 flex flex-col items-center justify-center text-center gap-4">
        <div class="h-12 w-12 rounded-full bg-brand-50 text-brand-700 flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
        </div>
        <div class="space-y-1">
            <h2 class="text-lg font-semibold text-slate-900">No doctors listed</h2>
            <p class="text-sm text-slate-500">Add your first provider to keep schedules and contact info organized.</p>
        </div>
        <div class="flex flex-wrap items-center justify-center gap-3">
            <a href="@Url.Action("Create", "Doctors")" class="btn-primary">Add Doctor</a>
            <a href="@Url.Action("Index", "Schedule")" class="btn-ghost text-brand-700">Open planning</a>
        </div>
    </div>
}
else
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var doctor in Model.Doctors)
        {
            <div class="surface p-6 border-l-4 @doctor.ColorClass rounded-2xl hover:shadow-md transition-all">
                <div class="flex items-start justify-between mb-4">
                    <div class="h-12 w-12 rounded-full bg-gradient-to-br from-brand-500 to-brand-700 text-white flex items-center justify-center font-semibold">Dr</div>
                    @if (doctor.IsAvailable)
                    {
                        <span class="badge-soft green">On Duty</span>
                    }
                    else
                    {
                        <span class="badge-soft blue">Off Duty</span>
                    }
                </div>

                <h3 class="text-lg font-semibold text-slate-900 mb-1">@doctor.FullName</h3>
                <div class="flex flex-wrap gap-2 mb-3">
                    <span class="inline-flex items-center gap-1 rounded-full bg-slate-50 px-2 py-1 text-xs font-semibold text-slate-700 ring-1 ring-slate-200">@doctor.Role</span>
                    <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-700 ring-1 ring-indigo-200">@doctor.Specialty</span>
                </div>

                <div class="space-y-2 mb-4 text-sm text-slate-600">
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        @doctor.Phone
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        @doctor.Email
                    </div>
                    <div class="flex items-center gap-2 text-xs text-slate-500">
                        <span class="font-medium text-slate-700">Location:</span> @doctor.Location
                    </div>
                    <div class="flex items-center gap-2 text-xs text-slate-500">
                        <span class="font-medium text-slate-700">Language:</span> @doctor.Language
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-3 mb-4 text-xs text-slate-600">
                    <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                        <div class="text-slate-500">Next available</div>
                        <div class="font-semibold text-slate-900">@doctor.NextAvailableSlot</div>
                    </div>
                    <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                        <div class="text-slate-500">Patients today</div>
                        <div class="font-semibold text-slate-900">@doctor.PatientsToday</div>
                    </div>
                    <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                        <div class="text-slate-500">First appt</div>
                        <div class="font-semibold text-slate-900">@doctor.FirstAppointment</div>
                    </div>
                    <div class="p-3 rounded-lg bg-slate-50 border border-slate-100">
                        <div class="text-slate-500">Last appt</div>
                        <div class="font-semibold text-slate-900">@doctor.LastAppointment</div>
                    </div>
                </div>
            </div>
        }
    </div>
}
