@* File: Views/MedicalRecords/Index.cshtml *@
@model MedicalOfficeManagement.ViewModels.MedicalRecords.MedicalRecordsIndexViewModel

@{
    ViewBag.Title = "Medical Records";
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Records</div>
            <div>
                <h1 class="page-title">Medical Records</h1>
                <p class="page-subtitle">Access and manage patient medical documentation</p>
            </div>
        </div>
        <a href="@Url.Action("Create", "MedicalRecords")" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Record
        </a>
    </div>

    <div class="stat-card">
        <div class="stat-label">Total Medical Records</div>
        <div class="stat-value">@Model.TotalRecords.ToString("N0")</div>
    </div>

    <div class="surface p-6 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="section-heading">Search Records</h2>
                <p class="section-caption">Filter and locate documentation quickly</p>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="md:col-span-2">
                <label class="form-label">Patient Name</label>
                <div class="relative">
                    <input type="text"
                           placeholder="Search by patient name..."
                           class="form-input pl-10">
                    <svg class="absolute left-3 top-2.5 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div>
                <label class="form-label">Record Type</label>
                <select class="form-input">
                    <option>All Types</option>
                    <option>Checkup</option>
                    <option>Visit</option>
                    <option>Lab Results</option>
                    <option>Follow-up</option>
                    <option>Vaccination</option>
                </select>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="form-label">Date From</label>
                <input type="date" class="form-input">
            </div>
            <div>
                <label class="form-label">Date To</label>
                <input type="date" class="form-input">
            </div>
        </div>
    </div>

    <div class="space-y-4">
        @foreach (var record in Model.Records)
        {
            <div class="surface p-6 hover:shadow-md transition-all">
                <div class="flex items-start justify-between">
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-2 text-xs font-semibold text-slate-500 uppercase">
                            <span class="badge-soft blue">@record.RecordType</span>
                            <span>@record.Date.ToString("MMM dd, yyyy")</span>
                        </div>

                        <h3 class="text-lg font-semibold text-slate-900 mb-2">@record.PatientName</h3>
                        <p class="text-sm text-slate-600 mb-3">@record.DiagnosisSummary</p>

                        <div class="flex items-center text-sm text-slate-500 gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            @record.DoctorName
                        </div>
                    </div>

                    <div class="flex flex-col space-y-2 ml-4">
                        <a href="@Url.Action("Details", "MedicalRecords", new { id = record.Id })" class="btn-secondary justify-center">View</a>
                        <a href="#" class="btn-ghost text-brand-700">Download</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="surface px-6 py-3 flex items-center justify-between">
        <div class="text-sm text-slate-600">
            Showing 1 to @Model.Records.Count of @Model.TotalRecords records
        </div>
        <div class="flex items-center gap-2">
            <button class="btn-secondary text-xs px-3 py-1" disabled>Previous</button>
            <button class="btn-primary text-xs px-3 py-1">1</button>
            <button class="btn-secondary text-xs px-3 py-1">2</button>
            <button class="btn-secondary text-xs px-3 py-1">3</button>
            <button class="btn-secondary text-xs px-3 py-1">Next</button>
        </div>
    </div>
</div>
