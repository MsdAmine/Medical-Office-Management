@model GlobalSearchViewModel

@{
    ViewData["Title"] = "Search";
    ViewData["Breadcrumb"] = "Search";
}

<div class="space-y-6">
    <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Global Search</h1>
        <p class="text-slate-600 mt-2">Search across patients and appointments</p>
    </div>

    <div class="glass-card rounded-xl p-6">
        <form method="get" asp-action="Index" class="space-y-4">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" 
                           name="q" 
                           value="@Model.SearchTerm" 
                           placeholder="Search patients, appointments..." 
                           class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           autofocus>
                </div>
                <div>
                    <select name="type" class="px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="all" selected="@(Model.SearchType == "all")">All</option>
                        <option value="patients" selected="@(Model.SearchType == "patients")">Patients</option>
                        <option value="appointments" selected="@(Model.SearchType == "appointments")">Appointments</option>
                    </select>
                </div>
                <button type="submit" class="gradient-primary text-white px-6 py-3 rounded-lg font-medium hover:shadow-lg transition-shadow">
                    <i class="fas fa-search mr-2"></i>
                    Search
                </button>
            </div>
        </form>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
    {
        <div class="space-y-6">
            @if (Model.SearchType == "all" || Model.SearchType == "patients")
            {
                <div class="glass-card rounded-xl overflow-hidden">
                    <div class="p-6 border-b border-slate-200">
                        <h2 class="text-lg font-semibold text-slate-900">
                            Patients (@Model.Patients.Count)
                        </h2>
                    </div>
                    @if (Model.Patients.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-slate-50 border-b border-slate-200">
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Name</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Email</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Phone</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Date of Birth</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-200">
                                    @foreach (var patient in Model.Patients)
                                    {
                                        <tr class="hover:bg-slate-50 transition-colors">
                                            <td class="py-4 px-6 font-semibold text-slate-900">@patient.FullName</td>
                                            <td class="py-4 px-6 text-slate-700">@patient.Email</td>
                                            <td class="py-4 px-6 text-slate-700">@patient.Telephone</td>
                                            <td class="py-4 px-6 text-slate-700">
                                                @(patient.DateOfBirth?.ToString("MMM dd, yyyy") ?? "N/A")
                                            </td>
                                            <td class="py-4 px-6">
                                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@patient.Id" 
                                                   class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-10 text-center">
                            <p class="text-slate-600">No patients found matching "@Model.SearchTerm"</p>
                        </div>
                    }
                </div>
            }

            @if (Model.SearchType == "all" || Model.SearchType == "appointments")
            {
                <div class="glass-card rounded-xl overflow-hidden">
                    <div class="p-6 border-b border-slate-200">
                        <h2 class="text-lg font-semibold text-slate-900">
                            Appointments (@Model.Appointments.Count)
                        </h2>
                    </div>
                    @if (Model.Appointments.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-slate-50 border-b border-slate-200">
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Patient</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Doctor</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Date & Time</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Room</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Status</th>
                                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-slate-200">
                                    @foreach (var appointment in Model.Appointments)
                                    {
                                        var statusBadge = appointment.Status switch
                                        {
                                            "Scheduled" => "bg-blue-100 text-blue-700",
                                            "Completed" => "bg-emerald-100 text-emerald-700",
                                            "Cancelled" => "bg-red-100 text-red-700",
                                            "PendingApproval" or "Pending Approval" => "bg-amber-100 text-amber-700",
                                            _ => "bg-slate-100 text-slate-700"
                                        };

                                        <tr class="hover:bg-slate-50 transition-colors">
                                            <td class="py-4 px-6 font-semibold text-slate-900">@appointment.PatientName</td>
                                            <td class="py-4 px-6 text-slate-700">@appointment.DoctorName</td>
                                            <td class="py-4 px-6">
                                                <div class="text-slate-900 font-medium">@appointment.StartTime.ToString("MMM dd, yyyy")</div>
                                                <div class="text-sm text-slate-600">@appointment.StartTime.ToString("HH:mm") - @appointment.EndTime.ToString("HH:mm")</div>
                                            </td>
                                            <td class="py-4 px-6 text-slate-700">@appointment.Room</td>
                                            <td class="py-4 px-6">
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @statusBadge">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td class="py-4 px-6">
                                                <a asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.Id" 
                                                   class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-10 text-center">
                            <p class="text-slate-600">No appointments found matching "@Model.SearchTerm"</p>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="glass-card rounded-xl p-10 text-center">
            <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-slate-100 text-slate-500 mb-4">
                <i class="fas fa-search text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">Start Searching</h3>
            <p class="text-slate-600">Enter a search term above to find patients and appointments</p>
        </div>
    }
</div>
