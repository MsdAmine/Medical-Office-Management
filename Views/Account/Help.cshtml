@model HelpViewModel

@{
    ViewData["Title"] = "Help & Support";
    ViewData["Breadcrumb"] = "Help & Support";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900 flex items-center">
            <i class="fas fa-question-circle text-blue-600 mr-3"></i>
            Help & Support
        </h1>
        <p class="text-slate-600 mt-2">Need assistance? Send us a message and our support team will get back to you as soon as possible.</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="mb-6 p-4 rounded-lg @(Model.IsSuccess ? "bg-green-50 border border-green-200 text-green-800" : "bg-red-50 border border-red-200 text-red-800")">
            <div class="flex items-center">
                <i class="fas @(Model.IsSuccess ? "fa-check-circle" : "fa-exclamation-circle") mr-2"></i>
                <span>@Model.StatusMessage</span>
            </div>
        </div>
    }

    <div class="bg-white rounded-lg border border-slate-200 p-6 shadow-sm">
        <div class="mb-6">
            <h2 class="text-lg font-semibold text-slate-900 mb-2">Contact Support</h2>
            <p class="text-sm text-slate-600">
                Fill out the form below to send a message to our support team. We typically respond within 24-48 hours.
            </p>
        </div>

        <form asp-action="Help" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Subject -->
            <div>
                <label asp-for="Subject" class="block text-sm font-medium text-slate-900 mb-2">
                    <i class="fas fa-tag text-blue-600 mr-2"></i>
                    Subject
                </label>
                <input asp-for="Subject" 
                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Brief description of your issue or question">
                <span asp-validation-for="Subject" class="text-red-600 text-sm mt-1"></span>
            </div>

            <!-- Message -->
            <div>
                <label asp-for="Message" class="block text-sm font-medium text-slate-900 mb-2">
                    <i class="fas fa-comment-alt text-blue-600 mr-2"></i>
                    Message
                </label>
                <textarea asp-for="Message" 
                          rows="8"
                          class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Please provide as much detail as possible about your issue or question. This will help us assist you more effectively."></textarea>
                <span asp-validation-for="Message" class="text-red-600 text-sm mt-1"></span>
                <p class="text-xs text-slate-500 mt-1">Maximum 5000 characters</p>
            </div>

            <!-- Info Box -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex items-start">
                    <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
                    <div class="text-sm text-blue-800">
                        <p class="font-semibold mb-1">What to include in your message:</p>
                        <ul class="list-disc list-inside space-y-1 text-blue-700">
                            <li>Your account username or email</li>
                            <li>Steps to reproduce the issue (if applicable)</li>
                            <li>Any error messages you've encountered</li>
                            <li>Screenshots (if relevant)</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex items-center justify-end space-x-4 pt-4">
                <a href="/" class="px-6 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50 transition-colors">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                    <i class="fas fa-paper-plane mr-2"></i>
                    Send Message
                </button>
            </div>
        </form>
    </div>

    <!-- Additional Help Resources -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg border border-slate-200 p-6 shadow-sm">
            <div class="flex items-center mb-4">
                <div class="h-12 w-12 rounded-lg bg-blue-100 flex items-center justify-center mr-4">
                    <i class="fas fa-book text-blue-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-slate-900">Documentation</h3>
            </div>
            <p class="text-sm text-slate-600 mb-4">
                Check out our user guides and documentation for common questions and how-to articles.
            </p>
            <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                View Documentation <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>

        <div class="bg-white rounded-lg border border-slate-200 p-6 shadow-sm">
            <div class="flex items-center mb-4">
                <div class="h-12 w-12 rounded-lg bg-green-100 flex items-center justify-center mr-4">
                    <i class="fas fa-clock text-green-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-slate-900">Response Time</h3>
            </div>
            <p class="text-sm text-slate-600 mb-4">
                Our support team typically responds within 24-48 hours during business days.
            </p>
            <p class="text-xs text-slate-500">
                <i class="fas fa-calendar-alt mr-1"></i>
                Monday - Friday, 9:00 AM - 5:00 PM
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
