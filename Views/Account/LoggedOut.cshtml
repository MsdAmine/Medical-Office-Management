@{
    ViewData["Title"] = "Signed Out";
}

<div class="max-w-3xl mx-auto mt-12 bg-white border border-slate-200 rounded-2xl shadow-sm p-8 text-center">
    <div class="flex justify-center mb-6">
        <div class="h-16 w-16 rounded-full bg-emerald-50 text-emerald-600 flex items-center justify-center">
            <i class="fas fa-check text-2xl"></i>
        </div>
    </div>
    <h1 class="text-3xl font-bold text-slate-900 mb-3">You have been signed out</h1>
    <p class="text-slate-600 mb-8">
        Your session has ended successfully. You can close this window or return to the dashboard when you're ready.
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
        <a href="/" class="inline-flex items-center px-5 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition">
            <i class="fas fa-home mr-2"></i>
            Return to Home
        </a>
        <a href="/Identity/Account/Login" class="inline-flex items-center px-5 py-3 rounded-lg border border-slate-300 text-slate-700 font-semibold hover:bg-slate-50 transition">
            <i class="fas fa-sign-in-alt mr-2"></i>
            Go to Login
        </a>
    </div>
</div>