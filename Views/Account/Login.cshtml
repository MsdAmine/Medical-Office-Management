@model LoginViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="w-full max-w-6xl bg-slate-900 rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row relative">
        <!-- Left Card: Dramatic Visual Panel -->
        <div class="md:w-1/2 relative overflow-hidden bg-gradient-to-br from-slate-900 to-black">
            <!-- Background Image Overlay -->
            <div class="absolute inset-0 bg-cover bg-center opacity-90" 
                 style="background-image: url('https://images.unsplash.com/photo-1419242902214-272b3f66ee7a?q=80&w=2000'); filter: brightness(0.7) saturate(1.2);">
            </div>
            
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-900/40 via-purple-900/30 to-orange-900/40"></div>
            
            <!-- Content -->
            <div class="relative z-10 h-full min-h-[500px] md:min-h-[600px] p-8 md:p-12 flex flex-col justify-between">
                <!-- Top Section -->
                <div>
                    <!-- Logo -->
                    <div class="inline-block mb-12">
                        <div class="flex items-center space-x-3 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">
                            <div class="h-8 w-8 rounded-full bg-gradient-to-br from-blue-400 to-indigo-600 flex items-center justify-center">
                                <i class="fas fa-stethoscope text-white text-sm"></i>
                            </div>
                            <span class="text-white font-bold text-lg">MedOffice</span>
                        </div>
                    </div>

                    <!-- Main Title -->
                    <div class="space-y-4 max-w-md">
                        <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight">
                            Selected Works
                        </h1>
                        <p class="text-blue-200 text-lg">
                            Premium medical practice management platform
                        </p>
                    </div>
                </div>

                <!-- Bottom Section -->
                <div class="space-y-6">
                    <!-- User Info Card -->
                    <div class="inline-flex items-center space-x-3 bg-white/10 backdrop-blur-md rounded-2xl px-5 py-3 border border-white/20">
                        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-blue-400 to-cyan-500 flex items-center justify-center flex-shrink-0 ring-2 ring-white/30">
                            <i class="fas fa-user-md text-white"></i>
                        </div>
                        <div>
                            <p class="text-white font-semibold">Healthcare Provider</p>
                            <p class="text-blue-200 text-sm">Secure Portal Access</p>
                        </div>
                    </div>

                    <!-- Navigation Arrows -->
                    <div class="flex space-x-3">
                        <button class="h-10 w-10 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 flex items-center justify-center hover:bg-white/20 transition">
                            <i class="fas fa-chevron-left text-white text-sm"></i>
                        </button>
                        <button class="h-10 w-10 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 flex items-center justify-center hover:bg-white/20 transition">
                            <i class="fas fa-chevron-right text-white text-sm"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute top-20 right-20 h-32 w-32 bg-blue-500/20 rounded-full blur-3xl"></div>
            <div class="absolute bottom-32 left-20 h-40 w-40 bg-purple-500/20 rounded-full blur-3xl"></div>
        </div>

        <!-- Right Card: Login Form -->
        <div class="md:w-1/2 bg-white p-8 md:p-12 flex flex-col justify-center">
            <!-- Logo for Mobile -->
            <div class="md:hidden mb-8 flex justify-center">
                <div class="flex items-center space-x-2">
                    <div class="h-10 w-10 rounded-lg bg-gradient-to-br from-blue-600 to-indigo-800 flex items-center justify-center">
                        <i class="fas fa-stethoscope text-white"></i>
                    </div>
                    <span class="text-2xl font-bold text-slate-900">UISOCIAL</span>
                </div>
            </div>

            <!-- Form Header -->
            <div class="mb-8">
                <h2 class="text-3xl font-bold text-slate-900 mb-2">Hi Designer</h2>
                <p class="text-slate-500">Welcome to UISOCIAL</p>
            </div>

            <!-- Login Form -->
            <form asp-action="Login" method="post" class="space-y-5" asp-route-returnUrl="@Model.ReturnUrl">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" 
                     class="bg-red-50 border-l-4 border-red-500 rounded p-3 text-red-700 text-sm">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-circle mt-0.5 mr-2"></i>
                        <span>Please correct the errors below</span>
                    </div>
                </div>

                <!-- Email -->
                <div class="space-y-2">
                    <label asp-for="UsernameOrEmail" class="block text-sm font-medium text-slate-700">
                        Email
                    </label>
                    <input asp-for="UsernameOrEmail"
                           type="text"
                           class="w-full px-4 py-3 border-b-2 border-slate-200 focus:border-slate-900 focus:outline-none transition bg-transparent"
                           placeholder="">
                    <span asp-validation-for="UsernameOrEmail" class="text-red-600 text-xs"></span>
                </div>

                <!-- Password -->
                <div class="space-y-2">
                    <label asp-for="Password" class="block text-sm font-medium text-slate-700">
                        Password
                    </label>
                    <div class="relative">
                        <input asp-for="Password"
                               type="password"
                               id="Password"
                               class="w-full px-4 py-3 border-b-2 border-slate-200 focus:border-slate-900 focus:outline-none transition bg-transparent pr-12"
                               placeholder="">
                        <button type="button"
                                class="absolute right-0 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600"
                                onclick="togglePassword()">
                            <i class="fas fa-eye text-sm"></i>
                        </button>
                    </div>
                    <div class="flex justify-end">
                        <a href="#" class="text-sm text-red-500 hover:text-red-600 font-medium">
                            Forgot password ?
                        </a>
                    </div>
                    <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                </div>

                <!-- Remember Me -->
                <div class="flex items-center pt-2">
                    <input asp-for="RememberMe"
                           type="checkbox"
                           class="h-4 w-4 text-slate-900 border-slate-300 rounded focus:ring-slate-900">
                    <label asp-for="RememberMe" class="ml-2 text-sm text-slate-700">
                        or
                    </label>
                </div>

                <!-- Hidden ReturnUrl -->
                <input type="hidden" asp-for="ReturnUrl" />

                <!-- Google Login -->
                <button type="button"
                        class="w-full bg-white border border-slate-200 hover:border-slate-300 text-slate-700 py-3 rounded-lg font-medium transition flex items-center justify-center space-x-2 shadow-sm hover:shadow">
                    <svg class="h-5 w-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Login with Google</span>
                </button>

                <!-- Submit Button -->
                <button type="submit"
                        class="w-full bg-gradient-to-r from-red-500 to-orange-500 hover:from-red-600 hover:to-orange-600 text-white py-3.5 rounded-lg font-semibold transition shadow-lg hover:shadow-xl">
                    Login
                </button>

                <!-- Sign Up Link -->
                <p class="text-center text-sm text-slate-600 pt-2">
                    Don't have an account? 
                    <a href="#" class="text-red-500 hover:text-red-600 font-semibold">Sign up</a>
                </p>
            </form>

            <!-- Social Links -->
            <div class="flex justify-center space-x-4 mt-8 pt-8 border-t border-slate-100">
                <a href="#" class="h-10 w-10 rounded-full bg-slate-100 hover:bg-slate-200 flex items-center justify-center transition">
                    <i class="fab fa-facebook-f text-slate-600 text-sm"></i>
                </a>
                <a href="#" class="h-10 w-10 rounded-full bg-slate-100 hover:bg-slate-200 flex items-center justify-center transition">
                    <i class="fab fa-twitter text-slate-600 text-sm"></i>
                </a>
                <a href="#" class="h-10 w-10 rounded-full bg-slate-100 hover:bg-slate-200 flex items-center justify-center transition">
                    <i class="fab fa-pinterest-p text-slate-600 text-sm"></i>
                </a>
                <a href="#" class="h-10 w-10 rounded-full bg-slate-100 hover:bg-slate-200 flex items-center justify-center transition">
                    <i class="fab fa-instagram text-slate-600 text-sm"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const eyeIcon = document.querySelector('button[onclick="togglePassword()"] i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        // Optional: Add subtle parallax effect to background
        document.addEventListener('mousemove', (e) => {
            const bg = document.querySelector('.bg-cover');
            if (bg) {
                const x = (e.clientX / window.innerWidth - 0.5) * 20;
                const y = (e.clientY / window.innerHeight - 0.5) * 20;
                bg.style.transform = `translate(${x}px, ${y}px) scale(1.1)`;
            }
        });
    </script>

    <style>
        /* Smooth transitions for background */
        .bg-cover {
            transition: transform 0.3s ease-out;
        }

        /* Custom focus styles */
        input:focus {
            outline: none;
        }

        /* Glassmorphism effect enhancement */
        .backdrop-blur-sm {
            backdrop-filter: blur(12px);
        }

        .backdrop-blur-md {
            backdrop-filter: blur(16px);
        }
    </style>
}