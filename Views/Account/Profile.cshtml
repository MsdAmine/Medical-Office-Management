@model ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
    ViewData["Breadcrumb"] = "Profile";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">My Profile</h1>
        <p class="text-slate-600 mt-2">Update your personal information</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="mb-6 p-4 rounded-lg @(Model.IsSuccess ? "bg-green-50 border border-green-200 text-green-800" : "bg-red-50 border border-red-200 text-red-800")">
            <div class="flex items-center">
                <i class="fas @(Model.IsSuccess ? "fa-check-circle" : "fa-exclamation-circle") mr-2"></i>
                <span>@Model.StatusMessage</span>
            </div>
        </div>
    }

    <form asp-action="Profile" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <div class="bg-white rounded-lg border border-slate-200 p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center">
                <i class="fas fa-user-circle text-blue-600 mr-2"></i>
                Personal Information
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- First Name -->
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="FirstName" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter first name">
                    <span asp-validation-for="FirstName" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Last Name -->
                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="LastName" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter last name">
                    <span asp-validation-for="LastName" class="text-red-600 text-sm mt-1"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-slate-200 p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center">
                <i class="fas fa-envelope text-blue-600 mr-2"></i>
                Account Information
            </h2>
            
            <div class="space-y-6">
                <!-- Username -->
                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="UserName" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter username">
                    <span asp-validation-for="UserName" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Email" 
                           type="email"
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter email address">
                    <span asp-validation-for="Email" class="text-red-600 text-sm mt-1"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-slate-200 p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center">
                <i class="fas fa-phone text-blue-600 mr-2"></i>
                Contact Information
            </h2>
            
            <div class="space-y-6">
                <!-- Phone Number -->
                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="PhoneNumber" 
                           type="tel"
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter phone number">
                    <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Address -->
                <div>
                    <label asp-for="Address" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <textarea asp-for="Address" 
                              rows="3"
                              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                              placeholder="Enter address"></textarea>
                    <span asp-validation-for="Address" class="text-red-600 text-sm mt-1"></span>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-end space-x-4 pt-4">
            <a href="/" class="px-6 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50 transition-colors">
                Cancel
            </a>
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                <i class="fas fa-save mr-2"></i>
                Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
