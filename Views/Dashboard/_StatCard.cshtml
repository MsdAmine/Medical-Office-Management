@* File: Views/Dashboard/_StatCard.cshtml *@
@model MedicalOfficeManagement.ViewModels.Dashboard.StatCardViewModel

@{
    var cardStateClasses = Model.IsEmptyState
        ? "border border-dashed border-slate-200 bg-slate-50"
        : string.Empty;
    var trendClasses = Model.TrendTone switch
    {
        "positive" => "text-emerald-600",
        "negative" => "text-rose-600",
        _ => "text-slate-500"
    };
    var valueClasses = Model.IsEmptyState ? "text-slate-400" : "text-slate-900";
}

<a href="@Model.Url" class="block focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-500 rounded-2xl">
    <div class="stat-card @cardStateClasses">
        <div class="flex items-start justify-between gap-3">
            <div class="flex-1">
                <div class="stat-label">@Model.Label</div>
                <div class="stat-value @valueClasses">@Model.Value</div>
                @if (!string.IsNullOrWhiteSpace(Model.Subtext))
                {
                    <p class="stat-trend @trendClasses">@Model.Subtext</p>
                }
            </div>
            <div class="h-12 w-12 rounded-xl bg-slate-100 text-brand-700 flex items-center justify-center">
                @switch (Model.Icon)
                {
                    case "calendar":
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        break;
                    case "users":
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                        break;
                    case "flask":
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                        </svg>
                        break;
                    case "mail":
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        break;
                }
            </div>
        </div>
    </div>
</a>
