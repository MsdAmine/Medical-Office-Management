@model dynamic

<div class="surface p-6 space-y-4">
    @if (ViewBag.Title != null)
    {
        <div class="flex items-center justify-between">
            <h3 class="section-heading">@ViewBag.Title</h3>
            @if (ViewBag.Meta != null)
            {
                <span class="pill">@ViewBag.Meta</span>
            }
        </div>
    }

    <div class="space-y-3">
        @RenderBody()
    </div>

    @if (ViewBag.FooterLink != null && ViewBag.FooterText != null)
    {
        <div class="pt-4 border-t border-slate-100 flex items-center justify-between">
            <a href="@ViewBag.FooterLink" class="btn-ghost text-brand-700 hover:text-brand-800">
                @ViewBag.FooterText â†’
            </a>
        </div>
    }
</div>
