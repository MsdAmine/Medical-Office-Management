@model Patient
@{
    ViewData["Title"] = "Delete Patient";
}
<div class="max-w-2xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">Delete Patient</h1>
        <p class="text-slate-600 mt-2">Remove patient record from the system</p>
    </div>
    <!-- Warning Message -->
    <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
        <div class="flex items-center mb-4">
            <div class="h-10 w-10 rounded-full bg-red-100 flex items-center justify-center mr-4">
                <i class="fas fa-exclamation-triangle text-red-600"></i>
            </div>
            <div>
                <h2 class="text-lg font-semibold text-red-900">Warning: This action cannot be undone</h2>
                <p class="text-red-700 mt-1">This will permanently delete the patient record.</p>
            </div>
        </div>
    </div>
    <!-- Patient Information -->
    <div class="bg-white rounded-lg border border-slate-200 p-6 mb-8">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Patient Details</h3>
        <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-500">Last Name</label>
                    <p class="mt-1 text-slate-900">
                    @Model.Nom
                    </p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-500">First Name</label>
                    <p class="mt-1 text-slate-900">
                    @Model.Prenom
                    </p>
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-500">Date of Birth</label>
                <p class="mt-1 text-slate-900">
                    @(Model.DateNaissance?.ToString("dd MMMM yyyy") ?? "-")
                </p>
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-500">Gender</label>
                <p class="mt-1 text-slate-900">
                @Model.Sexe
                </p>
            </div>
            @if (!string.IsNullOrEmpty(Model.Email))
            {
                <div>
                    <label class="block text-sm font-medium text-slate-500">Email</label>
                    <p class="mt-1 text-slate-900">
                    @Model.Email
                    </p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Telephone))
            {
                <div>
                    <label class="block text-sm font-medium text-slate-500">Phone</label>
                    <p class="mt-1 text-slate-900">
                    @Model.Telephone
                    </p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Adresse))
            {
                <div>
                    <label class="block text-sm font-medium text-slate-500">Address</label>
                    <p class="mt-1 text-slate-900">
                    @Model.Adresse
                    </p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Antecedents))
            {
                <div>
                    <label class="block text-sm font-medium text-slate-500">Medical History</label>
                    <p class="mt-1 text-slate-900 whitespace-pre-line">
                    @Model.Antecedents
                    </p>
                </div>
            }
        </div>
    </div>
    <!-- Confirmation Form -->
    <div class="bg-white rounded-lg border border-slate-200 p-6">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="mb-6">
                <label class="flex items-start">
                    <input type="checkbox"
                           id="confirmDelete"
                           name="confirmDelete"
                           required
                           class="mt-1 mr-3 h-5 w-5 text-red-600 border-slate-300 rounded focus:ring-red-500">
                    <span class="text-slate-700">I confirm that I want to permanently delete this patient record.</span>
                </label>
            </div>
            <div class="flex flex-col sm:flex-row sm:items-center justify-end space-y-4 sm:space-y-0 sm:space-x-4">
                <a
                    asp-action="Details"
                    asp-route-id="@Model.Id"
                    class="inline-flex justify-center items-center px-4 py-2 border border-slate-300 rounded-lg font-medium text-slate-700 hover:bg-slate-50 transition">
                    Cancel
                </a>
                <button
                    type="submit"
                    id="deleteButton"
                    class="inline-flex justify-center items-center px-4 py-2 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition disabled:opacity-50 disabled:cursor-not-allowed">
                    Delete Patient
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
<script>document.addEventListener('DOMContentLoaded', function() {
        const deleteButton = document.getElementById('deleteButton');
        const confirmCheckbox = document.getElementById('confirmDelete');

        // Disable delete button initially
        deleteButton.disabled = true;

        // Enable/disable delete button based on confirmation
        confirmCheckbox.addEventListener('change', function() {
            deleteButton.disabled = !this.checked;
        });

        // Final confirmation on submit
        const form = document.querySelector('form');
        form.addEventListener('submit', function(e) {
            if (!confirm('Are you sure you want to delete this patient? This action cannot be undone.')) {
                e.preventDefault();
            }
        });
    });</script>
}