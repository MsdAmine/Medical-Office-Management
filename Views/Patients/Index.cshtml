@model IEnumerable<MedicalOfficeManagement.Models.Patient>

@{
    ViewData["Title"] = "Patients";
    ViewData["Breadcrumb"] = "Patients";

    bool canEdit = User.IsInRole(SystemRoles.Secretaire);
}

<div class="space-y-6">

    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">Patients</h1>
            <p class="text-slate-600 mt-2">Manage registered patients</p>
        </div>

        <div class="flex items-center space-x-3">
            @if (canEdit)
            {
                <a asp-action="Create"
                   class="gradient-primary text-white px-4 py-2 rounded-lg font-medium
                          hover:shadow-lg transition-shadow flex items-center">
                    <i class="fas fa-user-plus mr-2"></i>
                    New Patient
                </a>
            }
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="glass-card rounded-xl p-6">
        <form method="get" action="@Url.Action("Index")" class="space-y-4">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-slate-900">Search & Filter</h3>
                @if (!string.IsNullOrWhiteSpace(ViewData["SearchTerm"]?.ToString()))
                {
                    <a asp-action="Index" class="text-sm text-slate-600 hover:text-slate-900">Clear</a>
                }
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-slate-400"></i>
                        </div>
                        <input type="text"
                               name="searchTerm"
                               value="@ViewData["SearchTerm"]"
                               placeholder="Search by name, email, or phone..."
                               class="pl-10 pr-4 py-2 border border-slate-300 rounded-lg w-full
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Sort By</label>
                    <select name="sortBy" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="Nom" selected="@(ViewData["SortBy"]?.ToString() == "Nom")">Last Name</option>
                        <option value="Prenom" selected="@(ViewData["SortBy"]?.ToString() == "Prenom")">First Name</option>
                        <option value="Date" selected="@(ViewData["SortBy"]?.ToString() == "Date")">Date Created</option>
                        <option value="Email" selected="@(ViewData["SortBy"]?.ToString() == "Email")">Email</option>
                    </select>
                </div>
            </div>
            <input type="hidden" name="sortOrder" value="@(ViewData["SortOrder"]?.ToString() == "desc" ? "asc" : "desc")" />
            <div class="flex items-center gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">
                    <i class="fas fa-search mr-2"></i>Search
                </button>
                <a asp-action="Index" class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 font-medium">
                    Reset
                </a>
            </div>
        </form>
    </div>

    <!-- Patients Table -->
    <div class="glass-card rounded-xl overflow-hidden">

        <!-- Table Header -->
        <div class="p-6 border-b border-slate-200">
            <h2 class="text-lg font-semibold text-slate-900">Patient List</h2>
            <p class="text-sm text-slate-600">
                Showing @Model.Count() patient(s)
            </p>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-slate-50 border-b border-slate-200">
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                            <a href="?sortBy=Nom&sortOrder=@(ViewData["SortBy"]?.ToString() == "Nom" && ViewData["SortOrder"]?.ToString() == "asc" ? "desc" : "asc")" class="hover:text-blue-600">
                                Nom complet
                                @if (ViewData["SortBy"]?.ToString() == "Nom")
                                {
                                    <i class="fas fa-sort-@(ViewData["SortOrder"]?.ToString() == "desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                            Date de naissance
                        </th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                            Contact
                        </th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                            Adresse
                        </th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                            <a href="?sortBy=Date&sortOrder=@(ViewData["SortBy"]?.ToString() == "Date" && ViewData["SortOrder"]?.ToString() == "asc" ? "desc" : "asc")" class="hover:text-blue-600">
                                Créé le
                                @if (ViewData["SortBy"]?.ToString() == "Date")
                                {
                                    <i class="fas fa-sort-@(ViewData["SortOrder"]?.ToString() == "desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="text-left py-4 px-6 text-sm font-semibold text-slate-900">
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-slate-200">
                    @foreach (var patient in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="py-4 px-6 font-medium text-slate-900">
                                @patient.Nom @patient.Prenom
                            </td>

                            <td class="py-4 px-6 text-slate-700">
                                @(patient.DateNaissance?.ToString("yyyy-MM-dd") ?? "-")
                            </td>

                            <td class="py-4 px-6 text-slate-700">
                                <div class="flex flex-col">
                                    @if (!string.IsNullOrWhiteSpace(patient.Email))
                                    {
                                        <a href="mailto:@patient.Email" class="text-blue-600 hover:text-blue-700 text-sm">
                                            <i class="fas fa-envelope mr-1"></i>@patient.Email
                                        </a>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(patient.Telephone))
                                    {
                                        <a href="tel:@patient.Telephone" class="text-slate-700 hover:text-slate-900 text-sm">
                                            <i class="fas fa-phone mr-1"></i>@patient.Telephone
                                        </a>
                                    }
                                </div>
                            </td>

                            <td class="py-4 px-6 text-slate-700">
                                @patient.Adresse
                            </td>
                            <td class="py-4 px-6 text-slate-700">
                                @(patient.CreatedAt == default ? "-" : patient.CreatedAt.ToLocalTime().ToString("g"))
                            </td>

                            <td class="py-4 px-6">
                                <div class="flex items-center space-x-2">
                                    <a asp-action="Details"
                                       asp-route-id="@patient.Id"
                                       class="p-2 text-slate-600 hover:text-blue-600
                                              hover:bg-blue-50 rounded-lg"
                                       title="View details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    @if (canEdit)
                                    {
                                        <a asp-action="Edit"
                                           asp-route-id="@patient.Id"
                                           class="p-2 text-slate-600 hover:text-emerald-600
                                                  hover:bg-emerald-50 rounded-lg"
                                           title="Edit patient">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Appointments" asp-action="Create" asp-route-patientId="@patient.Id"
                                           class="p-2 text-slate-600 hover:text-blue-600
                                                  hover:bg-blue-50 rounded-lg"
                                           title="Create appointment">
                                            <i class="fas fa-calendar-plus"></i>
                                        </a>
                                    }

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        @if (!Model.Any())
        {
            <div class="p-12 text-center">
                <div class="inline-flex h-16 w-16 items-center justify-center
                            rounded-full bg-slate-100 text-slate-500 mb-4">
                    <i class="fas fa-user-injured text-2xl"></i>
                </div>

                <h3 class="text-lg font-semibold text-slate-900 mb-2">
                    No patients found
                </h3>
                <p class="text-slate-600 mb-6">
                    Start by registering a new patient.
                </p>

                @if (canEdit)
                {
                    <a asp-action="Create"
                       class="gradient-primary text-white px-6 py-3 rounded-lg
                              font-medium hover:shadow-lg transition-shadow inline-flex items-center">
                        <i class="fas fa-user-plus mr-2"></i>
                        Add Patient
                    </a>
                }
            </div>
        }
    </div>
</div>

