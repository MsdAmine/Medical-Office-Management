@* File: Views/Patients/Index.cshtml *@
@model MedicalOfficeManagement.ViewModels.Patients.PatientsIndexViewModel

@{
    ViewBag.Title = "Patients";
}

<div class="page-shell">
    <div class="page-header">
        <div class="space-y-2">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 text-brand-700 px-3 py-1 text-xs font-semibold uppercase tracking-wide">Patients</div>
            <div>
                <h1 class="page-title">Patients</h1>
                <p class="page-subtitle">Manage patient records and information</p>
            </div>
        </div>
        <button type="button" id="open-add-patient" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Patient
        </button>
    </div>

    <div class="stat-grid">
        <div class="stat-card">
            <div class="stat-label">Total Patients</div>
            <div class="stat-value">@Model.TotalPatients.ToString("N0")</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Active Patients</div>
            <div class="stat-value text-success">@Model.ActivePatients.ToString("N0")</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">New This Month</div>
            <div class="stat-value text-brand-700">@Model.NewThisMonth</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Engagement</div>
            <div class="stat-value text-slate-900">82%</div>
        </div>
    </div>

    <div class="surface p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="md:col-span-2">
                <label class="form-label">Search</label>
                <div class="relative">
                    <input type="text"
                           placeholder="Search by name, phone, or email..."
                           class="form-input pl-10">
                    <svg class="absolute left-3 top-2.5 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div>
                <label class="form-label">Status</label>
                <select class="form-input">
                    <option>All Statuses</option>
                    <option>Active</option>
                    <option>Inactive</option>
                    <option>Pending</option>
                </select>
            </div>
            <div>
                <label class="form-label">Sort By</label>
                <select class="form-input">
                    <option>Last Visit</option>
                    <option>Name (A-Z)</option>
                    <option>Name (Z-A)</option>
                    <option>Patient ID</option>
                </select>
            </div>
        </div>
    </div>

    <div class="table-shell">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="table-head">
                    <tr>
                        <th class="px-6 py-3">Patient ID</th>
                        <th class="px-6 py-3">Full Name</th>
                        <th class="px-6 py-3">Phone</th>
                        <th class="px-6 py-3">Email</th>
                        <th class="px-6 py-3">Last Visit</th>
                        <th class="px-6 py-3">Status</th>
                        <th class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-body">
                    @foreach (var patient in Model.Patients)
                    {
                        var tone = patient.StatusColor?.Contains("green") == true
                            ? "green"
                            : patient.StatusColor?.Contains("red") == true
                                ? "red"
                                : "blue";

                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-slate-900">#@patient.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="@Url.Action("Details", "Patients", new { id = patient.Id })" class="text-sm font-semibold text-brand-700 hover:text-brand-800">
                                    @patient.FullName
                                </a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@patient.Phone</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@patient.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@patient.LastVisit.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="badge-soft @tone">@patient.Status</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm space-x-3">
                                <a href="@Url.Action("Details", "Patients", new { id = patient.Id })" class="btn-ghost text-brand-700">View</a>
                                <button type="button"
                                        class="btn-ghost open-edit-patient"
                                        data-id="@patient.Id"
                                        data-name="@patient.FullName"
                                        data-phone="@patient.Phone"
                                        data-email="@patient.Email"
                                        data-status="@patient.Status">
                                    Edit
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="bg-slate-50 px-6 py-3 border-t border-slate-200 flex items-center justify-between">
            <div class="text-sm text-slate-600">
                Showing 1 to @Model.Patients.Count of @Model.TotalPatients patients
            </div>
            <div class="flex items-center gap-2">
                <button class="btn-secondary text-xs px-3 py-1" disabled>Previous</button>
                <button class="btn-primary text-xs px-3 py-1">1</button>
                <button class="btn-secondary text-xs px-3 py-1">2</button>
                <button class="btn-secondary text-xs px-3 py-1">3</button>
                <button class="btn-secondary text-xs px-3 py-1">Next</button>
            </div>
        </div>
    </div>
</div>

<div id="add-patient-modal" class="fixed inset-0 bg-slate-900/50 flex items-center justify-center z-50 hidden">
    <div class="surface w-full max-w-xl p-6 space-y-4 shadow-lg">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-xl font-semibold text-slate-900">Add Patient</h2>
                <p class="text-sm text-slate-500">Create a new patient record.</p>
            </div>
            <button type="button" class="text-slate-400 hover:text-slate-600" data-close-modal>
                <span class="sr-only">Close</span>
                &times;
            </button>
        </div>
        <form action="@Url.Action("Create", "Patients")" method="post" class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="form-field">
                    <label class="form-label">Full Name</label>
                    <input name="FullName" type="text" class="form-input" placeholder="Jane Doe" required>
                </div>
                <div class="form-field">
                    <label class="form-label">Status</label>
                    <select name="Status" class="form-input">
                        <option value="Active">Active</option>
                        <option value="Pending">Pending</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="form-field">
                    <label class="form-label">Phone</label>
                    <input name="Phone" type="tel" class="form-input" placeholder="(555) 123-4567">
                </div>
                <div class="form-field">
                    <label class="form-label">Email</label>
                    <input name="Email" type="email" class="form-input" placeholder="jane.doe@email.com">
                </div>
            </div>
            <div class="flex items-center justify-end gap-3 pt-2">
                <button type="button" class="btn-secondary" data-close-modal>Cancel</button>
                <button type="submit" class="btn-primary">Save Patient</button>
            </div>
        </form>
    </div>
</div>

<div id="edit-patient-modal" class="fixed inset-0 bg-slate-900/50 flex items-center justify-center z-50 hidden">
    <div class="surface w-full max-w-xl p-6 space-y-4 shadow-lg">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-xl font-semibold text-slate-900">Edit Patient</h2>
                <p class="text-sm text-slate-500">Update patient contact information and status.</p>
            </div>
            <button type="button" class="text-slate-400 hover:text-slate-600" data-close-modal>
                <span class="sr-only">Close</span>
                &times;
            </button>
        </div>
        <form action="@Url.Action("Edit", "Patients")" method="post" class="space-y-4">
            <input type="hidden" name="Id" id="edit-patient-id" />
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="form-field">
                    <label class="form-label">Full Name</label>
                    <input name="FullName" id="edit-patient-name" type="text" class="form-input" required>
                </div>
                <div class="form-field">
                    <label class="form-label">Status</label>
                    <select name="Status" id="edit-patient-status" class="form-input">
                        <option value="Active">Active</option>
                        <option value="Pending">Pending</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="form-field">
                    <label class="form-label">Phone</label>
                    <input name="Phone" id="edit-patient-phone" type="tel" class="form-input">
                </div>
                <div class="form-field">
                    <label class="form-label">Email</label>
                    <input name="Email" id="edit-patient-email" type="email" class="form-input">
                </div>
            </div>
            <div class="flex items-center justify-end gap-3 pt-2">
                <button type="button" class="btn-secondary" data-close-modal>Cancel</button>
                <button type="submit" class="btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const addModal = document.getElementById('add-patient-modal');
        const editModal = document.getElementById('edit-patient-modal');
        const addTrigger = document.getElementById('open-add-patient');
        const editButtons = document.querySelectorAll('.open-edit-patient');

        const toggleModal = (modal, isOpen) => {
            if (!modal) return;
            modal.classList.toggle('hidden', !isOpen);
        };

        addTrigger?.addEventListener('click', () => toggleModal(addModal, true));

        editButtons.forEach(button => {
            button.addEventListener('click', () => {
                const { id, name, phone, email, status } = button.dataset;
                document.getElementById('edit-patient-id').value = id;
                document.getElementById('edit-patient-name').value = name || '';
                document.getElementById('edit-patient-phone').value = phone || '';
                document.getElementById('edit-patient-email').value = email || '';
                document.getElementById('edit-patient-status').value = status || 'Active';
                toggleModal(editModal, true);
            });
        });

        document.querySelectorAll('[data-close-modal]').forEach(button => {
            button.addEventListener('click', () => {
                toggleModal(addModal, false);
                toggleModal(editModal, false);
            });
        });

        [addModal, editModal].forEach(modal => {
            modal?.addEventListener('click', (event) => {
                if (event.target === modal) {
                    toggleModal(modal, false);
                }
            });
        });
    });
</script>
