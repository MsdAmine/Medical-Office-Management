@model MedicalOfficeManagement.Models.Patient

<div class="max-w-4xl mx-auto p-6">
    <div class="mb-8 flex justify-between items-end">
        <div>
            <a asp-action="Index" class="text-sm text-slate-500 hover:text-brand-600 transition">← Back to Directory</a>
            <h1 class="text-3xl font-bold text-slate-800 mt-2">Edit Patient: @Model.Prenom @Model.Nom</h1>
            <p class="text-slate-500">Update the patient's personal and medical information.</p>
        </div>
    </div>

    <form asp-action="Edit" class="space-y-6">
        @* Champ caché pour l'ID (Crucial pour la mise à jour) *@
        <input type="hidden" asp-for="Id" />

        <div class="bg-white p-8 rounded-xl shadow-sm border border-slate-200">
            <h2 class="text-lg font-semibold text-slate-700 mb-6 border-b pb-2">Personal Identity</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="Nom" class="block text-sm font-medium text-slate-700 mb-1">Last Name</label>
                    <input asp-for="Nom" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 outline-none transition" />
                    <span asp-validation-for="Nom" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Prenom" class="block text-sm font-medium text-slate-700 mb-1">First Name</label>
                    <input asp-for="Prenom" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 outline-none transition" />
                    <span asp-validation-for="Prenom" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="DateNaissance" class="block text-sm font-medium text-slate-700 mb-1">Date of Birth</label>
                    @* Utilisation de l'input type date pour gérer le DateOnly? *@
                    <input asp-for="DateNaissance" type="date" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" />
                    <span asp-validation-for="DateNaissance" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Sexe" class="block text-sm font-medium text-slate-700 mb-1">Gender</label>
                    <select asp-for="Sexe" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none bg-white">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <h2 class="text-lg font-semibold text-slate-700 mb-6 border-b pb-2 mt-8">Contact & Location</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="Telephone" class="block text-sm font-medium text-slate-700 mb-1">Phone Number</label>
                    <input asp-for="Telephone" type="tel" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" />
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1">Email Address</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" />
                </div>
            </div>

            <div class="mb-6">
                <label asp-for="Adresse" class="block text-sm font-medium text-slate-700 mb-1">Home Address</label>
                <input asp-for="Adresse" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" />
            </div>

            <h2 class="text-lg font-semibold text-slate-700 mb-6 border-b pb-2 mt-8">Medical History</h2>
            
            <div>
                <label asp-for="Antecedents" class="block text-sm font-medium text-slate-700 mb-1">History / Allergies / Notes</label>
                <textarea asp-for="Antecedents" rows="5" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none resize-none"></textarea>
            </div>
        </div>

        <div class="flex items-center gap-4">
            <button type="submit" class="flex-1 bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 rounded-lg transition shadow-md">
                Update Patient File
            </button>
            <a asp-action="Index" class="px-6 py-3 border border-slate-300 text-slate-600 font-semibold rounded-lg hover:bg-slate-50 transition">
                Cancel
            </a>
        </div>
    </form>
</div>