@model Patient

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">Edit Patient</h1>
        <p class="text-slate-600 mt-2">Update patient information</p>
    </div>

    <form asp-action="Edit" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="bg-white rounded-lg border border-slate-200 p-6">
            <h2 class="text-lg font-semibold text-slate-900 mb-6">Patient Information</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Last Name -->
                <div>
                    <label asp-for="Nom" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Nom" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter last name">
                    <span asp-validation-for="Nom" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- First Name -->
                <div>
                    <label asp-for="Prenom" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Prenom" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter first name">
                    <span asp-validation-for="Prenom" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Date of Birth -->
                <div>
                    <label asp-for="DateNaissance" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="DateNaissance" 
                           type="date"
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <span asp-validation-for="DateNaissance" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Gender -->
                <div>
                    <label asp-for="Sexe" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <select asp-for="Sexe" 
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Sexe" class="text-red-600 text-sm mt-1"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-slate-200 p-6">
            <h2 class="text-lg font-semibold text-slate-900 mb-6">Contact Information</h2>
            
            <div class="space-y-6">
                <!-- Address -->
                <div>
                    <label asp-for="Adresse" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Adresse" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter address">
                    <span asp-validation-for="Adresse" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Phone -->
                <div>
                    <label asp-for="Telephone" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Telephone" 
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter phone number">
                    <span asp-validation-for="Telephone" class="text-red-600 text-sm mt-1"></span>
                </div>

                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-900 mb-2"></label>
                    <input asp-for="Email" 
                           type="email"
                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter email address">
                    <span asp-validation-for="Email" class="text-red-600 text-sm mt-1"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-slate-200 p-6">
            <h2 class="text-lg font-semibold text-slate-900 mb-6">Medical Information</h2>
            
            <div>
                <label asp-for="Antecedents" class="block text-sm font-medium text-slate-900 mb-2"></label>
                <textarea asp-for="Antecedents" 
                          rows="4"
                          class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Enter medical history"></textarea>
                <span asp-validation-for="Antecedents" class="text-red-600 text-sm mt-1"></span>
            </div>
        </div>

        <div class="bg-white rounded-lg border border-slate-200 p-6">
            <h2 class="text-lg font-semibold text-slate-900 mb-6">Audit</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
                <div class="p-4 border border-slate-200 rounded-lg bg-slate-50">
                    <div class="text-slate-500 uppercase tracking-wide text-xs font-semibold mb-1">Created</div>
                    <div class="font-medium text-slate-900">
                        @(Model.CreatedAt == default ? "-" : Model.CreatedAt.ToLocalTime().ToString("f"))
                    </div>
                    <div class="text-slate-600 mt-1">
                        By @(!string.IsNullOrWhiteSpace(Model.CreatedBy) ? Model.CreatedBy : "Unknown")
                    </div>
                </div>

                <div class="p-4 border border-slate-200 rounded-lg bg-slate-50">
                    <div class="text-slate-500 uppercase tracking-wide text-xs font-semibold mb-1">Last Updated</div>
                    <div class="font-medium text-slate-900">
                        @(Model.UpdatedAt?.ToLocalTime().ToString("f") ?? "-")
                    </div>
                    <div class="text-slate-600 mt-1">
                        By @(!string.IsNullOrWhiteSpace(Model.UpdatedBy) ? Model.UpdatedBy : "Unknown")
                    </div>
                </div>

                @if (Model.IsDeleted)
                {
                    <div class="p-4 border border-red-200 rounded-lg bg-red-50 md:col-span-2">
                        <div class="text-red-600 font-semibold">Deleted</div>
                        <div class="text-red-700 text-sm">
                            @(Model.DeletedAt?.ToLocalTime().ToString("f") ?? "-") by @(!string.IsNullOrWhiteSpace(Model.DeletedBy) ? Model.DeletedBy : "Unknown")
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="flex flex-col sm:flex-row sm:items-center justify-between pt-6 border-t border-slate-200">
            <div>
                <a asp-action="Details" asp-route-id="@Model.Id" 
                   class="inline-flex items-center px-4 py-2 border border-slate-300 rounded-lg font-medium text-slate-700 hover:bg-slate-50 transition">
                    Cancel
                </a>
            </div>
            <div class="flex space-x-3 mt-4 sm:mt-0">
                <a asp-action="Delete" asp-route-id="@Model.Id" 
                   class="inline-flex items-center px-4 py-2 border border-red-300 text-red-700 rounded-lg font-medium hover:bg-red-50 transition">
                    Delete
                </a>
                <button type="submit" 
                        class="inline-flex items-center px-6 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition">
                    Save Changes
                </button>
            </div>
        </div>
    </form>
</div>
