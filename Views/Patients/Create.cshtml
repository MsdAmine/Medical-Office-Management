@model MedicalOfficeManagement.Models.Patient

<div class="max-w-3xl mx-auto p-6">
    <div class="mb-8 flex justify-between items-end">
        <div>
            <a asp-action="Index" class="text-sm text-slate-500 hover:text-brand-600 transition">← Back to Patient List</a>
            <h1 class="text-3xl font-bold text-slate-800 mt-2">New Patient File</h1>
            <p class="text-slate-500">Please fill in all medical and contact information.</p>
        </div>
    </div>

    <form asp-action="Create" class="space-y-6">
        <div class="bg-white p-8 rounded-xl shadow-sm border border-slate-200">
            <h2 class="text-lg font-semibold text-slate-700 mb-6 border-b pb-2">Personal Identity</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                @* Nom *@
                <div>
                    <label asp-for="Nom" class="block text-sm font-medium text-slate-700 mb-1">Last Name</label>
                    <input asp-for="Nom" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 outline-none transition" placeholder="e.g. Smith" />
                    <span asp-validation-for="Nom" class="text-red-500 text-xs"></span>
                </div>

                @* Prenom *@
                <div>
                    <label asp-for="Prenom" class="block text-sm font-medium text-slate-700 mb-1">First Name</label>
                    <input asp-for="Prenom" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 outline-none transition" placeholder="e.g. John" />
                    <span asp-validation-for="Prenom" class="text-red-500 text-xs"></span>
                </div>

                @* Date de Naissance (DateOnly?) *@
                <div>
                    <label asp-for="DateNaissance" class="block text-sm font-medium text-slate-700 mb-1">Date of Birth</label>
                    <input asp-for="DateNaissance" type="date" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" />
                    <span asp-validation-for="DateNaissance" class="text-red-500 text-xs"></span>
                </div>

                @* Sexe *@
                <div>
                    <label asp-for="Sexe" class="block text-sm font-medium text-slate-700 mb-1">Gender</label>
                    <select asp-for="Sexe" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none appearance-none bg-white">
                        <option value="">Select gender...</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <h2 class="text-lg font-semibold text-slate-700 mb-6 border-b pb-2 mt-8">Contact Information</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                @* Téléphone *@
                <div>
                    <label asp-for="Telephone" class="block text-sm font-medium text-slate-700 mb-1">Phone Number</label>
                    <input asp-for="Telephone" type="tel" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" placeholder="+212 600-000000" />
                </div>

                @* Email *@
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1">Email Address</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" placeholder="john.doe@example.com" />
                </div>
            </div>

            @* Adresse *@
            <div class="mb-6">
                <label asp-for="Adresse" class="block text-sm font-medium text-slate-700 mb-1">Home Address</label>
                <input asp-for="Adresse" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none" placeholder="Street name, City, Zip code" />
            </div>

            <h2 class="text-lg font-semibold text-slate-700 mb-6 border-b pb-2 mt-8">Medical Context</h2>
            
            @* Antécédents (Medical History) *@
            <div>
                <label asp-for="Antecedents" class="block text-sm font-medium text-slate-700 mb-1">Medical History / Allergies</label>
                <textarea asp-for="Antecedents" rows="4" class="w-full px-4 py-2 border border-slate-300 rounded-lg outline-none resize-none" placeholder="List any chronic illnesses, previous surgeries, or allergies..."></textarea>
            </div>
        </div>

        <div class="flex items-center gap-4">
            <button type="submit" class="flex-1 bg-brand-600 hover:bg-brand-700 text-white font-bold py-3 rounded-lg transition shadow-lg">
                Create Patient Record
            </button>
            <a asp-action="Index" class="px-6 py-3 border border-slate-300 text-slate-600 font-semibold rounded-lg hover:bg-slate-50 transition">
                Cancel
            </a>
        </div>
    </form>
</div>