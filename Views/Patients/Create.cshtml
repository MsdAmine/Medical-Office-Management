@model MedicalOfficeManagement.Models.Patient

@{
    ViewData["Title"] = "Create Patient";
    ViewData["Breadcrumb"] = "Patient Management";
    var canCreate = User.IsInRole(SystemRoles.Secretaire);
}

@if (!canCreate)
{
    <div class="max-w-md mx-auto">
        <div class="bg-red-50 border border-red-200 rounded-xl p-8 text-center">
            <div class="h-16 w-16 rounded-full bg-red-100 flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
            </div>
            <h3 class="text-xl font-bold text-red-900 mb-2">Access Denied</h3>
            <p class="text-red-700 mb-6">You don't have permission to register new patients.</p>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white border border-red-300 text-red-700 rounded-lg hover:bg-red-50 transition">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Patients
            </a>
        </div>
    </div>
}
else
{
    <div class="max-w-4xl mx-auto">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900">New Patient Registration</h1>
            <p class="text-slate-600 mt-2">Create a new patient record in the system</p>
        </div>

        <form asp-action="Create" method="post" class="space-y-8">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex items-start">
                    <i class="fas fa-exclamation-circle text-red-600 mt-0.5 mr-3"></i>
                    <div class="text-red-700 text-sm">
                        <p class="font-medium mb-1">Please correct the following errors:</p>
                        <ul class="list-disc pl-4">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Personal Information Card -->
            <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center">
                    <i class="fas fa-user-circle text-blue-600 mr-3"></i>
                    Personal Information
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Last Name -->
                    <div>
                        <label asp-for="Nom" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-slate-400"></i>
                            </div>
                            <input asp-for="Nom" 
                                   class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                   placeholder="Enter last name">
                        </div>
                        <span asp-validation-for="Nom" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <!-- First Name -->
                    <div>
                        <label asp-for="Prenom" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-slate-400"></i>
                            </div>
                            <input asp-for="Prenom" 
                                   class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                   placeholder="Enter first name">
                        </div>
                        <span asp-validation-for="Prenom" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <!-- Date of Birth -->
                    <div>
                        <label asp-for="DateNaissance" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-calendar-alt text-slate-400"></i>
                            </div>
                            <input asp-for="DateNaissance" 
                                   type="date"
                                   class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                        </div>
                        <span asp-validation-for="DateNaissance" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <!-- Gender -->
                    <div>
                        <label asp-for="Sexe" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-venus-mars text-slate-400"></i>
                            </div>
                            <select asp-for="Sexe" 
                                    class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition appearance-none bg-white">
                                <option value="">Select gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <i class="fas fa-chevron-down text-slate-400"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Sexe" class="text-red-600 text-sm mt-1 block"></span>
                    </div>
                </div>
            </div>

            <!-- Contact Information Card -->
            <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center">
                    <i class="fas fa-address-book text-blue-600 mr-3"></i>
                    Contact Information
                </h2>
                
                <div class="space-y-6">
                    <!-- Address -->
                    <div>
                        <label asp-for="Adresse" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-home text-slate-400"></i>
                            </div>
                            <input asp-for="Adresse" 
                                   class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                   placeholder="Enter full address">
                        </div>
                        <span asp-validation-for="Adresse" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label asp-for="Telephone" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-phone text-slate-400"></i>
                            </div>
                            <input asp-for="Telephone" 
                                   class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                   placeholder="Enter phone number">
                        </div>
                        <span asp-validation-for="Telephone" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-slate-900 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-slate-400"></i>
                            </div>
                            <input asp-for="Email" 
                                   type="email"
                                   class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                   placeholder="Enter email address">
                        </div>
                        <span asp-validation-for="Email" class="text-red-600 text-sm mt-1 block"></span>
                    </div>
                </div>
            </div>

            <!-- Medical Information Card -->
            <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
                <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center">
                    <i class="fas fa-file-medical text-blue-600 mr-3"></i>
                    Medical Information
                </h2>
                
                <div>
                    <label asp-for="Antecedents" class="block text-sm font-medium text-slate-900 mb-2">
                        Medical History
                        <span class="text-slate-500 text-sm font-normal">(optional)</span>
                    </label>
                    <div class="relative">
                        <div class="absolute top-3 left-3">
                            <i class="fas fa-clipboard-list text-slate-400"></i>
                        </div>
                        <textarea asp-for="Antecedents" 
                                  rows="4"
                                  class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition resize-none"
                                  placeholder="Enter any relevant medical history, allergies, or conditions"></textarea>
                    </div>
                    <span asp-validation-for="Antecedents" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row sm:items-center justify-between pt-6 border-t border-slate-200">
                <div>
                    <a asp-action="Index" 
                       class="inline-flex items-center px-5 py-2.5 border border-slate-300 rounded-lg font-medium text-slate-700 hover:bg-slate-50 transition">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Patients
                    </a>
                </div>
                <div class="flex space-x-3 mt-4 sm:mt-0">
                    <button type="reset" 
                            class="inline-flex items-center px-5 py-2.5 border border-slate-300 rounded-lg font-medium text-slate-700 hover:bg-slate-50 transition">
                        <i class="fas fa-redo mr-2"></i>
                        Reset Form
                    </button>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-2.5 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition shadow-sm hover:shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        <i class="fas fa-save mr-2"></i>
                        Create Patient
                    </button>
                </div>
            </div>
        </form>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Real-time validation feedback
            const inputs = document.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    const isValid = this.checkValidity();
                    const parent = this.parentElement;
                    
                    if (isValid && this.value.trim() !== '') {
                        parent.classList.remove('border-red-500');
                        parent.classList.add('border-green-500');
                    } else if (!isValid && this.hasAttribute('required')) {
                        parent.classList.add('border-red-500');
                        parent.classList.remove('border-green-500');
                    } else {
                        parent.classList.remove('border-red-500', 'border-green-500');
                    }
                });
            });

            // Phone number formatting
            const phoneInput = document.querySelector('input[asp-for="Telephone"]');
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    
                    if (value.length > 0) {
                        value = value.match(/.{1,4}/g).join(' ');
                    }
                    
                    e.target.value = value;
                });
            }

            // Date of birth max validation
            const dobInput = document.querySelector('input[type="date"]');
            if (dobInput) {
                const today = new Date().toISOString().split('T')[0];
                dobInput.max = today;
            }
        });
    </script>
}